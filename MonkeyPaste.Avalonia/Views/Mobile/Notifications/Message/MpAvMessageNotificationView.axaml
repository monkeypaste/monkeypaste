<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:svg="clr-namespace:Avalonia.Svg;assembly=Avalonia.Svg"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Name="MessageNotificationWindow"
                       x:DataType="local:MpAvMessageNotificationViewModel"
                       x:CompileBindings="True"
                       x:Class="MonkeyPaste.Avalonia.MpAvMessageNotificationView">
  <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="7"
            BorderBrush="{Binding BorderHexColor, Converter={x:Static local:MpAvStringHexToBrushConverter.Instance}}"
            Background="{Binding BackgroundHexColor, Converter={x:Static local:MpAvStringHexToBrushConverter.Instance}}"
            local:MpAvIsHoveringExtension.IsEnabled="True"
            local:MpAvIsHoveringExtension.IsHovering="{Binding IsHovering, Mode=TwoWay}">
    <Grid ColumnDefinitions="Auto,0.8*,Auto">
      <!--  ICON  -->
      <Image Grid.Column="0"
             Classes="squareByWidth"
             Margin="3,3,10,3"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Width="64"
             Height="64"
             IsVisible="{Binding IconSourceObj, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
             Source="{Binding IconSourceObj, Converter={x:Static local:MpAvStringHexToBitmapTintConverter.Instance}, ConverterParameter=ThemeInteractiveColor}"
             Stretch="Fill" />
      <StackPanel Grid.Column="1"
                  Margin="0,3,0,20"
                  Orientation="Vertical"
                  Spacing="3">

        <!--  TITLE  -->
        <local:MpAvMarqueeTextBox AutoMarquee="True"
                                  EditOnFocus="False"
                                  MinWidth="200"
                                  MinHeight="30"
                                  FontSize="24"
                                  IsReadOnly="True"
                                  IsMarqueeEnabled="True"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Left"
                                  HorizontalContentAlignment="Left"
                                  VerticalContentAlignment="Top"
                                  FontWeight="SemiBold"
                                  Text="{Binding Title}" />

        <!--  UNDERLINE  -->

        <Border HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                Margin="0,0,0,0"
                Background="{DynamicResource ThemeWhiteColor}"
                Height="1" />

        <!--  BODY  -->

        <SelectableTextBlock HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             TextWrapping="WrapWithOverflow"
                             FontSize="14"
                             MaxHeight="200"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             FontWeight="SemiBold"
                             Background="Transparent"
                             Focusable="True"
                             Foreground="{DynamicResource ThemeWhiteColor}"
                             Text="{Binding Body}" />
      </StackPanel>

      <!--  OPTIONS BUTTON  -->

      <local:MpAvOptionsButton Grid.Column="2"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Foreground="{DynamicResource ThemeWhiteColor}"
                               Command="{Binding ShowOptionsPopupCommand}"
                               CommandParameter="{Binding $self}" />
    </Grid>
  </Border>
</local:MpAvUserControl>
