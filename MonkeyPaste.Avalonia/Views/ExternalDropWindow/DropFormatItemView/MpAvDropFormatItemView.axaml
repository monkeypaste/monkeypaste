<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvClipboardFormatPresetViewModel"
                       x:DataType="local:MpAvClipboardFormatPresetViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvDropFormatItemView">
    <local:MpAvUserControl.Styles>
        <Style Selector="Border#OuterBorder">
            <Setter Property="BorderBrush"
                    Value="White" />
        </Style>
        <Style Selector="Border#OuterBorder:not(.itemEnabled)">
            <Setter Property="BorderBrush"
                    Value="Red" />
        </Style>

        <Style Selector="Border#OuterBorder TextBlock">
            <Setter Property="Foreground"
                    Value="White" />
        </Style>
        <Style Selector="Border#OuterBorder:not(.itemEnabled) TextBlock">
            <Setter Property="Foreground"
                    Value="Red" />
        </Style>
    </local:MpAvUserControl.Styles>
    <Border x:Name="OuterBorder"
            Classes.itemEnabled="{Binding IsEnabled}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Width="65"
            Height="65"
            Background="Transparent"
            CornerRadius="5"
            BorderThickness="1">
        <Grid HorizontalAlignment="Stretch"
              IsHitTestVisible="False"
              DragDrop.AllowDrop="False"
              VerticalAlignment="Stretch"
              RowDefinitions="40,15">
            <Grid.Styles>
                <Style Selector="TextBlock"
                       x:DataType="local:MpAvClipboardFormatPresetViewModel">
                    <Setter Property="TextAlignment"
                            Value="Center" />
                    <Setter Property="FontSize"
                            Value="12" />
                    <Setter Property="Height"
                            Value="15" />
                    <Setter Property="HorizontalAlignment"
                            Value="Stretch" />
                    <Setter Property="Background"
                            Value="Transparent" />
                </Style>
            </Grid.Styles>
            <Image Grid.Row="0"
                   DragDrop.AllowDrop="False"
                   Width="30"
                   Height="30"
                   Margin="5"
                   Stretch="Fill"
                   Source="{Binding IconId, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />

            <TextBlock Grid.Row="1"
                       DragDrop.AllowDrop="False"
                       Text="{Binding Parent.Title}" />
        </Grid>
    </Border>
</local:MpAvUserControl>
