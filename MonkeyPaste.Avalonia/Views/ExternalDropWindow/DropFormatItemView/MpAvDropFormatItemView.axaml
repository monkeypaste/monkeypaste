<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvClipboardFormatPresetViewModel"
                       x:DataType="local:MpAvClipboardFormatPresetViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvDropFormatItemView">
    <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Height="65"
            Margin="0,0,0,0"
            Background="Transparent"
            CornerRadius="5"
            BorderThickness="1"
            BorderBrush="{Binding DropItemBorderHexColor, Converter={StaticResource StringHexToBrushConverter}}">
        <Grid HorizontalAlignment="Stretch"
              IsHitTestVisible="False"
              DragDrop.AllowDrop="False"
              VerticalAlignment="Stretch"
              RowDefinitions="40,15">
            <Grid.Styles>
                <Style Selector="TextBlock"
                       x:DataType="local:MpAvClipboardFormatPresetViewModel">
                    <Setter Property="TextAlignment"
                            Value="Center" />
                    <Setter Property="FontSize"
                            Value="12" />
                    <Setter Property="Height"
                            Value="15" />
                    <Setter Property="HorizontalAlignment"
                            Value="Stretch" />
                    <Setter Property="Background"
                            Value="Transparent" />
                </Style>
            </Grid.Styles>
            <Image Grid.Row="0"
                   DragDrop.AllowDrop="False"
                   Width="30"
                   Height="30"
                   Margin="5"
                   Stretch="Fill"
                   Source="{Binding IconId, Converter={StaticResource IconSourceObjToBitmapConverter}}" />

            <TextBlock Grid.Row="1"
                       DragDrop.AllowDrop="False"
                       Foreground="{Binding DropItemTitleHexColor, Converter={StaticResource StringHexToBrushConverter}}"
                       Text="{Binding Parent.Title}" />
        </Grid>
    </Border>
</local:MpAvUserControl>
