<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="750"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       d:DataContext="{x:Static local:MpAvDesignData.ShortcutCollection}"
                       x:TypeArguments="local:MpAvShortcutCollectionViewModel"
                       x:DataType="local:MpAvShortcutCollectionViewModel"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvShortcutCollectionViewModel.Instance}"
                       x:Class="MonkeyPaste.Avalonia.MpAvShortcutsView">
    <local:MpAvUserControl.Styles>
        <!--  ROW BG  -->
        <Style Selector="DataGridRow:nth-child(odd)">
            <Setter Property="Background"
                    Value="Khaki" />
        </Style>
        <Style Selector="DataGridRow:nth-child(even)">
            <Setter Property="Background"
                    Value="PapayaWhip" />
        </Style>
        <!--  ROUTING COMBOBOX  -->
        <Style Selector="ComboBox ComboBoxItem">


            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalContentAlignment"
                    Value="Stretch" />
        </Style>

        <!--  RESET/DELETE BUTTON  -->

        <Style Selector="Button#ResetOrDeleteButton">
            <Setter Property="ToolTip.Tip">
                <Setter.Value>
                    <Template>
                        <local:MpAvToolTipView ToolTipText="Reset" />
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>
        <Style Selector="Button#ResetOrDeleteButton.canDelete">
            <Setter Property="ToolTip.Tip">
                <Setter.Value>
                    <Template>
                        <local:MpAvToolTipView ToolTipText="Delete" />
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="Button#ResetOrDeleteButton Image">
            <Setter Property="Source"
                    Value="{Binding Source={StaticResource ResetImage}, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />
        </Style>
        <Style Selector="Button#ResetOrDeleteButton.canDelete Image">
            <Setter Property="Source"
                    Value="{Binding Source={StaticResource DeleteImage}, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />
        </Style>
    </local:MpAvUserControl.Styles>
    <DataGrid x:Name="ShortcutDatagrid"
              CanUserSortColumns="False"
              Focusable="True"
              FontFamily="Calibri"
              GridLinesVisibility="All"
              Background="Khaki"
              Items="{Binding EditableItems}"
              SelectedIndex="{Binding SelectedShortcutIndex, Mode=TwoWay}"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
              SelectionMode="Single"
              RowHeight="40"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              IsReadOnly="True"
              Margin="15"
              AutoGenerateColumns="False">
        <DataGrid.Columns>
            <!--  APP/GLOBAL LABEL  -->
            <DataGridTextColumn Header="Type"
                                Width="100"
                                Binding="{Binding ShortcutTypeName}" />

            <!--  SHORTCUT TYPE LABEL  -->
            <DataGridTextColumn Header="Action"
                                CanUserResize="True"
                                Width="*"
                                Binding="{Binding ShortcutDisplayName}" />
            <!--  GESTURE VIEW  -->
            <DataGridTemplateColumn Width="150"
                                    Header="Shortcut"
                                    CanUserResize="True"
                                    SortMemberPath="KeyString">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <local:MpAvShortcutView Background="Transparent"
                                                Margin="5"
                                                HorizontalAlignment="Center"
                                                local:MpAvPointerCommandExtension.IsEnabled="True"
                                                local:MpAvPointerCommandExtension.LeftPressCommand="{Binding AssignCommand}"
                                                local:MpAvPointerCommandExtension.RoutingStrategy="Tunnel"
                                                RecordCommand="{Binding AssignCommand}"
                                                DataContext="{Binding}" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <!--  ROUTING TYPE  -->
            <DataGridTemplateColumn Width="100"
                                    CanUserResize="False"
                                    Header="Routing"
                                    SortMemberPath="RoutingType">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Center">
                            <ComboBox HorizontalAlignment="Center"
                                      IsVisible="{Binding IsGlobalShortcut}"
                                      SelectedIndex="{Binding SelectedRoutingTypeIdx}"
                                      Items="{Binding RoutingTypes}" />
                            <TextBlock Text="Internal"
                                       HorizontalAlignment="Center"
                                       FontWeight="SemiBold"
                                       FontFamily="Calibri"
                                       IsVisible="{Binding !IsGlobalShortcut}" />
                        </Grid>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <!--  RESET/DELETE BUTTON  -->
            <DataGridTemplateColumn Width="50"
                                    CanUserSort="False"
                                    CanUserResize="False">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Button x:Name="ResetOrDeleteButton"
                                Classes.canDelete="{Binding CanDelete}"
                                Classes="defaultButton outline outlineOver"
                                Classes.disabled="{Binding CanDeleteOrReset}"
                                IsEnabled="{Binding CanDeleteOrReset}"
                                HorizontalAlignment="Center"
                                local:MpAvPointerCommandExtension.IsEnabled="True"
                                local:MpAvPointerCommandExtension.LeftPressCommand="{Binding DeleteOrResetThisShortcutCommand}"
                                local:MpAvPointerCommandExtension.RoutingStrategy="Tunnel">
                            <Image />
                        </Button>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</local:MpAvUserControl>
