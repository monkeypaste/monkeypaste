<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="750"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvShortcutCollectionViewModel"
                       x:DataType="local:MpAvShortcutCollectionViewModel"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvShortcutCollectionViewModel.Instance}"
                       x:Class="MonkeyPaste.Avalonia.MpAvShortcutsView">
    <local:MpAvUserControl.Resources>
        <sys:String x:Key="GestureInfoHtml">Gesture info here</sys:String>
        <sys:String x:Key="RoutingInfoHtml">&lt;ul&gt;	&lt;li&gt;		&lt;b&gt;Internal&lt;/b&gt; In app shortcuts, are not globally enabled&lt;/li&gt;	&lt;li&gt;		&lt;b&gt;Direct&lt;/b&gt; Gesture will &lt;b&gt;			&lt;i&gt;override&lt;/i&gt;		&lt;/b&gt; the input, ie. it will &lt;b&gt;&lt;span style=&quot;foreground: #FF0000&quot;&gt;not&lt;/span&gt;&lt;/b&gt; be received by active application. &lt;/li&gt;	&lt;li&gt;		&lt;b&gt;Bubble&lt;/b&gt; Gesture will execute &lt;b&gt;			&lt;i&gt;after&lt;/i&gt;		&lt;/b&gt; active application &lt;/li&gt;	&lt;li&gt;		&lt;b&gt;Tunnel&lt;/b&gt; Gesture will execute &lt;b&gt;			&lt;i&gt;before&lt;/i&gt;		&lt;/b&gt; active application &lt;/li&gt;&lt;/ul&gt;</sys:String>
    </local:MpAvUserControl.Resources>
    <StackPanel Orientation="Vertical"
                Margin="0,20,0,0"
                Spacing="20">

        <!--  RESET ALL SHORTCUTS  -->

        <Button Classes="defaultButton textOnlyButton severe"
                Command="{Binding ResetAllShortcuts}"
                HorizontalAlignment="Left"
                Content="Reset All Shortcuts" />

        <!--  USER-DEFINED SHORTCUTS  -->

        <Expander>
            <Expander.Header>
                <StackPanel>
                    <Label Classes="h1"
                           Content="User-Defined" />
                </StackPanel>
            </Expander.Header>
            <Expander.Content>
                <local:MpAvShortcutDataGridView DataContext="{Binding CustomShortcuts}" />
            </Expander.Content>
        </Expander>

        <!--  APPLICATION SHORTCUTS  -->

        <Expander>
            <Expander.Header>
                <StackPanel>
                    <Label Classes="h1"
                           Content="Application" />
                </StackPanel>
            </Expander.Header>
            <Expander.Content>
                <StackPanel>
                    <Expander>
                        <Expander.Header>
                            <StackPanel>
                                <Label Classes="h1"
                                       Content="Internal" />
                            </StackPanel>
                        </Expander.Header>
                        <Expander.Content>
                            <local:MpAvShortcutDataGridView DataContext="{Binding InternalApplicationShortcuts}" />
                        </Expander.Content>
                    </Expander>
                    <Expander>
                        <Expander.Header>
                            <StackPanel>
                                <Label Classes="h1"
                                       Content="Global" />
                            </StackPanel>
                        </Expander.Header>
                        <Expander.Content>
                            <local:MpAvShortcutDataGridView DataContext="{Binding GlobalApplicationShortcuts}" />
                        </Expander.Content>
                    </Expander>
                </StackPanel>
            </Expander.Content>
        </Expander>

        <!--  PASTE INTEROP SHORTCUTS  -->

        <Expander DataContext="{x:Static local:MpAvAppCollectionViewModel.Instance}"
                  x:DataType="local:MpAvAppCollectionViewModel">
            <Expander.Header>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="h1"
                               Content="Custom Paste Commands" />
                        <local:MpAvToolTipInfoHintView ToolTipText="#warning# Source url recognition is dependant on the host applications clipboard support so rejection is not guaranteed :(" />
                    </StackPanel>
                    <Border Classes="labelUnderline_long dark" />
                </StackPanel>
            </Expander.Header>
            <Expander.Content>
                <StackPanel>

                    <!--  PASTE SHORTCUT DATAGRID  -->

                    <local:MpAvClipBorder Classes="filterDataGridContainer">
                        <Grid>
                            <DataGrid x:Name="ShortcutDatagrid"
                                      local:MpAvDataGridRefreshExtension.IsEnabled="True"
                                      IsVisible="{Binding CustomPasteItems, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                                      CanUserSortColumns="True"
                                      Focusable="True"
                                      Items="{Binding CustomPasteItems}"
                                      IsReadOnly="False"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>

                                    <!--  APP ICON  -->

                                    <DataGridTemplateColumn Width="30">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Width="15"
                                                       Height="15"
                                                       Source="{Binding IconId, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!--  APP NAME  -->
                                    <DataGridTemplateColumn Header="Name"
                                                            CanUserSort="True"
                                                            SortMemberPath="AppName"
                                                            CanUserResize="True"
                                                            Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid Classes="marqueeContainer">
                                                    <local:MpAvMarqueeTextBox EditOnFocus="False"
                                                                              DropShadowBrush="Transparent"
                                                                              ReadOnlyForeground="Black"
                                                                              SelectViewModelOnFocus="False"
                                                                              Text="{Binding AppName}" />
                                                </Grid>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>


                                    <!--  PASTE GESTURE VIEW  -->
                                    <DataGridTemplateColumn Width="*">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal"
                                                            Spacing="5">
                                                    <TextBlock Text="Paste Shortcut" />
                                                    <local:MpAvToolTipInfoHintView ToolTipText="#p#Monkey Paste uses keyboard automation to perform external pasting and some applications (like a console or shell for example) may have a non-default paste shortcut. To ensure proper interoperability record that short cut for the esoteric application here.#p##p#Along with pasting into the application, this shortcut will be needed to track usage statistics (only for delights, not shared)" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <!--<Border DataContext="{Binding PasteShortcutViewModel}">-->
                                                <local:MpAvShortcutView Background="Transparent"
                                                                        Margin="5"
                                                                        HorizontalAlignment="Stretch"
                                                                        VerticalAlignment="Stretch"
                                                                        HorizontalContentAlignment="Center"
                                                                        VerticalContentAlignment="Center"
                                                                        local:MpAvPointerCommandExtension.IsEnabled="True"
                                                                        local:MpAvPointerCommandExtension.RoutingStrategy="Tunnel"
                                                                        local:MpAvPointerCommandExtension.LeftPressCommand="{Binding AssignPasteShortcutCommand, Source={x:Static local:MpAvAppCollectionViewModel.Instance}}"
                                                                        local:MpAvPointerCommandExtension.LeftPressCommandParameter="{Binding}" />
                                                <!--</Border>-->
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!--  DELETE BUTTON  -->
                                    <DataGridTemplateColumn Width="50"
                                                            CanUserSort="False"
                                                            CanUserResize="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button x:Name="DeleteAppPasteButton"
                                                        Classes="defaultButton outline outlineOver"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        local:MpAvPointerCommandExtension.IsEnabled="True"
                                                        local:MpAvPointerCommandExtension.LeftPressCommand="{Binding DeletePasteShortcutCommand, Source={x:Static local:MpAvAppCollectionViewModel.Instance}}"
                                                        local:MpAvPointerCommandExtension.LeftPressCommandParameter="{Binding .}"
                                                        local:MpAvPointerCommandExtension.RoutingStrategy="Tunnel">
                                                    <Image Source="{Binding Source={StaticResource DeleteImage}, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock IsVisible="{Binding CustomPasteItems, ConverterParameter=flip, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                                       Classes="emptyTextBlock"
                                       Text="No results available" />
                        </Grid>
                    </local:MpAvClipBorder>

                    <!--  ADD PASTE SHORTCUT BUTTON  -->
                    <DropDownButton HorizontalAlignment="Right"
                                    Classes="dataGridAddButton"
                                    Command="{Binding ShowAppSelectorFlyoutCommand}"
                                    CommandParameter="{Binding $self}">
                        <DockPanel>
                            <Image DockPanel.Dock="Left"
                                   Width="20"
                                   Height="20"
                                   Source="{Binding Source={StaticResource AddImage}, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />
                            <Label Content="Add" />
                        </DockPanel>
                    </DropDownButton>
                </StackPanel>
            </Expander.Content>
        </Expander>
    </StackPanel>
</local:MpAvUserControl>
