            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%"
                                         EndPoint="0%,100%">
                        <LinearGradientBrush.GradientStops>
                            <GradientStop Color="{DynamicResource ThemeGrayAccent3}"
                                          Offset="0" />
