                                          Offset="0.7" />
                            <GradientStop Color="{DynamicResource ThemeGrayAccent3}"
                                          Offset="1" />
                        </LinearGradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
