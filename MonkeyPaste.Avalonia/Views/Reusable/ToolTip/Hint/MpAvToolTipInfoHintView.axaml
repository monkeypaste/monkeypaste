<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:MonkeyPaste.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Name="InfoHintView"
             x:Class="MonkeyPaste.Avalonia.MpAvToolTipInfoHintView"
             Background="Transparent">
    <UserControl.Styles>
        <Style Selector="ToolTip">
            <!--<Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Background"
                    Value="Transparent" />-->
        </Style>
    </UserControl.Styles>
    <ToolTip.Tip>
        <local:MpAvToolTipView ToolTipText="{Binding ToolTipText, ElementName=InfoHintView}"
                               ToolTipHtml="{Binding ToolTipHtml, ElementName=InfoHintView}" />
    </ToolTip.Tip>
    <Grid x:Name="HintContainerGrid"
          Cursor="Help"
          Width="15"
          Height="15">
        <Ellipse HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 StrokeThickness="1"
                 Stroke="White"
                 Fill="Blue" />
        <TextBlock Classes="hint"
                   Foreground="White"
                   FontSize="10"
                   FontWeight="SemiBold"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            i
        </TextBlock>
    </Grid>
</UserControl>
