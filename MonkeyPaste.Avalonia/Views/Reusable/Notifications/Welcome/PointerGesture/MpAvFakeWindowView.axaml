<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="local:MpAvScrollToOpenGestureViewModel"
                       x:Class="MonkeyPaste.Avalonia.MpAvFakeWindowView"
                       mc:Ignorable="d"
                       d:DesignWidth="400"
                       d:DesignHeight="300">
    <local:MpAvUserControl.Styles>
        <Style Selector="Border#PlaceholderWindow.show"
               x:DataType="local:MpAvScrollToOpenGestureViewModel">
            <Style.Animations>
                <Animation Duration="0:0:1"
                           FillMode="Forward"
                           Easing="BounceEaseIn">
                    <KeyFrame Cue="0%">
                        <Setter Property="Canvas.Top"
                                Value="{Binding FakeWindowStartTop}" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Canvas.Top"
                                Value="{Binding FakeWindowEndTop}" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        <Style Selector="Border#PlaceholderWindow.hide"
               x:DataType="local:MpAvScrollToOpenGestureViewModel">
            <Style.Animations>
                <Animation Duration="0:0:1"
                           FillMode="Forward"
                           Easing="BounceEaseIn">
                    <KeyFrame Cue="0%">
                        <Setter Property="Canvas.Top"
                                Value="{Binding FakeWindowEndTop}" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Canvas.Top"
                                Value="{Binding FakeWindowStartTop}" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="Image.spin">
            <Style.Animations>
                <Animation Duration="0:0:3"
                           IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle"
                                Value="0" />
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="RotateTransform.Angle"
                                Value="180" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle"
                                Value="360" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </local:MpAvUserControl.Styles>
    <Canvas HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Border x:Name="PlaceholderWindow"
                Width="{Binding $parent.Bounds.Width}"
                Height="{Binding $parent.Bounds.Height}"
                Background="{DynamicResource ClipTrayBgColor}">

            <Grid ColumnDefinitions="50,300,50"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Image Grid.Column="0"
                       Classes="shake"
                       Width="50"
                       Height="50"
                       Source="{Binding Source={StaticResource BananaImage}, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}">
                    <Image.RenderTransform>
                        <RotateTransform />
                    </Image.RenderTransform>
                </Image>
                <TextBlock Grid.Column="1"
                           FontSize="42"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontStyle="Oblique"
                           TextAlignment="Center"
                           Text="{x:Static local:UiStrings.WelcomeScrollToOpenGestureCompleteLabel}" />

                <Image Grid.Column="2"
                       Classes="shake"
                       Width="50"
                       Height="50"
                       Source="{Binding Source={StaticResource BananaImage}, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}">
                    <Image.RenderTransform>
                        <RotateTransform />
                    </Image.RenderTransform>
                </Image>
            </Grid>
        </Border>
    </Canvas>
</local:MpAvUserControl>
