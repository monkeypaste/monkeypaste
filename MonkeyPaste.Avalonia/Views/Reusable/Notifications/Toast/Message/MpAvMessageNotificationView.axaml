<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:DataType="pcl:MpMessageNotificationViewModel"
                       x:TypeArguments="pcl:MpMessageNotificationViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvMessageNotificationView">
    <Grid RowDefinitions="Auto,*"
          Margin="0,0,0,0">
        <local:MpAvMarqueeTextBox Grid.Row="0"
                                  Margin="3,0,10,3"
                                  CanEdit="False"
                                  MinHeight="30"
                                  FontSize="20"
                                  IsReadOnly="True"
                                  IsMarqueeEnabled="True"
                                  DropShadowBrush="Black"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Left"
                                  VerticalContentAlignment="Top"
                                  Foreground="White"
                                  FontWeight="SemiBold"
                                  Text="{Binding Title}" />
        <Border Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                IsVisible="True"
                Margin="5,0,5,0"
                Background="White"
                Height="1" />
        <!--<TextBlock Grid.Row="1"
                   HorizontalAlignment="Left"
                   Margin="10,5,10,0"
                   TextWrapping="Wrap"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Background="Transparent"
                   Focusable="True"
                   Foreground="{Binding NotificationTextForegroundColor,
                                        Converter={StaticResource StringHexToBrushConverter}}"
                   Text="{Binding Body}" />-->
        <ScrollViewer Grid.Row="1"
                      Grid.Column="0"
                      Grid.ColumnSpan="3"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      VerticalContentAlignment="Top"
                      Margin="0,0,5,0"
                      Background="Transparent"
                      AllowAutoHide="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <!--<ContentControl x:Name="NotificationBodyContentControl"
                            Focusable="True"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            DataContext="{Binding}"
                            Content="{Binding}">
                <ContentControl.DataTemplates>
                    <local:MpAvNotificationBodyTemplateSelector>
                        <DataTemplate x:Key="PlainTextTemplate"
                                      DataType="pcl:MpMessageNotificationViewModel">
                            <TextBlock Grid.Row="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       TextWrapping="NoWrap"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Background="Transparent"
                                       Focusable="True"
                                       Foreground="{Binding NotificationTextForegroundColor, Converter={StaticResource StringHexToBrushConverter}}"
                                       Text="{Binding Body}" />
                        </DataTemplate>
                        <DataTemplate x:Key="RichHtmlTemplate"
                                      DataType="pcl:MpMessageNotificationViewModel">
                            <local:MpAvClipTileContentView DataContext="{Binding Body}" />
                        </DataTemplate>
                    </local:MpAvNotificationBodyTemplateSelector>
                </ContentControl.DataTemplates>
            </ContentControl>-->
            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       TextWrapping="NoWrap"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Background="Transparent"
                       Focusable="False"
                       Foreground="{Binding NotificationTextForegroundColor, Converter={StaticResource StringHexToBrushConverter}}"
                       Text="{Binding Body}" />
        </ScrollViewer>
    </Grid>
</local:MpAvUserControl>
