<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia"
        xmlns:pcl="using:MonkeyPaste"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Name="MessageNotificationWindow"
        x:DataType="pcl:MpMessageNotificationViewModel"
        x:CompileBindings="True"
        x:Class="MonkeyPaste.Avalonia.MpAvMessageNotificationWindow"
        Classes.IsClosing="{Binding IsClosing}"
        Classes.notificationWindow="True"
        IsVisible="{Binding IsVisible}"
        Topmost="True"
        Width="350"
        Height="300"
        SizeToContent="Manual"
        ShowInTaskbar="False"
        WindowState="Normal"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        Title="">
    <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            MinHeight="130"
            BorderThickness="7"
            BorderBrush="{Binding BorderHexColor, Converter={StaticResource StringHexToBrushConverter}}"
            Background="{Binding BackgroundHexColor, Converter={StaticResource StringHexToBrushConverter}}"
            local:MpAvIsHoveringExtension.IsEnabled="True"
            local:MpAvIsHoveringExtension.IsHovering="{Binding IsHovering, Mode=TwoWay}">
        <Grid x:Name="NotificationWindowContainerGrid"
              ColumnDefinitions="0.15*,*,15"
              RowDefinitions="0.1*,0.8*">
            <Image x:Name="NotificationIconImage"
                   Grid.Row="0"
                   Grid.Column="0"
                   Width="{Binding Bounds.Height, ElementName=NotificationIconImage}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Stretch"
                   IsVisible="{Binding IconSourceStr, Converter={StaticResource IsNotNullOrZeroToBoolConverter}}"
                   Source="{Binding IconSourceStr, Converter={StaticResource IconSourceObjToBitmapConverter}}"
                   Stretch="Fill" />
            <local:MpAvMarqueeTextBox Grid.Row="0"
                                      Grid.Column="1"
                                      CanEdit="False"
                                      MinHeight="30"
                                      FontSize="20"
                                      IsReadOnly="True"
                                      IsMarqueeEnabled="True"
                                      DropShadowBrush="Black"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Stretch"
                                      HorizontalContentAlignment="Left"
                                      VerticalContentAlignment="Top"
                                      Foreground="White"
                                      FontWeight="SemiBold"
                                      Text="{Binding Title}" />
            <Border Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    IsVisible="True"
                    Margin="5,0,5,0"
                    Background="White"
                    Height="1" />

            <ContentControl x:Name="NotificationBodyContentControl"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Focusable="True"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            DataContext="{Binding Body}"
                            Content="{Binding}">
                <ContentControl.DataTemplates>
                    <local:MpAvNotificationBodyTemplateSelector>
                        <DataTemplate x:Key="PlainTextTemplate"
                                      x:DataType="sys:String">
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       TextWrapping="NoWrap"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Background="Transparent"
                                       Focusable="False"
                                       Foreground="Black"
                                       Text="{Binding}" />
                        </DataTemplate>
                        <DataTemplate x:Key="RichHtmlTemplate"
                                      x:DataType="local:MpAvClipTileViewModel">
                            <local:MpAvCefNetWebView x:Name="CefNetWebView"
                                                     ContentId="{Binding CopyItemId, Mode=OneWay}"
                                                     IsContentLoaded="{Binding IsViewLoaded, Mode=TwoWay}"
                                                     IsAttachedToVisualTree="{Binding IsViewAttached, Mode=TwoWay}"
                                                     Focusable="True"
                                                     HorizontalAlignment="Stretch"
                                                     VerticalAlignment="Stretch" />
                        </DataTemplate>
                    </local:MpAvNotificationBodyTemplateSelector>
                </ContentControl.DataTemplates>
            </ContentControl>

            <Button x:Name="OptionsButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Width="5"
                    Margin="0,3,7,3"
                    BorderThickness="0"
                    Background="Transparent"
                    local:MpAvMenuExtension.IsEnabled="True"
                    local:MpAvMenuExtension.IsOpen="{Binding IsPopupMenuVisible, Mode=TwoWay}">
                <Image Width="{Binding Bounds.Height, ElementName=NotificationIconImage}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Source="{Binding ., Source={StaticResource DotsImage}, Converter={StaticResource IconSourceObjToBitmapConverter}}"
                       Stretch="Fill" />
            </Button>
        </Grid>
    </Border>
</Window>
