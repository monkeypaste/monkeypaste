<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:DataType="pcl:MpUserActionNotificationViewModel"
                       x:TypeArguments="pcl:MpUserActionNotificationViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvUserActionNotificationView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="10,10,0,1"
                   FontSize="20"
                   Foreground="White"
                   FontWeight="SemiBold"
                   TextWrapping="NoWrap"
                   Text="{Binding Title}" />
        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="5,0,5,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                Background="White"
                Height="1" />
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                   Margin="10,5,10,0"
                   TextWrapping="Wrap"
                   MaxWidth="300"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Background="Transparent"
                   Focusable="True"
                   Foreground="{Binding NotificationTextForegroundColor, Converter={StaticResource StringHexToBrushConverter}}"
                   Text="{Binding Body}" />
        <!--  Ignore, Retry, Fix, Shutdown states  -->
        <Button Grid.Row="2"
                Grid.Column="0"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                Content="IGNORE"
                VerticalAlignment="Top"
                IsVisible="{Binding ShowIgnoreButton}"
                Command="{Binding IgnoreCommand}" />
        <Button Grid.Row="2"
                Grid.Column="1"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                VerticalAlignment="Top"
                Content="RETRY"
                IsVisible="{Binding ShowRetryButton}"
                Command="{Binding RetryCommand}" />
        <Button x:Name="FixButton"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                Content="FIX"
                IsVisible="{Binding ShowFixButton}"
                VerticalAlignment="Top"
                Command="{Binding FixCommand}"
                CommandParameter="{Binding FixCommandArgs}" />
        <Button Grid.Row="2"
                Grid.Column="1"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                VerticalAlignment="Top"
                Content="SHUTDOWN"
                IsVisible="{Binding ShowShutdownButton}"
                Command="{Binding ShutdownCommand}" />
        <!--  Yes, No, Cancel or Ok, Cancel States  -->
        <Button Grid.Row="2"
                Grid.Column="0"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                Content="YES"
                VerticalAlignment="Top"
                Command="{Binding YesCommand}"
                IsVisible="{Binding ShowYesButton}" />
        <Button Grid.Row="2"
                Grid.Column="1"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                Content="NO"
                VerticalAlignment="Top"
                Command="{Binding NoCommand}"
                IsVisible="{Binding ShowNoButton}" />
        <Button Grid.Row="2"
                Grid.Column="1"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                Content="OK"
                VerticalAlignment="Top"
                Command="{Binding OkCommand}"
                IsVisible="{Binding ShowOkButton}" />
        <Button Grid.Row="2"
                Grid.Column="2"
                Margin="5,0"
                Padding="5"
                FontWeight="SemiBold"
                Content="CANCEL"
                VerticalAlignment="Top"
                Command="{Binding CancelCommand}"
                IsVisible="{Binding ShowCancelButton}" />
    </Grid>
</local:MpAvUserControl>
