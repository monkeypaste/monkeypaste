<local:MpAvUserControl x:Name="PopupMenuSelector"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:DataType="pcl:MpMenuItemViewModel"
                       x:TypeArguments="pcl:MpMenuItemViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvPopupMenuSelector">

    <local:MpAvUserControl.Styles>

        <Style Selector="Border#SelectionBorder Image">
            <Setter Property="Source"
                    Value="{Binding EmptyIconResourceObj, ElementName=PopupMenuSelector, Converter={StaticResource IconSourceObjToBitmapConverter}}" />
        </Style>
        <Style Selector="Border#SelectionBorder.notEmpty Image">
            <Setter Property="Source"
                    Value="{Binding SelectedMenuItem.IconSourceObj, ElementName=PopupMenuSelector, Converter={StaticResource IconSourceObjToBitmapConverter}}" />
        </Style>

        <Style Selector="Border.popupCaret">
            <Setter Property="Background"
                    Value="DimGray" />
        </Style>


        <Style Selector="Border#SelectionBorder.notEmpty TextBlock">
            <Setter Property="Text"
                    Value="{Binding SelectedMenuItem.Header, ElementName=PopupMenuSelector}" />
        </Style>
        <Style Selector="Border#SelectionBorder TextBlock">
            <Setter Property="Text"
                    Value="{Binding EmptyText, ElementName=PopupMenuSelector}" />
        </Style>

        <Style Selector="Button">
            <Setter Property="BorderBrush"
                    Value="Silver" />
        </Style>
        <Style Selector="Button">
            <Setter Property="BorderBrush"
                    Value="Silver" />
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="BorderBrush"
                    Value="{DynamicResource HoverDefaultBorderBrush}" />
        </Style>
        <Style Selector="Button:not(:disabled) Border.popupCaret:pointerover">
            <Setter Property="Background"
                    Value="Gainsboro" />
        </Style>

        <Style Selector="Border.popupCaret PathIcon">
            <Setter Property="RotateTransform.Angle"
                    Value="0" />
        </Style>
        <Style Selector="Border.popupCaret PathIcon.open">
            <Setter Property="RotateTransform.Angle"
                    Value="180" />
        </Style>
    </local:MpAvUserControl.Styles>
    <Grid ColumnDefinitions="*, 25"
          Margin="5"
          MinHeight="30">
        <Border x:Name="SelectionBorder"
                Grid.Column="0"
                Padding="5,3"
                Cursor="Arrow"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsEnabled="{Binding !IsBusy, ElementName=PopupMenuSelector}"
                BorderThickness="1"
                CornerRadius="3"
                Background="Transparent"
                Classes.notEmpty="{Binding SelectedMenuItem, ElementName=PopupMenuSelector, Converter={StaticResource IsNotNullOrZeroToBoolConverter}}">
            <DockPanel LastChildFill="True">
                <!--  ICON  -->
                <Image DockPanel.Dock="Left"
                       Margin="5,0,5,0"
                       Height="25"
                       Width="25" />

                <TextBlock Margin="5,0,5,0"
                           Padding="3"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Left"
                           FontFamily="Segue UI"
                           FontSize="14"
                           Foreground="Black"
                           Background="Transparent" />
            </DockPanel>
        </Border>
        <!--    -->
        <Button x:Name="PopupButton"
                Grid.Column="1"
                Classes="popupCaret,svgOutlineButton"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Command="{Binding PopupMenuButtonClickCommand, ElementName=PopupMenuSelector}"
                Margin="7,0,0,0"
                Cursor="Hand"
                Height="25"
                Width="25">
            <Grid>
                <PathIcon Foreground="White"
                          Width="15"
                          Height="15"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Classes.open="{Binding IsPopupOpen, ElementName=PopupMenuSelector}"
                          Data="{StaticResource MenuDownArrowSvg}" />
                <Border Classes="busyContainer"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        IsVisible="{Binding IsBusy, ElementName=PopupMenuSelector}">
                    <local:MpAvBusySpinnerView HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Width="15"
                                               Height="15" />
                </Border>

            </Grid>
        </Button>
    </Grid>

</local:MpAvUserControl>
