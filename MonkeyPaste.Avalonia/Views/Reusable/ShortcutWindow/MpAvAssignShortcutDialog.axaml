<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        xmlns:local="using:MonkeyPaste.Avalonia"
        Height="300"
        MinWidth="400"
        SizeToContent="Width"
        ShowInTaskbar="False"
        Topmost="True"
        Classes="assignWindow fadeIn"
        WindowStartupLocation="CenterScreen"
        x:DataType="local:MpAvAssignShortcutViewModel"
        x:CompileBindings="True"
        x:Class="MonkeyPaste.Avalonia.MpAvAssignShortcutDialog"
        Title="Assign Shortcut">
    <Window.Styles>
        <!--  WARNINGS  -->
        <Style Selector="Border.warning">
            <Setter Property="Background"
                    Value="IndianRed" />
            <Setter Property="Margin"
                    Value="10" />
            <Setter Property="CornerRadius"
                    Value="10" />
            <Setter Property="MaxWidth"
                    Value="350" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="AntiqueWhite" />
        </Style>
        <Style Selector="Border.warning Image">
            <Setter Property="Source"
                    Value="{Binding Source={StaticResource WarningImage}, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />
            <Setter Property="Margin"
                    Value="10,7,0,7" />
            <Setter Property="Width"
                    Value="25" />
            <Setter Property="Height"
                    Value="25" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
        <Style Selector="Border.warning TextBlock">
            <Setter Property="Foreground"
                    Value="AntiqueWhite" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontStyle"
                    Value="Oblique" />
            <Setter Property="TextWrapping"
                    Value="WrapWithOverflow" />
            <Setter Property="Padding"
                    Value="10,5" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </Window.Styles>
    <Grid RowDefinitions="20,*,Auto,Auto,Auto,50">
        <TextBlock Grid.Row="0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="10,5"
                   TextAlignment="Center"
                   TextWrapping="WrapWithOverflow"
                   HorizontalAlignment="Center"
                   Text="{Binding ShortcutDisplayName}" />
        <Border Grid.Row="1"
                CornerRadius="10"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Padding="10"
                IsVisible="{Binding !IsEmpty}"
                Margin="20,10"
                MinHeight="65">
            <ListBox x:Name="ShortcutListBox"
                     MinHeight="65"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Items="{Binding KeyGroups}"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ListBox.Resources>
                    <Thickness x:Key="ListBoxItemPadding">
                        0,0,0,0
                    </Thickness>
                </ListBox.Resources>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   Background="Transparent"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:MpAvShortcutKeyGroupView MinHeight="50"
                                                        DataContext="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <TextBlock Grid.Row="2"
                   FontSize="10"
                   MinHeight="30"
                   IsVisible="False"
                   FontStyle="Oblique"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Foreground="Red"
                   Text="{Binding KeyString}" />
        <Border Grid.Row="3"
                Classes="warning"
                IsVisible="{Binding WarningString, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image />
                <TextBlock Grid.Column="1"
                           Text="{Binding WarningString}" />
            </Grid>
        </Border>
        <Border Grid.Row="4"
                IsVisible="{Binding WarningString2, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image />
                <TextBlock Grid.Column="1"
                           Text="{Binding WarningString2}" />
            </Grid>
        </Border>
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom">
            <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Margin"
                            Value="10" />
                    <Setter Property="Padding"
                            Value="5,3" />
                    <Setter Property="MinWidth"
                            Value="30" />
                    <Setter Property="HorizontalAlignment"
                            Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                </Style>
            </StackPanel.Styles>
            <Button IsCancel="True"
                    Click="Cancel_Click"
                    Content="Cancel" />
            <Button Command="{Binding ClearCommand}"
                    Content="Clear" />
            <Button Content="Ok"
                    IsDefault="True"
                    Click="Ok_Click" />
        </StackPanel>
    </Grid>
</Window>
