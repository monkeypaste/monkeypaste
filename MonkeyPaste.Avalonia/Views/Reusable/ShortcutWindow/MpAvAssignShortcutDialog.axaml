<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        xmlns:local="using:MonkeyPaste.Avalonia"
        Height="300"
        MinWidth="400"
        SizeToContent="Width"
        ShowInTaskbar="False"
        Topmost="True"
        Classes="assignWindow fadeIn"
        WindowStartupLocation="CenterScreen"
        x:DataType="local:MpAvAssignShortcutViewModel"
        x:CompileBindings="True"
        x:Class="MonkeyPaste.Avalonia.MpAvAssignShortcutDialog"
        Title="Assign Shortcut">
    <Grid RowDefinitions="20,*,Auto,Auto,50">
        <TextBlock Grid.Row="0"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="10,5"
                   TextAlignment="Center"
                   TextWrapping="WrapWithOverflow"
                   HorizontalAlignment="Center"
                   Text="{Binding ShortcutDisplayName}" />
        <Border Grid.Row="1"
                CornerRadius="10"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Padding="10"
                IsVisible="{Binding !IsEmpty}"
                Margin="20,10"
                MinHeight="65">
            <ListBox x:Name="ShortcutListBox"
                     MinHeight="65"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Items="{Binding KeyGroups}"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ListBox.Resources>
                    <Thickness x:Key="ListBoxItemPadding">
                        0,0,0,0
                    </Thickness>
                </ListBox.Resources>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   Background="Transparent"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:MpAvShortcutKeyGroupView MinHeight="50"
                                                        DataContext="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        <TextBlock Grid.Row="2"
                   FontSize="10"
                   MinHeight="30"
                   IsVisible="False"
                   FontStyle="Oblique"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Foreground="Red"
                   Text="{Binding KeyString}" />
        <Border Grid.Row="3"
                Background="{Binding WarningBorderHexColor, Converter={x:Static local:MpAvStringHexToBrushConverter.Instance}}"
                IsVisible="{Binding HasWarning}"
                Margin="10"
                CornerRadius="10"
                MaxWidth="350"
                BorderThickness="1"
                BorderBrush="AntiqueWhite">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Source="{Binding WarningBmp}"
                       Margin="10,7,0,7"
                       Width="25"
                       Height="25"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" />
                <TextBlock Grid.Column="1"
                           FontSize="14"
                           FontStyle="Oblique"
                           TextWrapping="WrapWithOverflow"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Padding="10,5"
                           Foreground="{Binding WarningTextHexColor, Converter={x:Static local:MpAvStringHexToBrushConverter.Instance}}"
                           Text="{Binding WarningString}" />
            </Grid>
        </Border>
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom">
            <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Margin"
                            Value="10" />
                    <Setter Property="Padding"
                            Value="5,3" />
                    <Setter Property="MinWidth"
                            Value="30" />
                    <Setter Property="HorizontalAlignment"
                            Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                </Style>
            </StackPanel.Styles>
            <Button IsCancel="True"
                    Click="Cancel_Click"
                    Content="Cancel" />
            <Button Command="{Binding ClearCommand}"
                    Content="Clear" />
            <Button Content="Ok"
                    IsDefault="True"
                    Click="Ok_Click" />
        </StackPanel>
    </Grid>
</Window>
