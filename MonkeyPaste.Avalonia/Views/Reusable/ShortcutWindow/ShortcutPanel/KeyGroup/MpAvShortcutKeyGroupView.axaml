<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvShortcutKeyGroupViewModel"
                       x:DataType="local:MpAvShortcutKeyGroupViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       x:Class="MonkeyPaste.Avalonia.MpAvShortcutKeyGroupView">
    <local:MpAvUserControl.Styles>
        <Style Selector="Grid#ComboContainer:nth-child > TextBlock">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>
    </local:MpAvUserControl.Styles>
    <Grid ColumnDefinitions="*,Auto"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Border Grid.Column="0"
                Classes="comboBorder"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Cyan"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="5">
            <ItemsControl Items="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:MpAvShortcutKeyView Grid.Column="1"
                                                   DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Border>
        <Label Classes="comboLabel"
               Grid.Column="1"
               IsVisible="False"
               Content="+"
               FontSize="14"
               FontWeight="Bold"
               HorizontalAlignment="Left"
               VerticalAlignment="Center" />
    </Grid>
</local:MpAvUserControl>
