<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvContentQueryTextBoxView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="pcl:MpIContentQueryTextBoxViewModel"
                       x:DataType="pcl:MpIContentQueryTextBoxViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <Border x:Name="QueryItemGridContainer"
            VerticalAlignment="Stretch"
            CornerRadius="3"
            Margin="3">
        <Grid ColumnDefinitions="*">
            <TextBox x:Name="ContentQueryTextBox"
                     Classes="clearButton dnd"
                     Grid.Column="0"
                     MaxWidth="{Binding $parent[ListBox].Bounds.Width}"
                     Padding="3"
                     BorderThickness="0"
                     VerticalAlignment="Stretch"
                     local:MpAvIsFocusedExtension.IsEnabled="True"
                     SelectionStart="{Binding SelectionStart, Mode=TwoWay}"
                     SelectionEnd="{Binding SelectionEnd, Mode=TwoWay}"
                     Text="{Binding ContentQuery, Mode=TwoWay}" />
            <Button x:Name="PopupButton"
                    Grid.Column="0"
                    IsVisible="{Binding IsFieldButtonVisible}"
                    HorizontalAlignment="Right"
                    Margin="0,0,22,0"
                    local:MpAvMenuExtension.IsEnabled="True">
                <Image Source="{Binding ., Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}, Source={StaticResource FilterImage}}"
                       Stretch="Uniform"
                       Width="15"
                       Height="15" />
            </Button>
            <local:MpAvClearTextButton x:Name="ClearButton"
                                       Grid.Column="0"
                                       Classes="TextBoxButton square"
                                       IsVisible="{Binding IsPointerOver, ElementName=QueryItemGridContainer}"
                                       Height="20"
                                       Command="{Binding ClearQueryCommand}"
                                       CommandParameter="{Binding .}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
        </Grid>
    </Border>
</local:MpAvUserControl>
