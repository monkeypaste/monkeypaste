<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="pcl:MpIProgressIndicatorViewModel"
                       x:DataType="pcl:MpIProgressIndicatorViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvProgressSpinnerView"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Background="Transparent">
    <local:MpAvProgressSpinner HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               ArcWidth="2.5"
                               PercentBrush="{DynamicResource ThemeAccent3Color}"
                               RingBrush="{DynamicResource ThemeAccent2Color}"
                               LabelBrush="Transparent"
                               Percent="{Binding PercentLoaded}" />
</local:MpAvUserControl>
