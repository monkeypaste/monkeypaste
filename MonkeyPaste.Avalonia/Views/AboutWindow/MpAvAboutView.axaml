<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvAboutView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:av="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:cefnet="clr-namespace:CefNet.Avalonia;assembly=CefNet.Avalonia"
                       x:DataType="local:MpAvAboutViewModel"
                       x:TypeArguments="local:MpAvAboutViewModel"
                       Background="White"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450">
    <local:MpAvUserControl.Styles>

    </local:MpAvUserControl.Styles>
    <Grid RowDefinitions="Auto,*"
          Margin="10">
        <DockPanel Grid.Row="0">

            <!--  APP ICON  -->

            <Border BorderThickness="3"
                    CornerRadius="5"
                    Classes="squareByHeight"
                    BorderBrush="Dimgray"
                    DockPanel.Dock="Left"
                    Margin="0,0,10,0">
                <Image Width="50"
                       Height="50"
                       Classes="applogo wink shakeOnce shakeOnceOver"
                       HorizontalAlignment="Center" />
            </Border>
            <StackPanel Orientation="Vertical"
                        DockPanel.Dock="Right"
                        Spacing="3">

                <!--  PRODUCT NAME  -->

                <SelectableTextBlock Foreground="Black"
                                     Classes="header"
                                     Text="{Binding ProductName}" />

                <!--  VERSION NUM  -->

                <SelectableTextBlock Foreground="Black"
                                     Classes="header"
                                     Text="{Binding ProductVersion}" />

                <!--  COMPANY NAME  -->

                <SelectableTextBlock Foreground="Black"
                                     Classes="header"
                                     Text="{Binding CompanyName}" />

                <!--  LEGAL DETAIL  -->

                <SelectableTextBlock Foreground="Black"
                                     Classes="header"
                                     Text="{Binding LegalDetail}" />

            </StackPanel>

        </DockPanel>
        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="Black"
                Margin="0,10,0,0"
                Padding="3">
            <ScrollViewer>

                <!--<TextBlock x:Name="CreditsTextBlock"
                           local:MpAvIsHoveringExtension.IsEnabled="True"
                           local:MpAvIsHoveringExtension.IsHovering="{Binding IsOverCredits, Mode=TwoWay}"
                           Classes="credits"
                           Text="{Binding CreditsText}" />-->

                <!--<cefnet:WebView x:Name="CreditsTextBlock"
                                local:MpAvIsHoveringExtension.IsEnabled="True"
                                local:MpAvIsHoveringExtension.IsHovering="{Binding IsOverCredits, Mode=TwoWay}"
                                Classes="credits"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" />-->
                <av:HtmlLabel x:Name="CreditsTextBlock"
                              local:MpAvIsHoveringExtension.IsEnabled="True"
                              local:MpAvIsHoveringExtension.IsHovering="{Binding IsOverCredits, Mode=TwoWay}"
                              Classes="credits"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Text="{Binding CreditsHtml}" />
            </ScrollViewer>
        </Border>
    </Grid>
</local:MpAvUserControl>
