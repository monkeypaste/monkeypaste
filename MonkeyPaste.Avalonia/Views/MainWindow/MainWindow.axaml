<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:MonkeyPaste.Avalonia"
        xmlns:pcl="using:MonkeyPaste"
        xmlns:webview="clr-namespace:WebViewControl;assembly=WebViewControl.Avalonia"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="MonkeyPaste.Avalonia.MainWindow"
        x:Name="AvMainWindow"
        x:DataType="local:MpAvMainWindowViewModel"
        x:CompileBindings="False"
        DataContext="{x:Static local:MpAvMainWindowViewModel.Instance}"
        WindowState="Normal"
        SystemDecorations="None"
        ClipToBounds="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Width="{Binding MainWindowWidth}"
        Height="{Binding MainWindowHeight}"
        TransparencyLevelHint="Transparent"
        Title="Monkey Paste">
    <RelativePanel x:Name="MainWindowGrid"
                   Width="{Binding MainWindowWidth}"
                   Height="{Binding MainWindowHeight}">
        <RelativePanel.Background>
            <SolidColorBrush Color="Pink"
                             Opacity="{Binding MainWindowOpacity, Source={x:Static pcl:MpPrefViewModel.Instance}}" />
        </RelativePanel.Background>

        <Grid x:Name="FilterAndTrayGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Filter Menu  -->
            <Grid x:Name="MainWindowFilterGrid"
                  Grid.Row="0">
                <Grid.Background>
                    <SolidColorBrush Color="Purple"
                                     Opacity="{Binding MainWindowOpacity, Source={x:Static pcl:MpPrefViewModel.Instance}}" />
                </Grid.Background>
            </Grid>

            <!--  Tray Row  -->
            <Grid x:Name="MainWindowTrayGrid"
                  Grid.Row="1">
                <Grid.Background>
                    <SolidColorBrush Color="DarkViolet"
                                     Opacity="{Binding MainWindowOpacity, Source={x:Static pcl:MpPrefViewModel.Instance}}" />
                </Grid.Background>
                <local:MpAvClipTrayView DataContext="{x:Static local:MpAvClipTrayViewModel.Instance}" />



                <!--<webview:WebView x:Name="webview" Address="file:///Volumes/BOOTCAMP/Users/tkefauver/Source/Repos/MonkeyPaste/MonkeyPaste/Resources/Html/Editor/index.html" />-->
            </Grid>
        </Grid>

        <!--  Title Menu  -->
        <local:MpAvMainWindowTitleMenuView x:Name="MainWindowTitleView"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           DataContext="{Binding}">
            <local:MpAvMainWindowTitleMenuView.RenderTransform>
                <RotateTransform />
            </local:MpAvMainWindowTitleMenuView.RenderTransform>
        </local:MpAvMainWindowTitleMenuView>

      <!--<LayoutTransformControl Name="layoutTransform">
        <LayoutTransformControl.LayoutTransform>
          <RotateTransform />
        </LayoutTransformControl.LayoutTransform>
        <Button Background="White">Layout Transform</Button>
      </LayoutTransformControl>-->
    </RelativePanel>
    <!-- </Canvas> -->
</Window>