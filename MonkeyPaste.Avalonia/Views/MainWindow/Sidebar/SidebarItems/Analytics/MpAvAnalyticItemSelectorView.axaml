<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="local:MpAvAnalyticItemCollectionViewModel"
                       x:DataType="local:MpAvAnalyticItemCollectionViewModel"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvAnalyticItemCollectionViewModel.Instance}"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvAnalyticItemSelectorView">
    <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{DynamicResource AnalyzerSidebarBgBrush}">
        <Grid ColumnDefinitions="Auto,*"
              RowDefinitions="50,*">
            <local:MpAvPluginSelectorView Grid.Row="0"
                                          Grid.Column="0"
                                          DataContext="{Binding}" />
            <Border Grid.Row="1"
                    DataContext="{Binding SelectedItem}">
                <local:MpAvAnalyticItemPresetDataGridView VerticalAlignment="Top"
                                                          DataContext="{Binding}" />
            </Border>

            <Border Grid.Column="1"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    HorizontalAlignment="Stretch"
                    DataContext="{Binding SelectedPresetViewModel}">
                <local:MpAvPluginParameterListBoxView HorizontalAlignment="Stretch"
                                                      DataContext="{Binding}" />
            </Border>

        </Grid>
    </Border>
</local:MpAvUserControl>

