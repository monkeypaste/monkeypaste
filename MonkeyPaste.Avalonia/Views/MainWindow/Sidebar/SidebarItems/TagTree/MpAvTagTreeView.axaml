<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="local:MpAvTagTrayViewModel"
                       x:DataType="local:MpAvTagTrayViewModel"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvTagTrayViewModel.Instance}"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvTagTreeView">
    <local:MpAvUserControl.Resources>
        <SolidColorBrush x:Key="TreeViewItemForeground"
                         Color="White" />
    </local:MpAvUserControl.Resources>
    <local:MpAvUserControl.Styles>
        <Style Selector="TreeView#TagTreeView TreeViewItem"
               x:DataType="local:MpAvTagTileViewModel">
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
            <Setter Property="VerticalAlignment"
                    Value="Stretch" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Disabled" />
            <Setter Property="IsExpanded"
                    Value="{Binding IsExpanded, Mode=TwoWay}" />
            <Setter Property="IsEnabled"
                    Value="{Binding CanSelect}" />
        </Style>
        <!--<Style Selector="TreeView#TagTreeView TreeViewItem /template/ Border#PART_LayoutRoot Grid#PART_Header Panel#PART_ExpandCollapseChevronContainer ToggleButton#PART_ExpandCollapseChevron Border Path#ChevronPath">-->
        <!--<Style Selector="TreeView#TagTreeView TreeViewItem /template/ ToggleButton#expander /template/ Path#ChevronPath">
            <Setter Property="Fill"
                    Value="White" />
        </Style>-->
        <Style Selector="TreeView#TagTreeView TreeViewItem:selected /template/ Border#PART_LayoutRoot">
            <Setter Property="Background"
                    Value="Transparent" />
        </Style>
        <Style Selector="TreeView#TagTreeView TreeViewItem /template/ Border#PART_LayoutRoot:pointerover">
            <Setter Property="Background"
                    Value="Transparent" />
        </Style>

        <Style Selector="TreeView#TagTreeView TreeView#TagTreeViewTreeViewItem /template/ Border#SelectionBorder:pointerover">
            <Setter Property="Background"
                    Value="Transparent" />
        </Style>
        <Style Selector="TreeView#TagTreeView TreeViewItem /template/ Border#SelectionBorder">
            <Setter Property="Background"
                    Value="Transparent" />
        </Style>
        <Style Selector="TreeView#TagTreeView TreeViewItem:selected /template/ Border#SelectionBorder">
            <Setter Property="Background"
                    Value="Transparent" />
        </Style>
    </local:MpAvUserControl.Styles>
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Background="{DynamicResource TagTreeBgBrush}">
        <TreeView x:Name="TagTreeView"
                  Margin="5,10,20,0"
                  Padding="0,0,0,150"
                  Items="{Binding RootItems}"
                  BorderThickness="0"
                  Background="Transparent"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  SelectionMode="Single, AlwaysSelected"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Width="{Binding $parent[Grid].Bounds.Width}">
            <TreeView.ItemTemplate>
                <TreeDataTemplate DataType="{x:Type local:MpAvTagTileViewModel}"
                                  ItemsSource="{Binding SortedItems}">
                    <local:MpAvTagView DataContext="{Binding}" />
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Button x:Name="AddTagButton"
                Classes="noBg noHoverBg"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                IsVisible="{Binding SelectedItem.CanAddChild}"
                CornerRadius="7"
                Margin="0,10,25,0"
                BorderThickness="0"
                Command="{Binding SelectedItem.AddNewChildTagCommand}"
                CommandParameter="{Binding $self}">
            <Button.Styles>
                <Style Selector="PathIcon">
                    <Setter Property="Foreground"
                            Value="Wheat" />
                    <Setter Property="Data"
                            Value="{StaticResource PlusSvg}" />
                </Style>
                <Style Selector="Button:pointerover PathIcon">
                    <Setter Property="Foreground"
                            Value="{DynamicResource HoverDefaultBorderBrush}" />
                    <Setter Property="Data"
                            Value="{StaticResource PlusBoxSvg}" />
                </Style>
                <Style Selector="PathIcon /template/ Path">
                    <Setter Property="Margin"
                            Value="3" />
                </Style>
            </Button.Styles>
            <ToolTip.Tip>
                <local:MpAvToolTipView>
                    <local:MpAvToolTipView.ToolTipText>
                        <MultiBinding Converter="{StaticResource MultiStringAppendConverter}">
                            <Binding>
                                <Binding.Source>
                                    <sys:String>Add Collection to '</sys:String>
                                </Binding.Source>
                            </Binding>
                            <Binding Path="SelectedItem.TagName"
                                     Source="{x:Static local:MpAvTagTrayViewModel.Instance}" />
                            <Binding>
                                <Binding.Source>
                                    <sys:String>'</sys:String>
                                </Binding.Source>
                            </Binding>
                        </MultiBinding>
                    </local:MpAvToolTipView.ToolTipText>
                </local:MpAvToolTipView>
            </ToolTip.Tip>
            <PathIcon />
        </Button>
    </Grid>
</local:MpAvUserControl>
