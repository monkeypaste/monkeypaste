<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvTriggerActionChooserView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:CompileBindings="False"
                       DataContext="{x:Static local:MpAvTriggerCollectionViewModel.Instance}"
                       x:TypeArguments="local:MpAvTriggerCollectionViewModel"
                       x:DataType="local:MpAvTriggerCollectionViewModel"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">

    <Border x:Name="TriggerSidebarOuterContainer"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <ScrollViewer x:Name="TriggerScrollViewer"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <Grid x:Name="TriggerSidebarContainer"
                  RowDefinitions="Auto,*"
                  ColumnDefinitions="*"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <!--  TRIGGER SELECTOR & SELECTED ACTION PROPERTY COLUMN  -->

                <!--    -->
                <Border x:Name="ActionPropertyOuterContainer"
                        Width="350"
                        MaxHeight="{Binding Bounds.Height, ElementName=TriggerSidebarOuterContainer}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch">
                    <ScrollViewer x:Name="PropertyScrollViewer"
                                  Grid.Column="0"
                                  Grid.Row="0"
                                  VerticalAlignment="Stretch"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden">
                        <Grid RowDefinitions="30,5,50,Auto,Auto,Auto,Auto,Auto,*"
                              ColumnDefinitions="*,25"
                              Margin="10,0,20,10"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                            <!--
                                >
                            -->

                            <!--  TRIGGER SELECTOR HEADER  -->

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Classes="h1"
                                   Content="Triggers" />
                            <Border Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Classes="labelUnderline"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Bottom" />


                            <!--  TRIGGER SELECTOR  -->

                            <Border Classes="iconLabelComboBox"
                                    Grid.Row="2"
                                    Grid.Column="0">
                                <ComboBox x:Name="TriggerComboBox"
                                          Width="275"
                                          SelectedIndex="{Binding SelectedTriggerIdx, Mode=TwoWay}"
                                          Items="{Binding SortedTriggers}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Classes="outerComboBoxItemBorder"
                                                    IsVisible="{Binding ., Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}">
                                                <DockPanel LastChildFill="True">
                                                    <Image DockPanel.Dock="Left"
                                                           Source="{Binding IconResourceObj, Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}}" />
                                                    <TextBlock Text="{Binding Label}" />
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Border>

                            <!--  ADD TRIGGER BUTTON  -->

                            <Button x:Name="AddTriggerButton"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Cursor="Hand"
                                    Classes="noBg noHoverBg outlineOver"
                                    Command="{Binding ShowTriggerSelectorMenuCommand}"
                                    CommandParameter="{Binding $self}">
                                <ToolTip.Tip>
                                    <local:MpAvToolTipView ToolTipText="New Trigger" />
                                </ToolTip.Tip>
                                <Image Source="{Binding ., Converter={x:Static local:MpAvIconSourceObjToBitmapConverter.Instance}, Source={StaticResource AddImage}}"
                                       Margin="5"
                                       Width="15"
                                       Height="15" />
                            </Button>

                            <!--  TRIGGER OPTIONS  -->

                            <Label Grid.Row="3"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Classes="h1"
                                   IsVisible="{Binding SelectedTrigger, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                                   Content="{Binding SelectedTrigger.Label}" />
                            <Border Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Classes="labelUnderline"
                                    IsVisible="{Binding SelectedTrigger, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Bottom" />
                            <local:MpAvTriggerOptionsView Grid.Row="5"
                                                          Grid.Column="0"
                                                          Grid.ColumnSpan="2"
                                                          Margin="0,5"
                                                          IsVisible="{Binding SelectedTrigger, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                                                          HorizontalAlignment="Stretch"
                                                          VerticalAlignment="Center" />

                            <!--  SELECTED TRIGGER ACTION PROPERTY  -->

                            <Label Grid.Row="6"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left"
                                   IsVisible="{Binding SelectedTrigger, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                                   Classes="h1"
                                   Content="Action" />
                            <Border Grid.Row="7"
                                    Grid.ColumnSpan="2"
                                    IsVisible="{Binding SelectedTrigger, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                                    Classes="labelUnderline"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Bottom" />
                            <Border DataContext="{Binding FocusAction}"
                                    Grid.Row="8"
                                    Grid.ColumnSpan="2"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch">
                                <local:MpAvActionPropertyView VerticalAlignment="Stretch"
                                                              HorizontalAlignment="Stretch"
                                                              IsVisible="{Binding ., Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}, FallbackValue=False, TargetNullValue=False}" />
                            </Border>
                        </Grid>

                    </ScrollViewer>
                </Border>


                <!--  SELECTED TRIGGER DESIGNER COLUMN  -->

                <Border x:Name="ActionDesignerOuterContainerBorder"
                        IsVisible="{Binding !IsDesignerWindowOpen}"
                        MaxHeight="{Binding Bounds.Height, ElementName=TriggerSidebarOuterContainer}"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Border x:Name="ActionDesignerInnerContainerBorder"
                            ClipToBounds="True"
                            BorderBrush="White"
                            BorderThickness="5"
                            MinHeight="100"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <local:MpAvActionDesignerView HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch" />
                    </Border>
                </Border>
            </Grid>
        </ScrollViewer>
    </Border>
</local:MpAvUserControl>
