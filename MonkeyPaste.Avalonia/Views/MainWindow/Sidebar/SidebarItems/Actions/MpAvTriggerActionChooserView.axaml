<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvTriggerActionChooserView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="local:MpAvActionCollectionViewModel"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition MinWidth="500"
                              Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                CornerRadius="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderThickness="1"
                BorderBrush="Black"
                Margin="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"
                           Foreground="White"
                           Text="Actions" />
                <DockPanel Grid.Row="1"
                           LastChildFill="True"
                           VerticalAlignment="Top"
                           Margin="0,0,0,10">
                    <Button BorderThickness="0"
                            DockPanel.Dock="Right"
                            MaxHeight="30"
                            Margin="5"
                            ToolTip="New Trigger"
                            HorizontalAlignment="Right"
                            IsVisible="{Binding IsAnySelected}"
                            Command="{Binding ShowTriggerSelectorMenuCommand}"
                            CommandParameter="{Binding $self}">
                        <Image Source="{Binding ., Converter={StaticResource StringResourceToImageSourceConverter}, Source={StaticResource AddIcon}}"
                               Margin="5"
                               Width="15"
                               Height="15" />
                    </Button>
                    <ComboBox x:Name="RootActionChooserComboBox"
                              DockPanel.Dock="Left"
                              VerticalAlignment="Top"
                              IsDropDownOpen="{Binding IsAnyDropDownOpen, Source={x:Static local:MpAvMainWindowViewModel.Instance}, Mode=OneWayToSource}"
                              MinWidth="200"
                              MaxHeight="40"
                              Items="{Binding Items, IsAsync=True}"
                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>

                                <Border IsVisible="{Binding IsRootAction}"
                                        MinWidth="200"
                                        DataContext="{Binding}"
                                        Margin="5"
                                        HorizontalAlignment="Stretch"
                                        BorderThickness="0"
                                        BorderBrush="Black"
                                        CornerRadius="3"
                                        Background="Transparent">
                                    <DockPanel LastChildFill="False">
                                        <Image DockPanel.Dock="Left"
                                               Source="{Binding IconId, Converter={StaticResource IconSourceObjToBitmapConverter}}"
                                               Margin="5,0,5,0"
                                               Height="15"
                                               Width="15" />
                                        <Border DockPanel.Dock="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,5,0"
                                                IsVisible="{Binding IsBusy, FallbackValue=True, TargetNullValue=True}">

                                            <local:MpAvBusySpinnerView HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Width="20"
                                                                       Height="20" />
                                        </Border>
                                        <TextBlock x:Name="RootActionTextBlock"
                                                   Margin="2,0,5,0"
                                                   Padding="1"
                                                   MinWidth="50"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding Label}"
                                                   FontSize="16"
                                                   Foreground="Black"
                                                   Background="Transparent">
                                            <TextBlock.ToolTip>
                                                <ToolTip>
                                                    <TextBlock Text="{Binding Description}" />
                                                </ToolTip>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="HorizontalAlignment"
                                        Value="Stretch" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="VerticalContentAlignment"
                                        Value="Center" />
                                <Setter Property="Padding"
                                        Value="3" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </DockPanel>
                <local:MpAvActionPropertyListBoxView Grid.Row="2"
                                                     DataContext="{Binding}" />
            </Grid>
        </Border>
        <GridSplitter Background="White"
                      Grid.Row="0"
                      Grid.Column="0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Stretch"
                      Width="5"
                      local:MpAvIsHoveringExtension.IsEnabled="True"
                      local:MpAvIsHoveringExtension.HoverCursor="ResizeWE" />
        <local:MpAvActionDesignerView Grid.Column="1"
                                      local:MpAvSizeObserverExtension.IsEnabled="True"
                                      local:MpAvSizeObserverExtension.ObservedWidth="{Binding DesignerWidth, Mode=OneWayToSource}"
                                      local:MpAvSizeObserverExtension.ObservedHeight="{Binding DesignerHeight, Mode=OneWayToSource}"
                                      DataContext="{Binding}" />
    </Grid>
</local:MpAvUserControl>
