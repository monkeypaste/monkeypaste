<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvTriggerActionChooserView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvActionCollectionViewModel.Instance}"
                       x:TypeArguments="local:MpAvActionCollectionViewModel"
                       x:DataType="local:MpAvActionCollectionViewModel"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition MinWidth="500"
                              Width="*" />
        </Grid.ColumnDefinitions>

        <Border Background="{DynamicResource ActionPropertyListBgBrush}"
                IsVisible="{Binding Items, Converter={StaticResource CollectionIsNotEmptyToBoolConverter}, ConverterParameter=test}"
                Grid.Column="0"
                Padding="10">
            <Border CornerRadius="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderThickness="1"
                    BorderBrush="Black">
                <Grid Margin="10"
                      RowDefinitions="Auto,50,*">
                  <StackPanel Grid.Row="0"
                              Orientation="Vertical">
                    <Label HorizontalAlignment="Left"
                           Classes="h1"
                           Content="Actions" />
                    <Border Classes="labelUnderline"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom" />
                  </StackPanel>
                    <DockPanel Grid.Row="1"
                               LastChildFill="True"
                               VerticalAlignment="Top"
                               Margin="0,0,0,10">
                        <Button DockPanel.Dock="Right"
                                Cursor="Hand"
                                Classes="hoverOutline"
                                MaxHeight="30"
                                Margin="5"
                                HorizontalAlignment="Right"
                                IsVisible="{Binding IsAnySelected}"
                                Command="{Binding ShowTriggerSelectorMenuCommand}"
                                CommandParameter="{Binding $self}">
                            <ToolTip.Tip>
                                <local:MpAvToolTipView ToolTipText="New Trigger" />
                            </ToolTip.Tip>
                            <Image Source="{Binding ., Converter={StaticResource IconSourceObjToBitmapConverter}, Source={StaticResource AddImage}}"
                                   Margin="5"
                                   Width="15"
                                   Height="15" />
                        </Button>
                        <local:MpAvPluginSelectorView x:Name="AnalyzerPluginSelectorView"
                                                      DockPanel.Dock="Left"
                                                      Height="50"
                                                      Margin="20,0"
                                                      HorizontalContentAlignment="Stretch"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Top"
                                                      VerticalContentAlignment="Stretch"
                                                      DataContext="{Binding}" />
                        <!--<ComboBox x:Name="RootActionChooserComboBox"
                                  DockPanel.Dock="Left"
                                  VerticalAlignment="Top"
                                  MinWidth="200"
                                  MaxHeight="40"
                                  Items="{Binding Items}"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <ComboBoxItem IsVisible="{Binding IsRootAction}">
                                        <Border MinWidth="200"
