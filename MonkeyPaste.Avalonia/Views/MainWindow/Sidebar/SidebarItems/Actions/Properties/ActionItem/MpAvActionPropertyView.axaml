<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvActionPropertyView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:CompileBindings="True"
                       x:TypeArguments="local:MpAvActionViewModelBase"
                       x:DataType="local:MpAvActionViewModelBase"
                       mc:Ignorable="d">
    <Expander x:Name="ActionExpander"
              CornerRadius="10"
              BorderBrush="Khaki"
              Padding="5,0"
              HorizontalAlignment="Stretch"
              IsExpanded="{Binding IsExpanded, Mode=TwoWay}">
        <Expander.Header>
            <local:MpAvActionPropertyHeaderView Grid.Column="0"
                                                HorizontalAlignment="Stretch"
                                                DataContext="{Binding}" />
        </Expander.Header>
        <Grid>
            <Border Grid.Row="2"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="0"
                    Background="Transparent"
                    Margin="0,0,0,5">
                <ContentControl x:Name="RootActionPropertyContentControl"
                                Content="{Binding}">
                    <ContentControl.DataTemplates>
                        <local:MpAvActionItemPropertiesTemplateSelector>
                            <!--  Triggers  -->

                            <!--  Content Add  -->
                            <DataTemplate x:Key="ContentAddedPropertiesTemplate"
                                          DataType="{x:Type local:MpAvContentAddTriggerViewModel}">
                                <local:MpAvContentAddTriggerPropertyView DataContext="{Binding}" />
                            </DataTemplate>

                            <!--  Content Tagged  -->
                            <DataTemplate x:Key="ContentTaggedPropertiesTemplate"
                                          DataType="{x:Type local:MpAvContentTaggedTriggerViewModel}">
                                <local:MpAvContentTaggedTriggerPropertyView DataContext="{Binding}" />
                            </DataTemplate>

                            <!--  File System Changed  -->
                            <DataTemplate x:Key="FileSystemChangePropertiesTemplate"
                                          DataType="{x:Type local:MpAvFileSystemTriggerViewModel}">
                                <local:MpAvFileSystemTriggerPropertyView DataContext="{Binding}" />
                            </DataTemplate>

                            <!--  Triggers END  -->

                            <!--  Compare  -->
                            <DataTemplate x:Key="ComparePropertiesTemplate"
                                          DataType="{x:Type local:MpAvCompareActionViewModelBase}">
                                <local:MpAvCompareActionPropertyView DataContext="{Binding}" />
                            </DataTemplate>
                            <!--  Analyze  -->
                            <DataTemplate x:Key="AnalyzePropertiesTemplate"
                                          DataType="{x:Type local:MpAvAnalyzeActionViewModel}">
                                <local:MpAvAnalyzeActionPropertyView DataContext="{Binding}" />
                            </DataTemplate>
                            <!--  Classify  -->
                            <DataTemplate x:Key="ClassifyPropertiesTemplate"
                                          DataType="{x:Type local:MpAvClassifyActionViewModel}">
                                <local:MpAvClassifyActionPropertyView DataContext="{Binding}" />
                            </DataTemplate>

                            <!--  File Writer  -->
                            <DataTemplate x:Key="FileWriterPropertiesTemplate"
                                          DataType="{x:Type local:MpAvFileWriterActionViewModel}">
                                <local:MpAvFileWriterActionPropertyView DataContext="{Binding}" />
                            </DataTemplate>

                            <!--  Macro  -->
                            <DataTemplate x:Key="MacroPropertiesTemplate"
                                          DataType="{x:Type local:MpAvMacroActionViewModel}">
                                <local:MpAvMacroActionPropertyView DataContext="{Binding}" />
                            </DataTemplate>

                          <!--  Timer  -->
                          <DataTemplate x:Key="TimerPropertiesTemplate"
                                        DataType="{x:Type local:MpAvTimerActionViewModel}">
                            <local:MpAvTimerActionPropertyView DataContext="{Binding}" />
                          </DataTemplate>
                        </local:MpAvActionItemPropertiesTemplateSelector>
                    </ContentControl.DataTemplates>
                </ContentControl>
                <!--</DockPanel>-->
            </Border>
        </Grid>
    </Expander>
</local:MpAvUserControl>
