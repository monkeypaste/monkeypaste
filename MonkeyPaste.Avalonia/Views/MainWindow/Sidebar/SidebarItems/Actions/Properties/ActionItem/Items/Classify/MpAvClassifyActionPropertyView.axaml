<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvClassifyActionPropertyView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:CompileBindings="True"
                       xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                       x:TypeArguments="local:MpAvClassifyActionViewModel"
                       x:DataType="local:MpAvClassifyActionViewModel"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <Grid Margin="10"
          RowDefinitions="0.3*"
          ColumnDefinitions="0.3*,*">
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Classes="actionProperty"
                   Text="Collection" />
        <local:MpAvPopupMenuSelector Grid.Row="0"
                                     Grid.Column="1"
                                     MinWidth="150"
                                     DataContext="{Binding}" />
    </Grid>
</local:MpAvUserControl>
