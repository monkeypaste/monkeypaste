<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvShortcutTriggerPropertyView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:CompileBindings="True"
                       xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                       x:TypeArguments="local:MpAvShortcutTriggerViewModel"
                       x:DataType="local:MpAvShortcutTriggerViewModel"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <Grid Margin="10"
          Classes.empty="{Binding ShortcutViewModel, Converter={x:Static ObjectConverters.IsNull}}"
          RowDefinitions="0.3*"
          ColumnDefinitions="0.3*,*">
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Shortcut" />
        <Button Grid.Row="0"
                Grid.Column="1"
                Classes="arg1"
                IsVisible="{Binding ShortcutViewModel, Converter={x:Static ObjectConverters.IsNotNull}}"
                Command="{Binding AssignHotkeyCommand}">

            <local:MpAvShortcutView Background="Transparent"
                                    DataContext="{Binding ShortcutViewModel}" />
        </Button>
        <Button Grid.Row="0"
                Grid.Column="1"
                Classes="arg1"
                IsVisible="{Binding ShortcutViewModel, Converter={x:Static ObjectConverters.IsNull}}"
                Command="{Binding AssignHotkeyCommand}">
            Click to assign
        </Button>
    </Grid>

</local:MpAvUserControl>
