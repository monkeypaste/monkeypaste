<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvMacroActionPropertyListBoxItemView"
                     xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:sys="clr-namespace:System;assembly=mscorlib"
                     xmlns:local="using:MonkeyPaste.Avalonia"
                       x:CompileBindings="True"
                     xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                     x:TypeArguments="local:MpAvMacroActionViewModel"
                     x:DataType="local:MpAvMacroActionViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Classes="actionProperty"
                   Text="Type" />
        <Border Grid.Row="0"
                Grid.Column="1"
                Classes="actionProperty">
            <ComboBox x:Name="CommandTypeChooserComboBox"
                      Classes="actionProperty"
                      SelectedIndex="{Binding CommandType,
                                              Converter={StaticResource EnumToIntConverter},
                                              ConverterParameter=MonkeyPaste.MpMacroCommandType,
                                              Mode=TwoWay}"
                      Items="{Binding .,
                                            Converter={StaticResource EnumToItemSourceLabelsConverter},
                                            ConverterParameter=MonkeyPaste.MpMacroCommandType}" />
        </Border>
        <Grid x:Name="CommandParametersGrid"
              Grid.Row="1"
              Grid.ColumnSpan="2">
            <local:MpAvPluginParameterListBoxView DataContext="{Binding SelectedPreset}" />
        </Grid>
    </Grid>
</local:MpAvUserControl>
