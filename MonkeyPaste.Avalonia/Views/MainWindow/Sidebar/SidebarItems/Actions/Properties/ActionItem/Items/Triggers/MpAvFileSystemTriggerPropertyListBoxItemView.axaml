<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvFileSystemTriggerPropertyListBoxItemView"
                     xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:sys="clr-namespace:System;assembly=mscorlib"
                     xmlns:local="using:MonkeyPaste.Avalonia"
                     xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                     x:TypeArguments="local:MpAvFileSystemTriggerViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Style="{StaticResource ActionPropertyTextBlockStyle}"
                   Text="Directory" />
        <Border Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Style="{StaticResource ActionPropertyComboBoxStyle_Border}">
            <Button Command="{Binding SelectFileSystemPathCommand}"
                    Background="Transparent"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    MaxWidth="200"
                    BorderThickness="0"
                    >
                <Grid>
                    <TextBlock Visibility="{Binding FileSystemPath,
                                                    Converter={StaticResource IsNotNullToVisibilityFlipConverter}}"
                               Text="Select file or folder..."
                               Foreground="Black"
                               TextAlignment="Left"
                               VerticalAlignment="Center" />
                    <TextBlock Visibility="{Binding FileSystemPath,
                                                    Converter={StaticResource IsNotNullToVisibilityConverter}}"
                               Text="{Binding FileSystemPath, Converter={StaticResource StringPathToFileOrFolderNameConverter}}"
                               ToolTip="{Binding FileSystemPath}"
                               TextAlignment="Right"
                               VerticalAlignment="Center" />
                </Grid>
            </Button>
        </Border>
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Style="{StaticResource ActionPropertyTextBlockStyle}"
                   Text="Include Subdirectories" />
        <CheckBox Grid.Row="1"
                  Grid.Column="1"
                  MinWidth="100"
                  Margin="5,10"
                  IsChecked="{Binding IncludeSubdirectories,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      NotifyOnSourceUpdated=True,
                                      NotifyOnTargetUpdated=True}" />
    </Grid>

</local:MpAvUserControl>
