                                     IsPopupOpen="{Binding IsPopupMenuOpen, Mode=TwoWay}"
                                     EmptyIconResourceObj="{Binding IconResourceKeyStr}"
                                     EmptyText="Select..."
                                     SelectedMenuItem="{Binding SelectedPopupMenuItemViewModel}" />

