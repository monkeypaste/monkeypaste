<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:pcl="using:MonkeyPaste"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="pcl:MpIAsyncComboBoxItemViewModel"
                       x:DataType="pcl:MpIAsyncComboBoxItemViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvPluginSelectorItemView">
    <Border Margin="5"
            Padding="5"
            MinHeight="30"
            HorizontalAlignment="Stretch"
            BorderThickness="0"
            BorderBrush="Black"
            CornerRadius="3"
            Background="Transparent">
        <DockPanel>
            <Image DockPanel.Dock="Left"
                   Margin="5,0,5,0"
                   Source="{Binding IconId, Converter={StaticResource IconSourceObjToBitmapConverter}}"
                   Height="25"
                   Width="25" />

            <Border DockPanel.Dock="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,5,0"
                    IsVisible="{Binding IsBusy, FallbackValue=True, TargetNullValue=True}">

                <local:MpAvBusySpinnerView HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Width="25"
                                           Height="25" />
            </Border>
            <TextBlock Margin="2,0,5,0"
                       Padding="3"
                       Text="{Binding Label}"
                       VerticalAlignment="Stretch"
                       HorizontalAlignment="Left"
                       FontSize="16"
                       Foreground="Black"
                       Background="Transparent" />
        </DockPanel>
    </Border>
</local:MpAvUserControl>
