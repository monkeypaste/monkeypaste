<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:pcl="using:MonkeyPaste"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="pcl:MpIAsyncComboBoxItemViewModel"
                       x:DataType="pcl:MpIAsyncComboBoxItemViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvPluginSelectorItemView">

    <Border Classes="outerComboBoxItemBorder">
        <DockPanel>
            <Image Source="{Binding IconId, Converter={StaticResource IconSourceObjToBitmapConverter}}" />

            <Border Classes="comboBoxItemBusyBorder"
                    IsVisible="{Binding IsBusy}">
                <local:MpAvBusySpinnerView />
            </Border>
            <TextBlock Text="{Binding Label}" />
        </DockPanel>
    </Border>
</local:MpAvUserControl>
