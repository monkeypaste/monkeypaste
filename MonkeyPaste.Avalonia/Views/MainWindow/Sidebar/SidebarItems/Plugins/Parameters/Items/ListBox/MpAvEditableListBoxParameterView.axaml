<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvEditableListBoxParameterView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvEnumerableParameterViewModel"
                       x:DataType="local:MpAvEnumerableParameterViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <Border x:Name="ListBoxContainerBorder"
            Classes="paramBorder">
        <Grid RowDefinitions="Auto,Auto">
            <ListBox x:Name="EditableList"
                     Classes="paramValueListBox"
                     IsVisible="{Binding Items, Converter={x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}}"
                     Grid.Row="0"
                     Background="Transparent"
                     HorizontalAlignment="Stretch"
                     Items="{Binding Items}"
                     SelectedItem="{Binding SelectedItem}"
                     SelectionMode="Single"
                     Margin="10,0"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     MaxWidth="{Binding Bounds.Width, ElementName=ListBoxContainerBorder}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:MpAvContentQueryTextBoxView Background="Transparent"
                                                           DataContext="{Binding}"
                                                           BorderBrush="{Binding BorderBrush, Converter={StaticResource StringHexToBrushConverter}}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Grid.Row="1"
                    Classes="defaultButton"
                    HorizontalAlignment="Right"
                    Command="{Binding AddValueCommand}">
                <DockPanel>
                    <Image Source="{Binding ., Converter={StaticResource IconSourceObjToBitmapConverter}, Source={StaticResource AddImage}}"
                           DockPanel.Dock="Left" />
                    <TextBlock DockPanel.Dock="Right"
                               Text="Add" />
                </DockPanel>
            </Button>
        </Grid>
    </Border>
</local:MpAvUserControl>
