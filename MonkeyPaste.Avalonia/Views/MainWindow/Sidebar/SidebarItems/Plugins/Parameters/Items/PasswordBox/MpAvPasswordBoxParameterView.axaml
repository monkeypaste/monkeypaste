<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvPasswordBoxParameterView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvTextBoxParameterViewModel"
                       x:DataType="local:MpAvTextBoxParameterViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <Border BorderThickness="0"
            Background="White"
            CornerRadius="3"
            Padding="5"
            Margin="3">
        <Grid ColumnDefinitions="0.7*,30">
            <!--
                FontFamily="pack://application:,,,/Resources/Fonts/#password"
            -->
            <TextBox Grid.Column="0"
                     Padding="3"
                     BorderThickness="0"
                     MinWidth="100"
                     local:MpAvIsFocusedExtension.IsEnabled="True"
                     local:MpAvTextBoxSelectionExtension.IsEnabled="True"
                     local:MpAvTextBoxSelectionExtension.TextSelectionRange="{Binding}"
                     Text="{Binding CurrentValue, Mode=TwoWay}">
                <!--<TextBox.InputBindings>
                -->
                <!--  Disable CTRL+C (COPY)  -->
                <!--
                    <KeyBinding Command="ApplicationCommands.NotACommand"
                                Key="C"
                                Modifiers="Control" />
                -->
                <!--  Disable CTRL+X (CUT)  -->
                <!--
                    <KeyBinding Command="ApplicationCommands.NotACommand"
                                Key="X"
                                Modifiers="Control" />
                </TextBox.InputBindings>
                <TextBox.ContextMenu>
                -->
                <!--  Hide context menu where you could copy/cut as well  -->
                <!--
                    <ContextMenu Visibility="Collapsed" />
                </TextBox.ContextMenu>-->
            </TextBox>

            <Button Grid.Column="1"
                    BorderThickness="0"
                    Background="Beige"
                    Margin="5"
                    IsVisible="{Binding IsContentQuery}"
                    Command="{Binding ShowContentPathSelectorMenuCommand}"
                    CommandParameter="{Binding $self}">
                <Image Source="{Binding ., Converter={StaticResource IconSourceObjToBitmapConverter}, Source={StaticResource FilterImage}}"
                       Stretch="Uniform"
                       Width="10"
                       Height="10" />
            </Button>

        </Grid>
    </Border>
</local:MpAvUserControl>
