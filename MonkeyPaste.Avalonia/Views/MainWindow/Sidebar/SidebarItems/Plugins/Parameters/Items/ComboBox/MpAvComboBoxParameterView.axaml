<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvComboBoxParameterView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvSingleEnumerableParameterViewModel"
                       x:DataType="local:MpAvSingleEnumerableParameterViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <local:MpAvUserControl.Styles>
        <Style Selector="ComboBox.fontChooser"
               x:DataType="local:MpAvSingleEnumerableParameterViewModel">
            <Setter Property="FontFamily"
                    Value="{Binding SelectedValue, Converter={x:Static local:MpAvStringToFontFamilyConverter.Instance}}" />
        </Style>
        <Style Selector="ComboBox.fontChooser ComboBoxItem TextBlock"
               x:DataType="local:MpAvSingleEnumerableParameterViewModel">
            <Setter Property="FontFamily"
                    Value="{Binding $self.Text, Converter={x:Static local:MpAvStringToFontFamilyConverter.Instance}}" />
        </Style>
    </local:MpAvUserControl.Styles>
    <Border Classes="paramBorder comboBoxBorder">
        <ToolTip.Tip>
            <local:MpAvToolTipView ToolTipText="{Binding ParameterTooltipText}" />
        </ToolTip.Tip>
        <ComboBox ItemsSource="{Binding Items}"
                  SelectedIndex="{Binding SelectedItemIdx, Mode=TwoWay}"
                  IsDropDownOpen="{Binding IsParameterDropDownOpen}"
                  HorizontalAlignment="Stretch"
                  Margin="3"
                  MinWidth="80">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Label}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Border>
</local:MpAvUserControl>
