        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Rectangle x:Name="SliderValueRectangle"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Stretch"
                       MinWidth="0"
                       MaxWidth="{Binding TotalWidth}"
                       Width="{Binding ., Converter={StaticResource SliderValueWidthConverter}}">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black"
                                     Opacity="0.6" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBox x:Name="SliderValueTextBox"
                     Cursor="Ibeam"
                     local:MpAvIsFocusedExtension.IsEnabled="True"
                     BorderThickness="0"
                     IsReadOnly="False"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Text="{Binding SliderValue, Mode=TwoWay}">
