                        <Binding Path="SliderValue"
                                 FallbackValue="1"
                                 TargetNullValue="1" />
                        <Binding Path="MaxValue"
                                 FallbackValue="1"
                                 TargetNullValue="1" />
                        <Binding Path="MinValue"
                                 FallbackValue="0"
                                 TargetNullValue="0" />
                        <Binding Path="Bounds.Width"
                                 ElementName="SliderBorder"
                                 FallbackValue="50"
                                 TargetNullValue="50" />
                    </MultiBinding>
                    <MultiBinding Converter="{StaticResource MultiDoubleMathConverter}"
                                  ConverterParameter="*">
                        <Binding Path="SliderValue"
                                 FallbackValue="1"
                                 TargetNullValue="1" />
                        <Binding Path="Bounds.Width"
                                 ElementName="SliderBorder"
                                 FallbackValue="50"
                                 TargetNullValue="50" />
                    </MultiBinding>
                </Rectangle.Width>-->
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black"
                                     Opacity="0.6" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBox x:Name="SliderValueTextBox"
                     Cursor="Ibeam"
                     local:MpAvIsFocusedExtension.IsEnabled="True"
                     BorderThickness="0"
                     IsReadOnly="False"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     MinWidth="0"
                     Text="{Binding SliderValue, Mode=TwoWay}">

            </TextBox>
        </Grid>
    </Border>
</local:MpAvUserControl>
