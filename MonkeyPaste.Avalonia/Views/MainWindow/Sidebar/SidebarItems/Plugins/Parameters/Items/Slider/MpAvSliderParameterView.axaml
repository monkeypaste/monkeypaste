<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvSliderParameterView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="pcl:MpISliderViewModel"
                       x:DataType="pcl:MpISliderViewModel"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <Border x:Name="SliderBorder"
            Classes.paramBorder="True"
            Classes.sliderBorder="True"
            Focusable="True"
            MaxHeight="20"
            Cursor="SizeWestEast">
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Rectangle x:Name="SliderValueRectangle"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Stretch"
                       MinWidth="0"
                       MaxWidth="{Binding Bounds.Width, ElementName=SliderBorder}">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Black"
                                     Opacity="0.6" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBox x:Name="SliderValueTextBox"
                     Cursor="Ibeam"
                     local:MpAvIsFocusedExtension.IsEnabled="True"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                     BorderThickness="0"
                     IsReadOnly="False"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     MinWidth="0"
                     Text="{Binding SliderValue, Mode=TwoWay}">

            </TextBox>
        </Grid>
    </Border>
</local:MpAvUserControl>
