                     xmlns:local="using:MonkeyPaste.Avalonia"
                     xmlns:pcl="using:MonkeyPaste"
                     x:TypeArguments="pcl:MpISliderViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800">
    <Border x:Name="SliderBorder"
            BorderThickness="1"
            Background="Transparent"
            Focusable="True"
            MinWidth="87"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            local:MpAvSizeObserverExtension.IsEnabled="True"
            local:MpAvSizeObserverExtension.ObservedWidth="{Binding TotalWidth, Mode=OneWayToSource}"
            Cursor="SizeWestEast">
