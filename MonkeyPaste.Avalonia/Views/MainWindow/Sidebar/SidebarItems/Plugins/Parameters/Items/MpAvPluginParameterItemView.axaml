<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:pcl="using:MonkeyPaste"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="local:MpAvPluginParameterViewModelBase"
                       x:DataType="local:MpAvPluginParameterViewModelBase"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvPluginParameterItemView">
    <local:MpAvUserControl.Styles>
        <Style Selector="Border#ParameterContainerBorder">
            <Setter Property="BorderBrush"
                    Value="Transparent" />
        </Style>
        <Style Selector="Border#ParameterContainerBorder:not(.isValid)">
            <Setter Property="BorderBrush"
                    Value="Red" />
        </Style>
    </local:MpAvUserControl.Styles>
    <Border x:Name="ParameterContainerBorder" 
            BorderThickness="2"
            Background="Transparent"
            Classes.isValid="{Binding IsValid}">
        <Grid ShowGridLines="False"
              Background="DarkViolet"
              ColumnDefinitions="100,30,*">
            <!--  LABEL  -->

            <TextBlock Grid.Column="0"
                       TextWrapping="Wrap"
                       MaxWidth="110"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="5,1,7,0"
                       Text="{Binding Label}" />

            <!--  DESCRIPTION  -->

            <Grid Grid.Column="1"
                  Cursor="Help"
                  Width="15"
                  Height="15"
                  IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Right">
                <ToolTip.Tip>
                    <local:MpAvToolTipView ToolTipText="{Binding Description}" />
                </ToolTip.Tip>
                <Ellipse HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         StrokeThickness="1"
                         Stroke="White"
                         Fill="Blue" />
                <TextBlock Foreground="White"
                           FontSize="10"
                           FontWeight="SemiBold"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    i
                </TextBlock>
            </Grid>

            <!--  PARAMETER  -->

            <ContentControl x:Name="ParameterContentControl"
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Content="{Binding}">
                <ToolTip.Tip>
                    <local:MpAvToolTipView Classes.error="True"
                                           IsVisible="{Binding !IsValid}"
                                           ToolTipText="{Binding ValidationMessage}" />
                </ToolTip.Tip>
                <ContentControl.DataTemplates>
                    <local:MpAvPluginParameterTemplateSelector>

                        <!--  MultiSelect ListBox Parameter  -->

                        <DataTemplate x:Key="MultiSelectListParameterTemplate"
                                      DataType="local:MpAvEnumerableParameterViewModel">
                            <local:MpAvMultiSelectListBoxParameterView DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  Single Select ListBox Parameter  -->

                        <DataTemplate x:Key="ListParameterTemplate"
                                      DataType="local:MpAvEnumerableParameterViewModel">
                            <local:MpAvSingleSelectListBoxParameterView DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  Editable ListBox Parameter  -->

                        <DataTemplate x:Key="EditableListParameterTemplate"
                                      DataType="local:MpAvEnumerableParameterViewModel">
                            <local:MpAvEditableListBoxParameterView DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  ComboBox Parameter  -->

                        <DataTemplate x:Key="ComboBoxParameterTemplate"
                                      DataType="local:MpAvEnumerableParameterViewModel">
                            <local:MpAvComboBoxParameterView DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  TextBox Parameter  -->

                        <DataTemplate x:Key="TextBoxParameterTemplate"
                                      DataType="local:MpAvTextBoxParameterViewModel">
                            <local:MpAvTextBoxParameterView DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  PasswordBox Parameter  -->

                        <DataTemplate x:Key="PasswordBoxParameterTemplate"
                                      DataType="local:MpAvTextBoxParameterViewModel">
                            <local:MpAvPasswordBoxParameterView DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  CheckBox Parameter  -->

                        <DataTemplate x:Key="CheckBoxParameterTemplate"
                                      DataType="local:MpAvCheckBoxParameterViewModel">
                            <local:MpAvCheckBoxParameterView DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  Slider Parameter  -->

                        <DataTemplate x:Key="SliderParameterTemplate"
                                      DataType="local:MpAvSliderParameterViewModel">
                            <local:MpAvSliderParameterView Margin="10,0"
                                                           DataContext="{Binding}" />
                        </DataTemplate>

                        <!--  File or Directory Chooser Parameter  -->

                        <DataTemplate x:Key="FileChooserParameterTemplate"
                                      DataType="local:MpAvFileChooserParameterViewModel">
                            <local:MpAvFileChooserParameterView DataContext="{Binding}" />
                        </DataTemplate>
                    </local:MpAvPluginParameterTemplateSelector>
                </ContentControl.DataTemplates>
            </ContentControl>

            <!--  VALDIATION  -->

            <!--<Grid Grid.Column="3"
                  IsVisible="{Binding !IsValid}"
                  Width="15"
                  Height="15"
                  Cursor="Help"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Right">
                <ToolTip.Tip>
                </ToolTip.Tip>
                <Ellipse HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         StrokeThickness="1"
                         Stroke="White"
                         Fill="Crimson" />
                <TextBlock Foreground="White"
                           FontSize="8"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    !
                </TextBlock>
            </Grid>-->
        </Grid>
    </Border>
</local:MpAvUserControl>
