<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:pcl="using:MonkeyPaste"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       x:TypeArguments="local:MpAvIParameterCollectionViewModel"
                       x:DataType="local:MpAvIParameterCollectionViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvPluginParameterListBoxView">
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ListBox x:Name="PluginParameterListBox"
                 IsVisible="{Binding Items, Converter={StaticResource CollectionIsNotEmptyToBoolConverter}, FallbackValue=True, TargetNullValue=True}"
                 Items="{Binding Items}"
                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:MpAvPluginParameterItemView HorizontalAlignment="Stretch"
                                                       Classes.invalid="{Binding !IsValid}"
                                                       DataContext="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--  IsEmpty Overlay  -->

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="50"
                IsVisible="{Binding Items, ConverterParameter=flip, Converter={StaticResource CollectionIsNotEmptyToBoolConverter}, FallbackValue=False, TargetNullValue=False}"
                Background="Transparent">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="WrapWithOverflow"
                       TextAlignment="Center"
                       FontSize="14"
                       Classes="disabled">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource MultiStringAppendConverter}">
                        <Binding>
                            <Binding.Source>
                                <sys:String>'</sys:String>
                            </Binding.Source>
                        </Binding>
                        <Binding Path="LabelText"
                                 x:DataType="pcl:MpILabelTextViewModel" />
                        <Binding>
                            <Binding.Source>
                                <sys:String>' Has No Settings</sys:String>
                            </Binding.Source>
                        </Binding>

                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </Border>
    </Grid>
</local:MpAvUserControl>

