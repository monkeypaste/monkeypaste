<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:pcl="using:MonkeyPaste"
             xmlns:local="using:MonkeyPaste.Avalonia"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="MonkeyPaste.Avalonia.MpAvPluginSelectorView">
    <Border Classes="iconLabelComboBox">
        <ComboBox IsEnabled="{Binding Items, Converter={StaticResource CollectionIsNotEmptyToBoolConverter}}"
                  SelectedIndex="{Binding Selection.SelectedIndex, Mode=TwoWay}"
                  Items="{Binding Items}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <local:MpAvPluginSelectorItemView DataContext="{Binding}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Border>
</UserControl>

