<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:DataType="local:MpAvClipTrayViewModel"
                       x:TypeArguments="local:MpAvClipTrayViewModel"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvClipTrayViewModel.Instance}"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvClipTrayView">
    <Grid Margin="5"
          AttachedToVisualTree="MpAvClipTrayView_AttachedToVisualTree">
        <Grid.Background>
            <SolidColorBrush Color="Cyan"
                             Opacity="0.7" />
        </Grid.Background>
        <Border x:Name="ClipTrayContainerBorder"
                local:MpAvSizeObserverExtension.IsEnabled="True"
                local:MpAvSizeObserverExtension.ObservedWidth="{Binding ClipTrayScreenWidth,
                                                                        Mode=OneWayToSource}"
                local:MpAvSizeObserverExtension.ObservedHeight="{Binding ClipTrayScreenHeight,
                                                                         Mode=OneWayToSource}">
            <!--<ScrollViewer x:Name="ClipTrayScrollViwer"
                          HorizontalScrollBarVisibility="Visible"
                          VerticalScrollBarVisibility="Visible"
                          AllowAutoHide="False"
                          MaxWidth="{Binding ClipTrayScreenWidth}"
                          Height="{Binding ClipTrayScreenHeight}">-->
            <ListBox x:Name="ClipTrayListBox"
                     local:MpAvKineticScrollExtension.IsEnabled="True"
                     local:MpAvKineticScrollExtension.FrictionX="0.85"
                     local:MpAvKineticScrollExtension.WheelDampeningX="0.08"
                     local:MpAvKineticScrollExtension.FrictionY="0.75"
                     local:MpAvKineticScrollExtension.WheelDampeningY="0.08"
                     local:MpAvKineticScrollExtension.ScrollOffsetX="{Binding ScrollOffsetX,
                                                                              Mode=TwoWay}"
                     local:MpAvKineticScrollExtension.ScrollOffsetY="{Binding ScrollOffsetY,
                                                                              Mode=TwoWay}"
                     local:MpAvKineticScrollExtension.MaxScrollOffsetX="{Binding MaxScrollOffsetX}"
                     local:MpAvKineticScrollExtension.MaxScrollOffsetY="{Binding MaxScrollOffsetY}"
                     local:MpAvKineticScrollExtension.VelocityX="{Binding ScrollVelocityX,
                                                                          Mode=TwoWay}"
                     local:MpAvKineticScrollExtension.VelocityY="{Binding ScrollVelocityY,
                                                                          Mode=TwoWay}"
                     local:MpAvKineticScrollExtension.CanScrollX="{Binding CanScroll}"
                     local:MpAvKineticScrollExtension.CanScrollY="{Binding CanScroll}"
                     ScrollViewer.HorizontalScrollBarVisibility="Visible"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                     Background="Transparent"
                     HorizontalAlignment="Left"
                     ClipToBounds="True"
                     VerticalAlignment="Top"
                     Width="{Binding ClipTrayScreenWidth}"
                     Height="{Binding ClipTrayScreenHeight}"
                     Items="{Binding Items}">
                <!--<ListBox.RenderTransform>
                        <TranslateTransform X="{Binding ScrollOffsetX,
                                                        Converter={StaticResource NegateDoubleConverter}}" />
                    </ListBox.RenderTransform>-->
                <ListBox.Styles>
                    <!--  Give the ListBoxItems a fixed with of 100 and right-align them  -->
                    <Style Selector="ListBoxItem" x:DataType="local:MpAvClipTileViewModel">
                        <!--<Setter Property="MinWidth"
                                    Value="{Binding MinSize}" />
                            <Setter Property="MinHeight"
                                    Value="{Binding MinSize}" />-->
                        <Setter Property="HorizontalAlignment"
                                Value="Left" />
                        <Setter Property="VerticalAlignment"
                                Value="Top" />
                        <Setter Property="Margin"
                                Value="0" />
                        <Setter Property="Padding"
                                Value="0" />
                        <Setter Property="FocusAdorner"
                                Value="{x:Null}" />
                        <Setter Property="Canvas.Left"
                                Value="{Binding TrayX}" />
                        <Setter Property="Canvas.Top"
                                Value="{Binding TrayY}" />
                        <!--<Setter Property="RenderTransformOrigin"
                                    Value="0,0" />-->
                        <!--<Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>-->

                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!--
                            Canvas.Left="{Binding TrayX}"
                            Canvas.Top="{Binding TrayY}"
                        -->
                        <local:MpAvClipTileView DataContext="{Binding}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="Brown" />
                        <!--<VirtualizingStackPanel Orientation="Horizontal" />-->
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <!--</ScrollViewer>-->
        </Border>
    </Grid>

</local:MpAvUserControl>
