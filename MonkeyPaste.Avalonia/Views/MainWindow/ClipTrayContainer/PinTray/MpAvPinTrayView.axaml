<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:Name="PinTrayUserControl"
                       x:TypeArguments="local:MpAvClipTrayViewModel"
                       x:DataType="local:MpAvClipTrayViewModel"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvClipTrayViewModel.Instance}"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvPinTrayView">
    <local:MpAvUserControl.Styles>
        <Style Selector="Border#PinTrayContainerBorder.empty Button#UnpinAllButton">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>
        <Style Selector="Border#PinTrayContainerBorder:pointerover:not(.empty) Button#UnpinAllButton">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>
    </local:MpAvUserControl.Styles>
    <Border x:Name="PinTrayContainerBorder"
            Classes.empty="{Binding IsPinTrayEmpty}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <ListBox x:Name="PinTrayListBox"
                     Background="Transparent"
                     TabIndex="1"
                     IsTabStop="True"
                     MaxWidth="{Binding MaxPinTrayScreenWidth}"
                     MaxHeight="{Binding MaxPinTrayScreenHeight}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     SelectedItem="{Binding SelectedPinTrayItem, Mode=TwoWay}"
                     Items="{Binding PinnedItems}">
                <ListBox.Resources>
                    <SolidColorBrush x:Key="SystemControlHighlightListAccentLowBrush">
                        Transparent
                    </SolidColorBrush>
                    <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush">
                        Transparent
                    </SolidColorBrush>
                    <SolidColorBrush x:Key="SystemControlHighlightListAccentHighBrush">
                        Transparent
                    </SolidColorBrush>
                    <SolidColorBrush x:Key="SystemControlHighlightListLowBrush">
                        Transparent
                    </SolidColorBrush>
                    <SolidColorBrush x:Key="SystemControlHighlightListMediumBrush">
                        Transparent
                    </SolidColorBrush>
                    <SolidColorBrush x:Key="SystemControlHighlightListHighBrush">
                        Transparent
                    </SolidColorBrush>
                </ListBox.Resources>
                <ListBox.Styles>
                    <Style Selector="ListBoxItem"
                           x:DataType="local:MpAvClipTileViewModel">
                        <!--<Setter Property="IsSelected"
                            Value="{Binding IsSelected, Mode=TwoWay}" />-->
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!--<ListBoxItem Classes.TileHover="{Binding IsHovering}">-->
                        <local:MpAvClipTileView DataContext="{Binding}"
                                                local:MpAvIsHoveringExtension.IsEnabled="True"
                                                local:MpAvIsHoveringExtension.IsHovering="{Binding IsHovering, Mode=TwoWay}"
                                                local:MpAvBoundsObserverExtension.IsEnabled="True"
                                                local:MpAvBoundsObserverExtension.ObservedBounds="{Binding ObservedBounds, Mode=TwoWay}"
                                                IsVisible="{Binding IsPinned}" />
                        <!--</ListBoxItem>-->
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>

            <!--  IsBusy Overlay  -->
            <Border HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Cursor="Wait"
                    IsVisible="{Binding IsPinTrayBusy}">
                <local:MpAvBusySpinnerView HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Width="70"
                                           Height="70" />
            </Border>
            <!--  UNPIN All  -->

            <Button x:Name="UnpinAllButton"
                    Classes="defaultButton"
                    IsVisible="{Binding !IsPinTrayEmpty}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,5,10,0"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="DimGray"
                    Background="Silver"
                    Padding="5,2"
                    Command="{Binding UnpinAllCommand}">
                <Image DockPanel.Dock="Left"
                       Source="{Binding ., Source={StaticResource ClearGridImage}, Converter={StaticResource IconSourceObjToBitmapConverter}}" />
            </Button>

        </Grid>
    </Border>
</local:MpAvUserControl>
