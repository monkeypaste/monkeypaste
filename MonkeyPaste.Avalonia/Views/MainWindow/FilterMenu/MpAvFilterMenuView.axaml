<local:MpAvUserControl xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:TypeArguments="local:MpAvFilterMenuViewModel"
                       x:DataType="local:MpAvFilterMenuViewModel"
                       x:CompileBindings="True"
                       DataContext="{x:Static local:MpAvFilterMenuViewModel.Instance}"
                       mc:Ignorable="d"
                       d:DesignWidth="800"
                       d:DesignHeight="450"
                       x:Class="MonkeyPaste.Avalonia.MpAvFilterMenuView">
    <DockPanel x:Name="FilterDockPanel"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Background="{StaticResource FilterMenuBgBrush}"
               LastChildFill="True">
        <DockPanel.Styles>
            <Style Selector="ToggleButton">
                <Setter Property="Padding"
                        Value="0" />
            </Style>
            <Style Selector="ToggleButton#PlayPause Image">
                <Setter Property="Source"
                        Value="{Binding PlayOrPauseIconResoureKey, Source={x:Static local:MpAvClipTrayViewModel.Instance}, ConverterParameter=white, Converter={StaticResource StringHexToBitmapTintConverter}}" />
            </Style>
            <Style Selector="ToggleButton#PlayPause:pointerover Image">
                <Setter Property="Source"
                        Value="{Binding PlayOrPauseIconResoureKey, Source={x:Static local:MpAvClipTrayViewModel.Instance}, ConverterParameter=gray, Converter={StaticResource StringHexToBitmapTintConverter}}" />
            </Style>
        </DockPanel.Styles>
        <!--  Pause / Resume Clipboard Listener Toggle Button  -->
        <ToggleButton x:Name="PlayPause"
                      Classes="iconButton"
                      local:MpAvSizeObserverExtension.IsEnabled="False"
                      local:MpAvSizeObserverExtension.ObservedWidth="{Binding PlayPauseButtonWidth, Mode=OneWayToSource}"
                      Padding="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Classes.paused="{Binding IsAppPaused, Source={x:Static local:MpAvClipTrayViewModel.Instance}}"
                      IsChecked="{Binding IsAppPaused, Source={x:Static local:MpAvClipTrayViewModel.Instance}, Mode=TwoWay}">
            <ToolTip.Tip>
                <local:MpAvToolTipView ToolTipText="{Binding PlayOrPauseLabel, Source={x:Static local:MpAvClipTrayViewModel.Instance}, Mode=TwoWay}" />
            </ToolTip.Tip>
            <Image HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="20"
                   Height="20" />
        </ToggleButton>


        <!--  Content Sort View  -->
        <local:MpAvClipTileSortView Tag="Sort"
                                    local:MpAvSizeObserverExtension.IsEnabled="False"
                                    local:MpAvSizeObserverExtension.ObservedWidth="{Binding ClipTileSortViewWidth, Mode=OneWayToSource}"
                                    HorizontalAlignment="Left" />
        <!--  SearchBox View  -->

        <local:MpAvSearchBoxView HorizontalAlignment="Right"
                                 Tag="Search"
                                 DockPanel.Dock="Right"
                                 MaxWidth="300" />

        <!--  Tag Tray View  -->
        <local:MpAvTagTrayView IsVisible="{Binding IsHorizontalOrientation, Source={x:Static local:MpAvMainWindowViewModel.Instance}}" />

        <!--</mech:ToolBarTray>-->
    </DockPanel>
</local:MpAvUserControl>
