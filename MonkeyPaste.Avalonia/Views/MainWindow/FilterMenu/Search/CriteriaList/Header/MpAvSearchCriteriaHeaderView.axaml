<local:MpAvUserControl x:Class="MonkeyPaste.Avalonia.MpAvSearchCriteriaHeaderView"
                       xmlns="https://github.com/avaloniaui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:sys="clr-namespace:System;assembly=mscorlib"
                       xmlns:local="using:MonkeyPaste.Avalonia"
                       xmlns:pcl="using:MonkeyPaste"
                       x:DataType="local:MpAvSearchCriteriaItemCollectionViewModel"
                       x:TypeArguments="local:MpAvSearchCriteriaItemCollectionViewModel"
                       x:CompileBindings="True"
                       mc:Ignorable="d"
                       d:DesignHeight="450"
                       d:DesignWidth="800">
    <DockPanel LastChildFill="False">
        <StackPanel DockPanel.Dock="Left"
                    Orientation="Horizontal"
                    x:DataType="local:MpAvTagTrayViewModel"
                    DataContext="{x:Static local:MpAvTagTrayViewModel.Instance}">
            <TextBlock FontSize="24"
                       FontWeight="Bold"
                       Foreground="Gainsboro"
                       Margin="20,0,15,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Text="Search:" />
            <!--  ALL TAG TILE  -->
            <Border x:DataType="local:MpAvTagTileViewModel"
                    DataContext="{Binding AllTagViewModel}"
                    VerticalAlignment="Center"
                    Margin="0,10,10,10">
                <local:MpAvTagView />
            </Border>

            <!--  SELECTED TAG TILE  -->
            <Border x:DataType="local:MpAvTagTileViewModel"
                    DataContext="{Binding SelectedItem}"
                    IsVisible="{Binding !IsAllTag}"
                    VerticalAlignment="Center"
                    Margin="0,10,10,10">
                <local:MpAvTagView />
            </Border>

        </StackPanel>
        <StackPanel DockPanel.Dock="Right"
                    Orientation="Horizontal">

            <!--  SAVE BUTTON  -->
            <Button x:Name="SaveSearchButton"
                    Classes="defaultButton textOnlyButton"
                    Command="{Binding SaveQueryCommand}"
                    Margin="0,0,5,0">
                <!--<Button.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                        <Binding Path="HasCriteriaItems" />
                        <Binding Path="PendingQueryTagId"
                                 Converter="{x:Static local:MpAvIsNotNullZeroOrEmptyToBoolConverter.Instance}" />
                    </MultiBinding>
                </Button.IsVisible>-->
                <TextBlock Text="Save" />
            </Button>

            <!--  ADVANCED SEARCH TOGGLE BUTTON  -->

            <Button x:Name="DeleteSearchButton"
                    Margin="5"
                    BorderThickness="0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Center"
                    Width="{Binding $self.Bounds.Height}"
                    Classes="noBg noHoverBg addRemoveBtn shakeOver outline"
                    Command="{Binding CancelPendingOrCollapseSavedQueryCommand}">
                <!--<Button.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.Or}">
                        <Binding Path="HasText" />
                        <Binding Path="HasCriteriaItems"
                                 Source="{x:Static local:MpAvSearchCriteriaItemCollectionViewModel.Instance}" />
                    </MultiBinding>
                </Button.IsVisible>-->
                <!--<PathIcon Data="{StaticResource PlusBoxSvg}" />-->
                <Image Classes="shakeOver"
                       Source="{Binding ., Source={StaticResource MinusImage}, Converter={StaticResource IconSourceObjToBitmapConverter}}">
                    <Image.RenderTransform>
                        <RotateTransform />
                    </Image.RenderTransform>
                </Image>
            </Button>
        </StackPanel>
    </DockPanel>
</local:MpAvUserControl>
