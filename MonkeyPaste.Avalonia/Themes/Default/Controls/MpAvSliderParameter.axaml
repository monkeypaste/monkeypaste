    <Style Selector="local|MpAvSliderParameterView TextBox">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Foreground"
                Value="White" />
    </Style>
    <Style Selector="local|MpAvSliderParameterView TextBox:pointerover">
        <Setter Property="Background"
                Value="White" />
        <Setter Property="Foreground"
                Value="Black" />
    </Style>
    <Style Selector="local|MpAvSliderParameterView TextBox:focus">
        <Setter Property="Background"
                Value="White" />
        <Setter Property="Foreground"
                Value="Black" />
    </Style>
    <Style Selector="local|MpAvSliderParameterView TextBox:not(:focus)">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Foreground"
                Value="White" />
    </Style>
</Styles>
