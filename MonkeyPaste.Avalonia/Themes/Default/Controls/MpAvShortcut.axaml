<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <!--  - RECORD/ KEYGROUP TOGGLE  -->
    <Style Selector="local|MpAvShortcutView.active ItemsControl#ShortcutListBox">
        <Setter Property="IsVisible"
                Value="True" />
    </Style>

    <Style Selector="local|MpAvShortcutView:not(.active) ItemsControl#ShortcutListBox">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>

    <Style Selector="local|MpAvShortcutView.active TextBlock#EmptyTextBlock">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>

    <Style Selector="local|MpAvShortcutView:not(.active) TextBlock#EmptyTextBlock">
        <Setter Property="IsVisible"
                Value="True" />
    </Style>

    <Style Selector="local|MpAvShortcutView Button#RecordButton">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>

    <Style Selector="local|MpAvShortcutView:pointerover ItemsControl#ShortcutListBox">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>
    <Style Selector="local|MpAvShortcutView:pointerover TextBlock#EmptyTextBlock">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>
    <Style Selector="local|MpAvShortcutView:pointerover Button#RecordButton">
        <Setter Property="IsVisible"
                Value="True" />
    </Style>
</Styles>
