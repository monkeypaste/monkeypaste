<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <Styles.Resources>

        <LinearGradientBrush x:Key="UnderlineFadeOutBrush_light"
                             StartPoint="0%,0%"
                             EndPoint="100%,0%">
            <GradientStop Offset="0"
                          Color="White" />
            <GradientStop Offset="0.75"
                          Color="Transparent" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="UnderlineFadeOutBrush_long_light"
                             StartPoint="0%,0%"
                             EndPoint="100%,0%">
            <GradientStop Offset="0"
                          Color="White" />
            <GradientStop Offset="0.9"
                          Color="Transparent" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="UnderlineFadeOutBrush_dark"
                             StartPoint="0%,0%"
                             EndPoint="100%,0%">
            <GradientStop Offset="0"
                          Color="Black" />
            <GradientStop Offset="0.75"
                          Color="Transparent" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="UnderlineFadeOutBrush_long_dark"
                             StartPoint="0%,0%"
                             EndPoint="100%,0%">
            <GradientStop Offset="0"
                          Color="Black" />
            <GradientStop Offset="0.9"
                          Color="Transparent" />
        </LinearGradientBrush>
    </Styles.Resources>



    <Style Selector="Border.labelUnderline:not(.dark)">
        <Setter Property="Background"
                Value="{StaticResource UnderlineFadeOutBrush_light}" />
    </Style>

    <Style Selector="Border.labelUnderline.dark">
        <Setter Property="Background"
                Value="{StaticResource UnderlineFadeOutBrush_dark}" />
    </Style>

    <Style Selector="Border.labelUnderline">
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="Height"
                Value="3" />
        <Setter Property="CornerRadius"
                Value="3" />
        <Setter Property="Margin"
                Value="0,0,20,10" />
    </Style>

    <Style Selector="Border.labelUnderline_long">
        <Setter Property="Margin"
                Value="0" />
        <Setter Property="HorizontalAlignment"
                Value="Stretch" />
        <Setter Property="Height"
                Value="3" />
        <Setter Property="CornerRadius"
                Value="3" />
    </Style>

    <Style Selector="Border.labelUnderline_long:not(.dark)">
        <Setter Property="Background"
                Value="{StaticResource UnderlineFadeOutBrush_long_light}" />
    </Style>

    <Style Selector="Border.labelUnderline_long.dark">
        <Setter Property="Background"
                Value="{StaticResource UnderlineFadeOutBrush_long_dark}" />
    </Style>

    <Style Selector="Border.roundedTextBoxContainer:focus-within">
        <Setter Property="BorderBrush"
                Value="Gray" />
    </Style>
</Styles>
