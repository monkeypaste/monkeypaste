<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <Styles.Resources>
        <sys:TimeSpan x:Key="SlideDur">0:0:0.0</sys:TimeSpan>

        <!--<sys:TimeSpan x:Key="FadeDur">0:0:0.4</sys:TimeSpan>
        <sys:TimeSpan x:Key="CloseDur">0:0:1.4</sys:TimeSpan>-->
        <sys:TimeSpan x:Key="FadeDur">0:0:0.0</sys:TimeSpan>
        <sys:TimeSpan x:Key="CloseDur">0:0:0.0</sys:TimeSpan>
    </Styles.Resources>

    <Style Selector="Window.slideIn[IsVisible=true]"
           x:DataType="local:MpAvMessageNotificationViewModel">
        <Style.Animations>
            <Animation Duration="{StaticResource SlideDur}"
                       FillMode="Forward">
                <KeyFrame Cue="0%">
                    <Setter Property="TranslateTransform.X"
                            Value="360" />
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="TranslateTransform.X"
                            Value="0" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
