<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <Styles.Resources>
        <sys:TimeSpan x:Key="SlideDur">0:0:0.5</sys:TimeSpan>
    </Styles.Resources>

    <Style Selector="Window.slide-in-right">
        <Setter Property="TranslateTransform.X"
                Value="360" />
    </Style>
    <Style Selector="Window.slide-in-right[IsVisible=true]">
        <Style.Animations>
            <Animation Duration="{StaticResource SlideDur}"
                       FillMode="Forward">
                <KeyFrame Cue="0%">
                    <Setter Property="TranslateTransform.X"
                            Value="360" />
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="TranslateTransform.X"
                            Value="0" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
  
   <Style Selector="Window.slide-in-top">
        <Setter Property="TranslateTransform.Y"
                Value="-360" />
    </Style>
    <Style Selector="Window.slide-in-top[IsVisible=true]">
        <Style.Animations>
            <Animation Duration="{StaticResource SlideDur}"
                       FillMode="Forward">
                <KeyFrame Cue="0%">
                    <Setter Property="TranslateTransform.Y"
                            Value="-360" />
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="TranslateTransform.Y"
                            Value="0" />
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>
</Styles>
