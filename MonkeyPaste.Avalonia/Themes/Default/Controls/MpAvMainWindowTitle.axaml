<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <!--  TITLE BAR BG  -->
    <Style Selector="Window#AvMainWindow local|MpAvMainWindowTitleMenuView Grid#TitlePanel">
        <Setter Property="Background"
                Value="{DynamicResource TitleMenuInactiveBgBrush}" />
    </Style>
    <Style Selector="Window#AvMainWindow:focus-within local|MpAvMainWindowTitleMenuView Grid#TitlePanel">
        <Setter Property="Background"
                Value="{DynamicResource TitleMenuActiveBgBrush}" />
    </Style>

    <!--  DRAG HANDLE  -->
    <Style Selector="Window#AvMainWindow local|MpAvMainWindowTitleMenuView Button#WindowOrientationHandleButton Image">
        <Setter Property="Source"
                Value="{Binding Source={StaticResource DotsImage}, Converter={x:Static local:MpAvStringHexToBitmapTintConverter.Instance}, ConverterParameter=white}" />
    </Style>
    <Style Selector="Window#AvMainWindow:focus-within local|MpAvMainWindowTitleMenuView Button#WindowOrientationHandleButton Image">
        <Setter Property="Source"
                Value="{Binding Source={StaticResource DotsImage}, Converter={x:Static local:MpAvStringHexToBitmapTintConverter.Instance}, ConverterParameter=gold}" />
    </Style>

</Styles>
