<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <Style Selector="Window#AvMainWindow local|MpAvMainWindowTitleMenuView Grid#TitlePanel">
        <Setter Property="Background"
                Value="{DynamicResource TitleMenuInactiveBgColor}" />
    </Style>
    <Style Selector="Window#AvMainWindow:focus-within local|MpAvMainWindowTitleMenuView Grid#TitlePanel">
        <Setter Property="Background"
                Value="{DynamicResource TitleMenuActiveBgColor}" />
    </Style>
  
  
</Styles>
