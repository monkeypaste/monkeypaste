<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <!--  TITLE BAR BG  -->
    <Style Selector="Window#AvMainWindow local|MpAvMainWindowTitleMenuView Border#TitleBorder">
        <Setter Property="Background"
                Value="{DynamicResource TitleMenuInactiveBgBrush}" />
    </Style>
    <Style Selector="Window#AvMainWindow:focus-within local|MpAvMainWindowTitleMenuView Border#TitleBorder">
        <Setter Property="Background"
                Value="{Binding Source={DynamicResource TitleMenuActiveBgBrush}, ConverterParameter=mid, Converter={x:Static local:MpAvBrushToMutedBrushConverter.Instance}}" />
    </Style>


</Styles>
