<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
  
    <Style Selector="local|MpAvToolTipView Border.text">
        <Setter Property="MaxWidth"
                Value="300" />
    </Style>

    <!--  ERROR  -->

    <Style Selector="local|MpAvToolTipView.error Border">
        <Setter Property="BorderBrush"
                Value="{DynamicResource ThemeAccent2BgColor}" />
        <Setter Property="Background"
                Value="{DynamicResource ThemeAccent2Color}" />
    </Style>
    <!--  HINTS  -->
    <!--  INFO  -->
    <Style Selector="local|MpAvToolTipInfoHintView:not(.warning):not(.error) Grid :is(Control):not(.info)">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>

    <!--  Warning  -->
    <Style Selector="local|MpAvToolTipInfoHintView.warning Grid :is(Control):not(.warning)">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>

    <!--  Error  -->
    <Style Selector="local|MpAvToolTipInfoHintView.error Grid :is(Control):not(.error)">
        <Setter Property="IsVisible"
                Value="False" />
    </Style>

</Styles>
