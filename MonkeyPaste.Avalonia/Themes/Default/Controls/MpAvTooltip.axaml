<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <Style Selector="local|MpAvToolTipView Border.text">
        <Setter Property="MaxWidth"
                Value="300" />
    </Style>
    <!--  DEFAULT  -->
    <Style Selector="local|MpAvToolTipView Border">
        <Setter Property="BorderBrush"
                Value="{DynamicResource ThemeCompliment4DarkColor}" />
        <Setter Property="Background"
                Value="{DynamicResource ThemeCompliment4Color}" />
        <Setter Property="CornerRadius"
                Value="10" />
        <Setter Property="BorderThickness"
                Value="1.5" />
        <Setter Property="Padding"
                Value="10" />
    </Style>
    <Style Selector="local|MpAvToolTipView TextBlock">
        <Setter Property="Foreground"
                Value="{Binding Source={DynamicResource ThemeCompliment4Color}, Converter={x:Static local:MpAvBrushToContrastBrushConverter.Instance}}" />
        <Setter Property="TextDecorations"
                Value="{x:Null}" />
    </Style>

    <!--  ERROR  -->

    <Style Selector="local|MpAvToolTipView.error Border">
        <Setter Property="BorderBrush"
                Value="{DynamicResource ThemeAccent2BgColor}" />
        <Setter Property="Background"
                Value="{DynamicResource ThemeAccent2Color}" />
    </Style>

</Styles>
