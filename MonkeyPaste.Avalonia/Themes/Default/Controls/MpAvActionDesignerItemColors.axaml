<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <Styles.Resources>
        <SolidColorBrush x:Key="TriggerActionBrush"
                         Opacity="{DynamicResource GlobalInteractiveOpacity}"
                         Color="Maroon" />
        <SolidColorBrush x:Key="AnalyzeActionBrush"
                         Opacity="{DynamicResource GlobalInteractiveOpacity}"
                         Color="Magenta" />
        <SolidColorBrush x:Key="ClassifyActionBrush"
                         Opacity="{DynamicResource GlobalInteractiveOpacity}"
                         Color="Tomato" />
        <SolidColorBrush x:Key="CompareActionBrush"
                         Opacity="{DynamicResource GlobalInteractiveOpacity}"
                         Color="Turquoise" />
        <SolidColorBrush x:Key="MacroActionBrush"
                         Opacity="{DynamicResource GlobalInteractiveOpacity}"
                         Color="LightSalmon" />
        <SolidColorBrush x:Key="TimerActionBrush"
                         Opacity="{DynamicResource GlobalInteractiveOpacity}"
                         Color="CornFlowerBlue" />
        <SolidColorBrush x:Key="FileWriterActionBrush"
                         Opacity="{DynamicResource GlobalInteractiveOpacity}"
                         Color="PaleGoldenRod" />
    </Styles.Resources>
    <!--  DESIGNER ITEM  -->
    <Style Selector="ContentControl#DesignerItemContentControl :is(Shape)"
           x:DataType="local:MpAvActionViewModelBase">
        <Setter Property="Fill"
                Value="{Binding ActionBackgroundHexColor, Converter={StaticResource StringHexToBrushConverter}}" />
    </Style>

    <!--  PROPERTY EXPANDER  -->
    <Style Selector="local|MpAvActionPropertyView Expander"
           x:DataType="local:MpAvActionViewModelBase">
        <Setter Property="Background"
                Value="{Binding ActionBackgroundHexColor, Converter={StaticResource StringHexToBrushConverter}}" />
    </Style>
</Styles>
