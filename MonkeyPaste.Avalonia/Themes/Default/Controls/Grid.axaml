<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="using:MonkeyPaste.Avalonia">
    <Style Selector="Grid.oriented">
        <Setter Property="local:MpAvOrientedGridExtension.IsEnabled"
                Value="True" />
        <Setter Property="local:MpAvOrientedGridExtension.Orientation"
                Value="{Binding Orientation, Source={x:Static local:MpAvThemeViewModel.Instance}}" />
    </Style>
</Styles>