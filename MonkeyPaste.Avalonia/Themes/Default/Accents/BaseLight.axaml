<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=mscorlib"
       xmlns:local="using:MonkeyPaste.Avalonia">
    <Style.Resources>

        <!--  COLORS  -->
        <Color x:Key="MainWindowBgColor">Purple</Color>
        <Color x:Key="DefaultInvalidColor">Red</Color>
        <Color x:Key="DefaultWarningColor1">Yellow</Color>
        <Color x:Key="DefaultWarningColor2">Black</Color>
        <Color x:Key="MainWindowTitleMenuActiveBgColor">GoldenRod</Color>
        <Color x:Key="MainWindowTitleMenuInactiveBgColor">Gainsboro</Color>
        <Color x:Key="DisabledTextFgColor">LightGray</Color>
        <Color x:Key="DisabledBgColor">Gainsboro</Color>
        <Color x:Key="UnselectedBorderColor">Transparent</Color>
        <Color x:Key="SelectedBorderColor">Red</Color>
        <Color x:Key="DefaultIconButtonColor">White</Color>
        <Color x:Key="DefaultButtonColor">DimGray</Color>
        <Color x:Key="HoverButtonColor">Gray</Color>
        <Color x:Key="DefaultBorderColor">Silver</Color>
        <Color x:Key="HoverDefaultBorderColor">Yellow</Color>
        <Color x:Key="HoverSelectedBorderColor">SpringGreen</Color>
        <Color x:Key="CanResizeBorderColor">DeepPink</Color>
        <Color x:Key="IsResizingBorderColor">LightPink</Color>
        <Color x:Key="SelectableItemDefaultBgColor">White</Color>
        <Color x:Key="SelectableItemPointerOverBgColor">LightBlue</Color>
        <Color x:Key="SelectableItemSelectedBgColor">DarkTurquoise</Color>
        <Color x:Key="ClipTileContentBackgroundColor">OldLace</Color>
        <Color x:Key="ClipTileTransactionPaneBackgroundColor">GhostWhite</Color>
        <Color x:Key="PluginParameterItemBgColor1">MediumOrchid</Color>
        <Color x:Key="PluginParameterItemBgColor2">MediumOrchid</Color>
        <Color x:Key="PluginParameterItemHoverBgColor">Fuchsia</Color>
        <!--  SIDEBAR BUTTONS  -->
        <Color x:Key="SidebarButtonsBgColor">Gainsboro</Color>
        <!--  ACTIONS  -->
        <Color x:Key="ActionDesignerBgColor">Gainsboro</Color>
        <!--  SEARCH CRITERIA  -->
        <Color x:Key="SearchCriteriaRowBgColor1">Lavender</Color>
        <Color x:Key="SearchCriteriaRowBgColor2">LavenderBlush</Color>
        <Color x:Key="SearchCriteriaRowBgHoverColor">GhostWhite</Color>
        <!--  GRID SPLITTERS  -->
        <Color x:Key="DefaultGridSplitterColor">PowderBlue</Color>
        <Color x:Key="SidebarGridSplitterColor">Cyan</Color>
        <Color x:Key="ClipTrayGridSplitterColor">Magenta</Color>


        <!--  BRUSHES  -->

        <!--  GENERAL  -->

        <!--  GRID SPLITTERS  -->

        <SolidColorBrush x:Key="DefaultGridSplitterBrush" Color="{DynamicResource DefaultGridSplitterColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <SolidColorBrush x:Key="SidebarGridSplitterBrush" Color="{DynamicResource SidebarGridSplitterColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <SolidColorBrush x:Key="ClipTrayGridSplitterBrush" Color="{DynamicResource ClipTrayGridSplitterColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <SolidColorBrush x:Key="HoverDefaultGridSplitterBgBrush" Color="{DynamicResource HoverDefaultBorderColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <!--  SIDEBAR BUTTONS  -->
        <SolidColorBrush x:Key="SidebarButtonsBgBrush" Color="{DynamicResource SidebarButtonsBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  ItemSource Item Bg  -->
        <SolidColorBrush x:Key="SelectableItemDefaultBgBrush" Color="{DynamicResource SelectableItemDefaultBgColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <SolidColorBrush x:Key="SelectableItemPointerOverBgBrush" Color="{DynamicResource SelectableItemPointerOverBgColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <SolidColorBrush x:Key="SelectableItemSelectedBgBrush" Color="{DynamicResource SelectableItemSelectedBgColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <!--  Disabled  -->
        <SolidColorBrush x:Key="DisabledTextFgBrush" Color="{DynamicResource DisabledTextFgColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <SolidColorBrush x:Key="DisabledBgBrush" Color="{DynamicResource DisabledBgColor}" Opacity="{DynamicResource GlobalDisabledOverlayOpacity}" />

        <!--  Invalid  -->
        <SolidColorBrush x:Key="DefaultInvalidBrush" Color="{DynamicResource DefaultInvalidColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <!--  Warning  -->
        <SolidColorBrush x:Key="DefaultWarningBrush1" Color="{DynamicResource DefaultWarningColor1}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <SolidColorBrush x:Key="DefaultWarningBrush2" Color="{DynamicResource DefaultWarningColor2}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <!--  Button Brush  -->

        <SolidColorBrush x:Key="DefaultIconButtonBrush" Color="{DynamicResource DefaultIconButtonColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <SolidColorBrush x:Key="DefaultButtonBrush" Color="{DynamicResource DefaultButtonColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <SolidColorBrush x:Key="HoverButtonBrush" Color="{DynamicResource HoverButtonColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />

        <!--  Border Brush  -->
        <SolidColorBrush x:Key="DefaultBorderBrush" Color="{DynamicResource DefaultBorderColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <SolidColorBrush x:Key="HoverDefaultBorderBrush" Color="{DynamicResource HoverDefaultBorderColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <SolidColorBrush x:Key="HoverSelectedBorderBrush" Color="{DynamicResource HoverSelectedBorderColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />
        <SolidColorBrush x:Key="SelectedBorderBrush" Color="{DynamicResource SelectedBorderColor}" Opacity="{DynamicResource GlobalInteractiveOpacity}" />



        <!--  TITLE MENU  -->
        <SolidColorBrush x:Key="TitleMenuActiveBgBrush" Color="{DynamicResource MainWindowTitleMenuActiveBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />
        <SolidColorBrush x:Key="TitleMenuInactiveBgBrush" Color="{DynamicResource MainWindowTitleMenuInactiveBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  FILTER MENU  -->
        <SolidColorBrush x:Key="FilterMenuBgBrush" Color="{DynamicResource MainWindowBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  ADV SEARCH  -->
        <SolidColorBrush x:Key="SearchCriteriaRowBgBrush1" Color="{DynamicResource SearchCriteriaRowBgColor1}" Opacity="{DynamicResource GlobalBgOpacity}" />
        <SolidColorBrush x:Key="SearchCriteriaRowBgBrush2" Color="{DynamicResource SearchCriteriaRowBgColor2}" Opacity="{DynamicResource GlobalBgOpacity}" />
        <SolidColorBrush x:Key="SearchCriteriaRowBgHoverBrush" Color="{DynamicResource SearchCriteriaRowBgHoverColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  SIDE BAR  -->

        <SolidColorBrush x:Key="SidebarButtonGroupBgBrush" Color="{DynamicResource MainWindowBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  PARAMETERS  -->

        <SolidColorBrush x:Key="PluginParameterItemBgBrush1" Color="{DynamicResource PluginParameterItemBgColor1}" Opacity="{DynamicResource GlobalInteractiveBgOpacity}" />

        <SolidColorBrush x:Key="PluginParameterItemBgBrush2" Color="{DynamicResource PluginParameterItemBgColor2}" Opacity="{DynamicResource GlobalInteractiveBgOpacity}" />

        <SolidColorBrush x:Key="PluginParameterItemHoverBgBrush" Color="{DynamicResource PluginParameterItemHoverBgColor}" Opacity="{DynamicResource GlobalInteractiveBgOpacity}" />
        <!--  TAG TREE  -->
        <SolidColorBrush x:Key="TagTreeBgBrush" Color="{DynamicResource MainWindowBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  CLIPBOARD SIDEBAR  -->

        <SolidColorBrush x:Key="ClipboardSidebarBgBrush" Color="{DynamicResource MainWindowBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  ANALYZER SIDEBAR  -->

        <SolidColorBrush x:Key="AnalyzerSidebarBgBrush" Color="{DynamicResource MainWindowBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  ACTION SIDEBAR  -->

        <SolidColorBrush x:Key="ActionPropertyListBgBrush" Color="{DynamicResource MainWindowBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />
        <SolidColorBrush x:Key="ActionDesignerBgBrush" Color="{DynamicResource ActionDesignerBgColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  TAG TILE  -->
        <!--  BG  -->
        <SolidColorBrush x:Key="TagTileBgColor" Color="Transparent" />

        <SolidColorBrush x:Key="TagTileSelectedBgColor" Color="DimGray" />

        <SolidColorBrush x:Key="TagTileHoverBgColor" Color="LightGray" />
        <!--  BORDER  -->
        <SolidColorBrush x:Key="TagTileBorderColor" Color="Transparent" />
        <SolidColorBrush x:Key="TagTileContextFocusBorderColor" Color="Red" />


        <!--  CLIP TRAY  -->

        <SolidColorBrush x:Key="ClipTrayBgColor" Color="Purple" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  PIN TRAY  -->
        <SolidColorBrush x:Key="PinTrayBgBrush" Color="LightSalmon" Opacity="{DynamicResource GlobalBgOpacity}" />
        <SolidColorBrush x:Key="PinTrayShadowBrush" Color="Salmon" Opacity="{DynamicResource GlobalBgOpacity}" />

        <SolidColorBrush x:Key="PinTrayDragOverBgColor" Color="Salmon" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  CLIP TILE  -->

        <!--  TRANSACTION PANE  -->

        <SolidColorBrush x:Key="ClipTileTransactionPaneBackgroundBrush" Color="{DynamicResource ClipTileTransactionPaneBackgroundColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <!--  CONTENT  -->
        <SolidColorBrush x:Key="ClipTileContentBackgroundBrush" Color="{DynamicResource ClipTileContentBackgroundColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <SolidColorBrush x:Key="ModalClipTileContentBackgroundBrush" Color="{DynamicResource ClipTileContentBackgroundColor}" Opacity="1" />

        <!--  BORDER  -->
        <SolidColorBrush x:Key="DefaultBorderBrush_unselected" Color="{DynamicResource UnselectedBorderColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <SolidColorBrush x:Key="DefaultBorderBrush_selected" Color="{DynamicResource SelectedBorderColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <SolidColorBrush x:Key="IsHoveringBorderBrush_unselected" Color="{DynamicResource HoverDefaultBorderColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <SolidColorBrush x:Key="IsHoveringBorderBrush_selected" Color="{DynamicResource HoverSelectedBorderColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <SolidColorBrush x:Key="CanResizeBorderBrush" Color="{DynamicResource CanResizeBorderColor}" Opacity="{DynamicResource GlobalBgOpacity}" />

        <SolidColorBrush x:Key="IsResizingBorderBrush" Color="{DynamicResource IsResizingBorderColor}" Opacity="{DynamicResource GlobalBgOpacity}" />


        <!--  SETTINGS WINDOW  -->
        <SolidColorBrush x:Key="SettingsViewBgBrush" Color="{DynamicResource MainWindowBgColor}" />

    </Style.Resources>

</Style>
