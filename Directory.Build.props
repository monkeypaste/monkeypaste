<Project> 
  <!-- TARGETS -->
  <!-- WINDOWS - net7.0-windows-->
  <!-- LINUX,MAC,BROWSER - net7.0-->
  <!-- ANDROID - net7.0-android-->
  <!-- IOS - net7.0-ios-->

  <!-- VERSION (Is this redundant?) -->

  <PropertyGroup>
    <ApplicationName>MonkeyPaste</ApplicationName>
    <ApplicationAuthor>Tommy K</ApplicationAuthor>
    <ApplicationVersionMajor>0.1</ApplicationVersionMajor>
    <ApplicationVersionMinor>0.1</ApplicationVersionMinor>
    <ApplicationVersion>$(ApplicationVersionMajor)$(ApplicationVersionMinor)</ApplicationVersion>
  </PropertyGroup>
  
  <!-- MANUALLY SET PROPERTIES-->
  <PropertyGroup>
    <BuildOs>WINDOWS</BuildOs>
  </PropertyGroup>

  <!-- DEFAULT PROPERTIES-->
  
  <PropertyGroup>
    <DefaultLangVersion>11.0</DefaultLangVersion>
    <IsDesktop>false</IsDesktop>
    <DefaultPlatforms>AnyCPU;x64;x86</DefaultPlatforms>
  </PropertyGroup>
  
  <!-- DYNAMIC PROPERTIES-->
  
  <PropertyGroup Condition="$(BuildOs) == 'WINDOWS'">
    <!-- Tfm from https://stackoverflow.com/a/70380286/105028 -->
    <Tfm>10.0.22621.0</Tfm>
    <MainTargetFramework>net7.0-windows$(Tfm)</MainTargetFramework>
    <DefineConstants>WINDOWS;DESKTOP;CEF_WV</DefineConstants>
    <MainProjectName>MonkeyPaste.Avalonia.Desktop</MainProjectName>
    <IsDesktop>true</IsDesktop>
    <Platforms>AnyCPU;x64;x86</Platforms>
    <RuntimeIdentifiers>win-x64;win-x86</RuntimeIdentifiers>
  </PropertyGroup>
  
  <PropertyGroup Condition="$(BuildOs) == 'LINUX'">
    <MainTargetFramework>net7.0</MainTargetFramework>
    <DefineConstants>LINUX;DESKTOP;</DefineConstants>
    <MainProjectName>MonkeyPaste.Avalonia.Desktop</MainProjectName>
    <IsDesktop>true</IsDesktop>
  </PropertyGroup>
  
  <PropertyGroup Condition="$(BuildOs) == 'MAC'">
    <MainTargetFramework>net7.0</MainTargetFramework>
    <DefineConstants>MAC;DESKTOP;</DefineConstants>
    <MainProjectName>MonkeyPaste.Avalonia.Desktop</MainProjectName>
    <IsDesktop>true</IsDesktop>
  </PropertyGroup>
    
  <PropertyGroup Condition="$(BuildOs) == 'BROWSER'">
    <MainTargetFramework>net7.0</MainTargetFramework>
    <DefineConstants>BROWSER;</DefineConstants>
    <MainProjectName>MonkeyPaste.Avalonia.Web</MainProjectName>
  </PropertyGroup>
  
  <PropertyGroup Condition="$(BuildOs) == 'ANDROID'">
    <MainTargetFramework>net7.0-android</MainTargetFramework>
    <DefineConstants>MOBILE;ANDROID;</DefineConstants>
    <MainProjectName>MonkeyPaste.Avalonia.Android</MainProjectName>
    <AndroidPackageName>com.CompanyName.MonkeyPaste.Avalonia</AndroidPackageName>
    <AndroidInternalStorageDir>/data/user/0/$(AndroidPackageName)/files</AndroidInternalStorageDir>
  </PropertyGroup>

  <PropertyGroup Condition="$(BuildOs) == 'IOS'">
    <MainTargetFramework>net7.0-ios</MainTargetFramework>
    <DefineConstants>MOBILE;IOS;</DefineConstants>
    <MainProjectName>MonkeyPaste.Avalonia.iOS</MainProjectName>
  </PropertyGroup>

  <PropertyGroup Condition="$(IsDesktop) == 'true'">
  </PropertyGroup>
  
  <PropertyGroup>
    <MainProjectDir>$(SolutionDir)\$(MainProjectName)</MainProjectDir>
    <MainTargetDir>$(MainProjectDir)\bin\$(Configuration)\$(MainTargetFramework)</MainTargetDir>
    <PluginSourceDir>$(SolutionDir)\Plugins</PluginSourceDir>
    <DeclarativePluginBaseDir>$(PluginSourceDir)\DeclarativePlugins\DeclarativeBase</DeclarativePluginBaseDir>
    <PluginTargetDir>$(MainTargetDir)\Plugins</PluginTargetDir>
    <UiProjectDir>$(SolutionDir)\MonkeyPaste.Avalonia</UiProjectDir>
    <CefNetLibDir>$(SolutionDir)\cefnet11\CefNet\CefNet.Avalonia\bin\$(Configuration)\net6.0\CefNet.dll</CefNetLibDir>
    <CefNetAvLibDir>$(SolutionDir)\cefnet11\CefNet\CefNet.Avalonia\bin\$(Configuration)\net6.0\CefNet.Avalonia.dll</CefNetAvLibDir>
  </PropertyGroup>


  <PropertyGroup>
    <Nullable>disable</Nullable>
  </PropertyGroup>
</Project>