<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0-android</TargetFramework>
    
    <SupportedOSPlatformVersion>21</SupportedOSPlatformVersion>
    <ApplicationId>com.CompanyName.MonkeyPaste.Avalonia</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <AndroidPackageFormat>apk</AndroidPackageFormat>
    <AndroidEnableProfiledAot>True</AndroidEnableProfiledAot>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <RunAOTCompilation>True</RunAOTCompilation>
    <EmbedAssembliesIntoApk>True</EmbedAssembliesIntoApk>
    <DebugType>embedded</DebugType>
    <!--<DebugSymbols>True</DebugSymbols>-->
    <Optimize>True</Optimize>  
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>embedded</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="SplashActivity.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Resources\values\net_sec_conf.xml" />
  </ItemGroup>

  <ItemGroup>
    <AndroidResource Include="Icon.png">
      <Link>Resources\drawable\Icon.png</Link>
    </AndroidResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.AndroidX.Core.SplashScreen" Version="1.0.1.4" />
    <PackageReference Include="Avalonia.Android" Version="11.0.5" />
    <PackageReference Include="SkiaSharp.Views" Version="2.88.6" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
    <PackageReference Include="System.Reactive" Version="6.0.0" />
    <PackageReference Include="Xamarin.Essentials" Version="1.8.0" />
    <PackageReference Include="Xamarin.Google.Android.Material" Version="1.8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MonkeyPaste.Avalonia\MonkeyPaste.Avalonia.csproj" />
  </ItemGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="$(BuildOs) == 'ANDROID'">
    <ItemGroup>
      <EditorFiles Include="$(EditorSourceDir)\**\*.*" />
      <SoundFiles Include="$(SoundsSourceDir)\**\*.*" />
      <TermsFile Include="$(UiProjectDir)\Resources\terms.html" />
      <Resx1 Include="$(UiProjectDir)\Resources\UiStrings\UiStrings.resx" />
      <Resx2 Include="$(UiProjectDir)\Resources\UiStrings\EnumUiStrings.resx" />
    </ItemGroup>
    <!-- copy editor over to since content build action not supported-->
    <Copy SourceFiles="@(EditorFiles)" DestinationFiles="@(EditorFiles->'$(EditorTargetDir)\%(RecursiveDir)%(Filename)%(Extension)')" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="true" ContinueOnError="true" />
    
    <!-- copy sounds -->
    <Copy SourceFiles="@(SoundFiles)" DestinationFiles="@(SoundFiles->'$(SoundsTargetDir)\%(RecursiveDir)%(Filename)%(Extension)')" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="true" ContinueOnError="true" />
    
    <!-- Copy Terms-->
    <Copy SourceFiles="@(TermsFile)" DestinationFiles="@(TermsFile->'$(MainTargetDir)\Resources\terms.html')" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="true" ContinueOnError="true" />
    
    <!--<Copy SourceFiles="@(Resx1)" 
          DestinationFiles="@(Resx1->'$(MainTargetDir)\Resources\UiStrings\UiStrings.resx')" 
          OverwriteReadOnlyFiles="true" 
          SkipUnchangedFiles="true" 
          ContinueOnError="true" />
    <Copy SourceFiles="@(Resx2)" 
          DestinationFiles="@(Resx2->'$(MainTargetDir)\Resources\UiStrings\EnumUiStrings.resx')" 
          OverwriteReadOnlyFiles="true" 
          SkipUnchangedFiles="true" 
          ContinueOnError="true" />-->

  </Target>
</Project>
