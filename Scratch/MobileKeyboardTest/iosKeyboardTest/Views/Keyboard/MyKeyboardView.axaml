                                CornerRadius="5"
                                Padding="5">
                            <TextBlock VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       FontSize="14"
                                       Foreground="{DynamicResource FgBrush}"
                                       Text="{Binding .}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
