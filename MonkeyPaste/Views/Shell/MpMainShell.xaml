<Shell
    x:Class="MonkeyPaste.MpMainShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MonkeyPaste"
    Title="Monkey Paste"
    x:DataType="local:MpMainShellViewModel">
    <Shell.FlyoutContentTemplate>
        <DataTemplate>
            <StackLayout>
                <Grid Margin="10"
                      HeightRequest="100">
                    <Image Margin="20"
                           HorizontalOptions="Center"
                           Source="{StaticResource AppIcon}"
                           VerticalOptions="Center" />
                </Grid>
                <local:MpTagCollectionView />                
                <Grid ColumnDefinitions="0.2*,0.8*">
                    <Image Margin="5"
                           HeightRequest="45"
                           Source="{StaticResource SettingsIcon}" />
                    <Label Grid.Column="1"
                           FontAttributes="Italic"
                           Text="Settings"
                           TextColor="Black"
                           VerticalTextAlignment="Center" />
                </Grid>
                <Grid ColumnDefinitions="0.2*,0.8*">
                    <Image Margin="5"
                           HeightRequest="45"
                           Source="{StaticResource HelpIcon}" />
                    <Label Grid.Column="1"
                           FontAttributes="Italic"
                           Text="Help"
                           TextColor="Black"
                           VerticalTextAlignment="Center" />
                </Grid>
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutContentTemplate>
    <FlyoutItem x:Name="FlyoutItem"
                FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent x:Name="CollectionsContent"
                      Title="Collections"
                      Icon="{StaticResource TagsIcon}"
                      ContentTemplate="{DataTemplate local:MpCopyItemCollectionView}" />
    </FlyoutItem>
</Shell>
