<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="MonkeyPaste.MpClipView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             IsVisible="{Binding IsVisible}"
             xmlns:local="clr-namespace:MonkeyPaste"
             x:DataType="local:MpClipTileViewModel">
    <ContentView.Content>
        <SwipeView SwipeStarted="SwipeView_SwipeStarted">
            <SwipeView.LeftItems>
                <SwipeItems>
                    <SwipeItem BackgroundColor="LightGreen"
                               Command="{Binding ShowTagAssociationsCommand}"
                               IconImageSource="{StaticResource StarOutlineIcon}"
                               Text="Tags" />
                    <SwipeItem BackgroundColor="LightPink"
                               Command="{Binding BindingContext.DeleteClipCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}"
                               CommandParameter="{Binding .}"
                               IconImageSource="{StaticResource DeleteIcon}"
                               Text="Delete" />
                </SwipeItems>
            </SwipeView.LeftItems>
            <Frame Padding="0"
                   BackgroundColor="White"
                   HasShadow="True"
                   HeightRequest="100"
                   IsClippedToBounds="True">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClipTileTappedCommand}"
                                          NumberOfTapsRequired="2" />
                </Frame.GestureRecognizers>
                <Frame.OutlineColor>
                    <OnPlatform x:TypeArguments="Color"
                                Android="Gray"
                                iOS="Gray" />
                </Frame.OutlineColor>
                <Frame.Margin>
                    <OnPlatform x:TypeArguments="Thickness"
                                Android="10"
                                iOS="10" />
                </Frame.Margin>
                <StackLayout Orientation="Horizontal">
                    <!--<BoxView Style="{StaticResource Clip_Selection_BoxView}"
                             WidthRequest="6" />-->
                    <ff:CachedImage Aspect="AspectFit"
                                    Margin="0,10,0,0"
                                    VerticalOptions="Start"
                                    WidthRequest="60"
                                    HeightRequest="60"
                                    CacheDuration="50"
                                    RetryCount="3"
                                    Source="{Binding Clip.App.Icon.IconImage.ImageBase64, Converter={StaticResource ImageConverter}}"
                                    RetryDelay="600"
                                    DownsampleToViewSize="true" />
                    <Grid Padding="0"
                          BackgroundColor="Transparent"
                          HorizontalOptions="FillAndExpand"
                          VerticalOptions="CenterAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               FontAttributes="Bold"
                               Padding="0,5,0,0"
                               FontSize="16"
                               HorizontalTextAlignment="Start"
                               Text="{Binding Clip.Title, Mode=TwoWay}"
                               TextColor="Black"
                               VerticalTextAlignment="End">
                            <Label.LineBreakMode>
                                <OnPlatform x:TypeArguments="LineBreakMode"
                                            Android="NoWrap"
                                            iOS="TailTruncation" />
                            </Label.LineBreakMode>
                        </Label>
                        <BoxView Grid.Row="1"
                                 HeightRequest="1"
                                 HorizontalOptions="FillAndExpand"
                                 Color="Gray" />
                        <Label Grid.Row="2"
                               Padding="5"
                               FontSize="16"
                               Text="{Binding Clip.ItemText, Mode=TwoWay}"
                               TextColor="Black" />
                    </Grid>
                </StackLayout>
            </Frame>
        </SwipeView>
    </ContentView.Content>
</ContentView>
