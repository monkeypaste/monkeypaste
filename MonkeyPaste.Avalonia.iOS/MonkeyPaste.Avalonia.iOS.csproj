<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>$(MainTargetFramework)</TargetFramework>
    <SupportedOSPlatformVersion>13.0</SupportedOSPlatformVersion> 
    <Nullable>disable</Nullable>
    <RemoteVs>true</RemoteVs>
    <!--<RuntimeIdentifier>iossimulator-x64</RuntimeIdentifier>-->
    <RuntimeIdentifier>ios-arm64</RuntimeIdentifier>
  </PropertyGroup>
  
  <PropertyGroup>
    <SelfContained>true</SelfContained>
    <!--<MtouchLink>None</MtouchLink>-->
    <MtouchLink>SdkOnly</MtouchLink>
    <OptimizePNGs>True</OptimizePNGs>
    <CodesignExtraArgs>--deep</CodesignExtraArgs>
    <!--<ProvisioningType>automatic</ProvisioningType>-->
    <CodesignKey>Apple Development: thomas kefauver (MY7R67BXWM)</CodesignKey>
    <!--<CodesignProvision>Monkey Profile</CodesignProvision>-->
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="Settings.bundle\**" />
  </ItemGroup>

  <!--<PropertyGroup Condition="'$(RemoteVs)' == 'False'">
    <ProvisioningType>manual</ProvisioningType>
    <CodesignKey>Apple Development: thomas kefauver (MY7R67BXWM)</CodesignKey>
  </PropertyGroup>-->
  
  <ItemGroup>
    <Compile Remove="Util\System\AvIosWrapper\Defintions\MpAvAdToastNotification.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <AvaloniaResource Include="Assets\dat\editor.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\dat\enums.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\dat\legal.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\dat\uistrings.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </AvaloniaResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.iOS" Version="$(AvaloniaVersion)" />
    <PackageReference Include="WebView.Avalonia.iOS" Version="$(SugarWvVersion)" Condition="'$(UseSugarWv)' == 'True'" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MonkeyPaste.Avalonia\MonkeyPaste.Avalonia.csproj" />
  </ItemGroup>

  <Target Name="___SIGNINGFIX" BeforeTargets="_CodesignAppBundle">
    <Exec Command="echo REMOVING Settings.bundle from '$(AppBundleDir)' ..." />
    <Exec Command="mv $(AppBundleDir)/Settings.bundle /Users/tkefauver/Desktop" />
    <!--<Exec Command="rm -fr $(AppBundleDir)/Settings.bundle" />-->
  </Target>
  
  <Target Name="___SIGNINGFIX2" AfterTargets="_CodesignAppBundle">
    <Exec Command="echo REPLACING Settings.bundle from '$(AppBundleDir)' ..." />
    <Exec Command="mv /Users/tkefauver/Desktop/Settings.bundle $(AppBundleDir)" /> 
  </Target>
</Project>
