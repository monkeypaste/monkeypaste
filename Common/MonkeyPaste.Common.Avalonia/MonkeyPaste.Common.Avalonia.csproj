  <!-- DYNAMIC -->
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <Nullable>disable</Nullable>
    <TrimMode>copyused</TrimMode>
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(BuildOs)' == 'WINDOWS'">  
    <DefineConstants>WINDOWS;</DefineConstants>
    <TargetFramework>net7.0</TargetFramework>
    <!--<ImplicitlyExpandDesignTimeFacades>false</ImplicitlyExpandDesignTimeFacades>-->
    <!--<UseWPF>True</UseWPF>-->
  </PropertyGroup>

  <PropertyGroup Condition="'$(BuildOs)' == 'LINUX'">  
    <DefineConstants>LINUX;</DefineConstants>
    <TargetFramework>net7.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>CS8632</NoWarn>
    <NoWarn>CS8073</NoWarn>
    <NoWarn>$(NoWarn),IDE1006</NoWarn>
    <NoWarn>$(NoWarn),CA1401</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <AvaloniaXaml Remove="Utils\Input\Platform\Win32\COM\**" />
    <Compile Remove="Utils\Input\Platform\Win32\COM\**" />
    <EmbeddedResource Remove="Utils\Input\Platform\Win32\COM\**" />
    <None Remove="Utils\Input\Platform\Win32\COM\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Utils\Data\MpAvSafeOleAccessor.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove="Mono.GtkSharp" />
    <None Remove="Avalonia.Gtk3" />
  </ItemGroup>
  <ItemGroup>
    <!--This helps with theme dll-s trimming.
	If you will publish your application in self-contained mode with p:PublishTrimmed=true and it will use Fluent theme Default theme will be trimmed from the output and vice versa.
	https://github.com/AvaloniaUI/Avalonia/issues/5593 -->
    <TrimmableAssembly Include="Avalonia.Themes.Fluent" />
    <TrimmableAssembly Include="Avalonia.Themes.Default" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.0.0-preview5" />
    <PackageReference Include="Avalonia.Desktop" Version="11.0.0-preview5" />
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Include="GtkSharp" Version="3.24.24.38" />
    <PackageReference Include="MonoMac.NetStandard" Version="0.0.4" />
    <PackageReference Include="SharpHook" Version="4.0.0" />
    <PackageReference Include="X11" Version="1.0.6" />
    <PackageReference Include="XamlNameReferenceGenerator" Version="1.5.1" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="C:\Program Files (x86)\Reference Assemblies\Microsoft\Framework\.NETFramework\v4.6.1\PresentationFramework.dll" Condition="'$(BuildOs)' == 'WINDOWS'" />

    <!--<Reference Include="PresentationFramework" Condition="'$(BuildOs)' == 'WINDOWS'">
      <HintPath>C:\Program Files (x86)\Reference Assemblies\Microsoft\Framework\.NETFramework\v4.8\PresentationFramework.dll</HintPath>
    </Reference>-->
    <ProjectReference Include="..\MonkeyPaste.Common.Wpf\MonkeyPaste.Common.Wpf.csproj" Condition="'$(BuildOs)' == 'WINDOWS'" />
    <ProjectReference Include="..\MonkeyPaste.Common\MonkeyPaste.Common.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Controls\Adorner\" />
    <Folder Include="Utils\Helpers\" />
  </ItemGroup>
  <PropertyGroup>
     <!-- 
     Turns off reference assembly generation 
     See: https://learn.microsoft.com/en-us/dotnet/standard/assembly/reference-assemblies
     -->
     <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
</PropertyGroup>
</Project>
