<local:MpUserControl x:Class="MpWpfApp.MpItemSortView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpClipTileSortViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpClipTileSortViewModel,
                                                      IsDesignTimeCreatable=False}">
    <StackPanel Orientation="Horizontal">
        <Label Grid.Column="0"
               FontSize="19"
               Foreground="White"
               HorizontalAlignment="Left"
               Content="Sort By"
               FontWeight="DemiBold"
               VerticalContentAlignment="Center"
               Padding="0,0,0,0" />
        <local:MpClipBorder CornerRadius="15"
                            Margin="5"
                            Grid.Column="1">
            <ComboBox FontSize="16"
                      Focusable="False"
                      Background="Transparent"
                      HorizontalContentAlignment="Left"
                      VerticalContentAlignment="Center"
                      SelectedItem="{Binding SelectedSortType}"
                      ItemsSource="{Binding SortTypes}">
                <ComboBox.ItemTemplate>
                    <ItemContainerTemplate>
                        <TextBlock Visibility="{Binding IsVisible,
                                                        Converter={StaticResource BoolToVisibilityConverter}}"
                                   Text="{Binding Header}" />
                    </ItemContainerTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </local:MpClipBorder>
        <Button Grid.Column="2"
                Margin="0,0,0,0"
                Background="Transparent"
                Template="{StaticResource SearchButtonControlTemplate}"
                BorderThickness="0"
                Height="30"
                Width="30"
                IsEnabled="{Binding IsManualSort,
                                    Converter={StaticResource BoolFlipConverter}}"
                Command="{Binding ToggleSortOrderCommand}">
            <Image Source="{Binding SortImagePath,
                                    Converter={StaticResource StringResourceToImageSourceConverter}}"
                   Stretch="Fill" />
        </Button>
    </StackPanel>
</local:MpUserControl>
