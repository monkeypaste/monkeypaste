<local:MpUserControl x:Class="MpWpfApp.MpTagTileView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpTagTileViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpTagTileViewModel,
                                                      IsDesignTimeCreatable=False}">
    <i:Interaction.Behaviors>
        <local:MpTagTileNotificationBehavior x:Name="TagTileNotificationBehavior" />
    </i:Interaction.Behaviors>
    <AdornerDecorator>
        <StackPanel Orientation="Horizontal"
                    PreviewMouseRightButtonDown="StackPanel_PreviewMouseRightButtonDown">
            <local:MpClipBorder x:Name="TagTileBorder"
                                Loaded="TagTileBorder_Loaded"
                                local:MpSizeObserverExtension.IsEnabled="True"
                                local:MpSizeObserverExtension.ObservedWidth="{Binding TagTileTrayWidth,
                                                                                      Mode=OneWayToSource}"
                                local:MpHoverableExtension.IsEnabled="True"
                                local:MpHoverableExtension.IsHovering="{Binding IsHovering,
                                                                                Mode=TwoWay}"
                                PreviewMouseLeftButtonDown="TagTileBorder_PreviewMouseLeftButtonDown"
                                CornerRadius="10"
                                Margin="5,3,0,0"
                                Padding="3"
                                Focusable="False"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Left"
                                Background="{Binding TagBorderBackgroundHexColor,
                                                     Converter={StaticResource StringHexToBrushConverter}}"
                                BorderBrush="{Binding TagTrayBorderHexColor,
                                                      Converter={StaticResource StringHexToBrushConverter}}"
                                BorderThickness="1.5"
                                Height="{Binding TagHeight}">
                <StackPanel Orientation="Horizontal">
                    <Grid DockPanel.Dock="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--  Tag Count Box  -->
                        <local:MpClipBorder x:Name="TagCountBorder"
                                            CornerRadius="5"
                                            Grid.Column="0"
                                            Grid.Row="0"
                                            MinWidth="20"
                                            Margin="3"
                                            Padding="5,5,5,5"
                                            BorderThickness="0"
                                            Background="{Binding TagHexColor,
                                                                 Mode=TwoWay,
                                                                 UpdateSourceTrigger=PropertyChanged,
                                                                 NotifyOnTargetUpdated=True,
                                                                 NotifyOnSourceUpdated=True,
                                                                 Converter={StaticResource StringHexToBrushConverter}}">
                            <TextBlock Background="Transparent"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Text="{Binding TagClipCount,
                                                      Converter={StaticResource IntToStringConverter}}"
                                       Foreground="{Binding TagCountTextHexColor,
                                                            Converter={StaticResource StringHexToBrushConverter}}" />
                        </local:MpClipBorder>
                        <Grid Grid.Row="0"
                              Grid.Column="1"
                              ClipToBounds="True"
                              Margin="5,0,0,0"
                              MaxWidth="{Binding MaxTagNameScreeWidth,
                                                 Source={x:Static local:MpMeasurements.Instance}}">
                            <TextBox x:Name="TagTextBox"
                                     local:MpIsFocusedExtension.IsEnabled="True"
                                     local:MpIsFocusedExtension.SelectViewModelOnFocus="False"
                                     local:MpIsFocusedExtension.IsFocused="{Binding IsTagNameTrayTextBoxFocused,
                                                                                    Mode=TwoWay}"
                                     local:MpMarqueeTextBoxExtension.IsEnabled="True"
                                     local:MpMarqueeTextBoxExtension.EditOnMouseClick="False"
                                     local:MpMarqueeTextBoxExtension.IsReadOnly="{Binding IsTagNameTrayReadOnly,
                                                                                          Mode=TwoWay}"
                                     Background="White"
                                     Foreground="Black"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     PreviewKeyDown="TagTextBox_PreviewKeyDown"
                                     IsReadOnly="{Binding IsTagNameTrayReadOnly,
                                                          Mode=OneWay}"
                                     FontSize="{Binding TagFontSize}"
                                     Text="{Binding TagName,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    NotifyOnTargetUpdated=True,
                                                    NotifyOnSourceUpdated=True}" />
                        </Grid>
                    </Grid>
                </StackPanel>
            </local:MpClipBorder>
            <StackPanel x:Name="AddTagButtonPanel"
                        Margin="10,5,5,0">
                <Button x:Name="AddTagButton"
                        Visibility="{Binding IsAllTag,
                                             Converter={StaticResource BoolToVisibilityConverter},
                                             ConverterParameter={StaticResource Hide}}"
                        Height="30"
                        Width="30"
                        ToolTip="Add Collection"
                        ToolTipService.InitialShowDelay="100"
                        Style="{StaticResource RoundedButton}"
                        Command="{Binding AddChildTagCommand}">
                    <Image Stretch="Fill"
                           Source="/MpWpfApp;component/Resources/Images/add4.png" />
                </Button>
            </StackPanel>
        </StackPanel>
    </AdornerDecorator>
</local:MpUserControl>
