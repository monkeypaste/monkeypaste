<local:MpUserControl x:Class="MpWpfApp.MpSearchCriteriaItemView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpSearchCriteriaItemViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="50"
                     d:DesignWidth="800"
                    local:MpHoverableExtension.IsEnabled="True"
                    local:MpHoverableExtension.IsHovering="{Binding IsHovering}"
                     d:DataContext="{d:DesignInstance Type=local:MpSearchCriteriaItemViewModel,
                                                      IsDesignTimeCreatable=False}">
    <DockPanel LastChildFill="False">
        <ListBox Background="Transparent"
                 BorderThickness="0"
                 RequestBringIntoView="ListBox_RequestBringIntoView"
                 ItemsSource="{Binding SelectedOptions}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsItemsHost="True"
                                            Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:MpSearchCriteriaOptionView DataContext="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Right">
            <Button x:Name="AddCriteriaItemButton"
                    Background="Transparent"
                    Height="25"
                    Width="25"
                    BorderThickness="2"
                    local:MpHoverableExtension.IsEnabled="True"
                    local:MpHoverableExtension.IsHovering="{Binding IsOverAddCriteriaButton, Mode=TwoWay}"
                    Style="{StaticResource SemiTransparentButton}"
                    Command="{Binding Parent.AddSearchCriteriaItemCommand}">
                <Border CornerRadius="2"
                        Background="LightGray"
                        BorderBrush="{Binding AddCriteriaItemButtonBorderBrush}"
                        BorderThickness="2">
                    <Image Stretch="Fill"
                           Source="{Binding .,
                                            Source={StaticResource PlusIcon},
                                            Converter={StaticResource StringToImageSourceConverter}}" />
                </Border>
            </Button>
            <Button x:Name="RemoveCriteriaItemButton"
                    Margin="10"
                    Background="Transparent"
                    Height="25"
                    Width="25"
                    BorderThickness="2"
                    local:MpHoverableExtension.IsEnabled="True"
                    local:MpHoverableExtension.IsHovering="{Binding IsOverRemoveCriteriaButton, Mode=TwoWay}"
                    Style="{StaticResource SemiTransparentButton}"
                    Command="{Binding Parent.RemoveSearchCriteriaItemCommand}"
                    CommandParameter="{Binding}">
                <Border CornerRadius="2"
                        Background="LightGray"
                        BorderBrush="{Binding RemoveCriteriaItemButtonBorderBrush}"
                        BorderThickness="2">
                    <Image Stretch="Fill"
                           Source="{Binding .,
                                            Source={StaticResource MinusIcon},
                                            Converter={StaticResource StringToImageSourceConverter}}" />
                </Border>
            </Button>
        </StackPanel>
    </DockPanel>
</local:MpUserControl>
