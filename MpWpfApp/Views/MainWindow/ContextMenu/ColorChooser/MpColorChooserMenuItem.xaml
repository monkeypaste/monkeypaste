<MenuItem x:Class="MpWpfApp.MpColorChooserMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MpWpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
          d:DataContext="{d:DesignInstance local:MpColorChooserMenuItemViewModel}">
    <DataGrid ItemsSource="{Binding ColorColumns2}" 
              SelectionUnit="Cell" 
              SelectedItem="{Binding SelectedItem2, Mode=TwoWay}"
            SelectionMode="Single"
            Width="Auto"
            Height="Auto"
            CanUserAddRows="False"
            IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTemplateColumn Width="15">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Border Width="15"
                                Height="15"
                                CornerRadius="2"
                                BorderBrush="DarkGray"
                                BorderThickness="1.5"
                                Background="{Binding}"
                                Tag="{Binding}"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</MenuItem>
