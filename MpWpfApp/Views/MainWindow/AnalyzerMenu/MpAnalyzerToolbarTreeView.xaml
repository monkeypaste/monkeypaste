<local:MpUserControl x:Class="MpWpfApp.MpAnalyzerToolbarTreeView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpAnalyticItemCollectionViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpAnalyticItemCollectionViewModel, IsDesignTimeCreatable=False}">
    <DockPanel>
        <ToggleButton x:Name="ExpandAnalyzerButton"
                      Height="10"
                      Width="10"
                      VerticalAlignment="Top"
                      Margin="7,0"
                      Padding="0"
                      BorderThickness="0"
                      ToolTip="Add Analyzer"
                      ToolTipService.InitialShowDelay="100"
                      IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                      Background="Transparent">
            <Image Stretch="Fill"
                   Source="/MpWpfApp;component/Resources/Images/forward_black.png" />
        </ToggleButton>
        <Button x:Name="AnalyzeButton"
                DockPanel.Dock="Right"
                Background="Transparent"
                Margin="0,0,5,0"
                MinWidth="100"
                Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                Template="{StaticResource SearchButtonControlTemplate}"
                BorderThickness="0">
            <Border BorderBrush="Orange"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="0,3,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                <DockPanel LastChildFill="False">
                    <TextBlock Text="ANALYZE"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="15"
                               Margin="8,0,0,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                    <local:MpSpinnerApple DockPanel.Dock="Right"
                                          Width="25"
                                          Height="25"
                                          Margin="10,3,2,2"
                                          HorizontalAlignment="Left"
                                          HorizontalContentAlignment="Left"
                                          VerticalAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          Visibility="{Binding SelectedItem.IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />

                </DockPanel>
            </Border>
        </Button>
        <StackPanel Orientation="Horizontal"
                    Margin="3"
                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}"
                    HorizontalAlignment="Left">
            <ComboBox ItemsSource="{Binding Items}"
                      MinWidth="100"
                      Background="Transparent"
                      Margin="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="False">
                            <Image DockPanel.Dock="Left"
                                   Source="{Binding ItemIconSourcePath}"
                                   Margin="5,0" />
                            <TextBlock DockPanel.Dock="Right"
                                       Margin="8,0,10,0"
                                       Padding="3"
                                       VerticalAlignment="Center"
                                       ToolTipService.InitialShowDelay="2"
                                       Foreground="Black"
                                       Background="Transparent">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        <TextBlock Text="{Binding Description}" />
                                    </ToolTip>
                                </TextBlock.ToolTip>
                                <TextBlock.Inlines>
                                    <Hyperlink x:Name="AnalyticItemTextBlockLink"
                                               Background="Transparent">
                                        <Hyperlink.Inlines>
                                            <Run Text="{Binding Title}" />
                                        </Hyperlink.Inlines>
                                    </Hyperlink>
                                </TextBlock.Inlines>
                            </TextBlock>
                        </DockPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="IsSelected"
                                Value="{Binding IsSelected, Mode=TwoWay}" />
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
            <Button x:Name="AddAnalyzerButton"
                    Height="30"
                    Width="30"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    ToolTip="Add Analyzer"
                    ToolTipService.InitialShowDelay="100"
                    Template="{StaticResource SearchButtonControlTemplate}"
                    Background="Transparent">
                <Image Stretch="Fill"
                       Source="/MpWpfApp;component/Resources/Images/add2.png" />
            </Button>
        </StackPanel>
    </DockPanel>
</local:MpUserControl>
