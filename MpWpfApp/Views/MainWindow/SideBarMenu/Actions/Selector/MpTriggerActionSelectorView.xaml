<local:MpUserControl x:Class="MpWpfApp.MpTriggerActionSelectorView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpActionCollectionViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpActionCollectionViewModel,
                                                      IsDesignTimeCreatable=False}">
    <StackPanel Orientation="Horizontal">
        <Border CornerRadius="3"
                BorderThickness="1"
                BorderBrush="Black"
                Margin="10,0">
            <StackPanel Orientation="Vertical"
                        Margin="10">
                <TextBlock FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"
                           Foreground="White"
                           Text="Actions" />
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <ComboBox x:Name="RootActionChooserComboBox"
                              MinWidth="200"
                              IsSynchronizedWithCurrentItem="True"
                              SelectedItem="{Binding SelectedItem,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding Items}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="IsSelected"
                                        Value="{Binding IsSelected,
                                                        Mode=TwoWay,
                                                        UpdateSourceTrigger=PropertyChanged,
                                                        NotifyOnTargetUpdated=True,
                                                        NotifyOnSourceUpdated=True}" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <local:MpActionComboBoxItem Visibility="{Binding IsRootAction,
                                                                                 Converter={StaticResource BoolToVisibilityConverter}}"
                                                            DataContext="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button BorderThickness="0"
                            Margin="5"
                            Background="Beige"
                            HorizontalAlignment="Right"
                            PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown">
                        <Image Source="{Binding .,
                                                Converter={StaticResource StringResourceToImageSourceConverter},
                                                Source={StaticResource AddIcon}}"
                               Margin="5"
                               Width="15"
                               Height="15" />
                    </Button>
                </StackPanel>
                <local:MpTriggerActionTreeView Visibility="{Binding IsAnySelected,
                                                                    Converter={StaticResource BoolToVisibilityConverter}}"
                                               DataContext="{Binding}" />
            </StackPanel>
        </Border>
        <Grid x:Name="DetailGrid"
              DataContext="{Binding SelectedItem}"
              Visibility="{Binding IsEditingDetails,
                                   Converter={StaticResource BoolToVisibilityConverter},
                                   FallbackValue=Collapsed}">
            <!--<local:MpAnalyticItemPresetParameterListBoxView Visibility="{Binding IsAnalyzeAction,
                                                                                 Converter={StaticResource BoolToVisibilityConverter}}"
                                                            DataContext="{Binding SelectedItem.SelectedPresetViewModel}" />-->
            <TextBlock Visibility="{Binding IsCompareAction, Converter={StaticResource BoolToVisibilityConverter}}">Fancy Compare setup here</TextBlock>
        </Grid>
    </StackPanel>
</local:MpUserControl>
