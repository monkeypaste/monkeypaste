<local:MpUserControl x:Class="MpWpfApp.MpSidebarMenuView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpMainWindowViewModel"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpMainWindowViewModel,
                                                      IsDesignTimeCreatable=False}">
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding AppStateButtonPanelWidth, Source={x:Static local:MpMeasurements.Instance}}" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:MpAppModeButtonGridView Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Stretch"
                                       VerticalContentAlignment="Stretch"
                                       Margin="0,3"
                                       Visibility="{Binding IsAnyTileExpanded,
                                                            Source={x:Static local:MpClipTrayViewModel.Instance},
                                                            Converter={StaticResource BoolToVisibilityFlipConverter}}"
                                       DataContext="{x:Static local:MpAppModeViewModel.Instance}" />

        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Stretch">
            <local:MpTagTreeView x:Name="TagTreeView"
                                 MinWidth="100"
                                 Visibility="{Binding IsVisible,
                                                      Converter={StaticResource BoolToVisibilityConverter}}"
                                 DataContext="{x:Static local:MpTagTrayViewModel.Instance}" />
            <local:MpAnalyticItemSelectorView x:Name="ManageAnalyticItemsContainerView"
                                              MinWidth="100"
                                              DataContext="{x:Static local:MpAnalyticItemCollectionViewModel.Instance}"
                                              Visibility="{Binding IsVisible,
                                                                   Converter={StaticResource BoolToVisibilityConverter}}" />
            <local:MpTriggerActionSelectorView x:Name="ActionCollectionView"
                                 MinWidth="100"
                                 DataContext="{x:Static local:MpActionCollectionViewModel.Instance}"
                                 Visibility="{Binding IsVisible,
                                                      Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </Grid>

</local:MpUserControl>
