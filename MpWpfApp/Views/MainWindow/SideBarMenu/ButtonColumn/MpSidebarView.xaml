<local:MpUserControl x:Class="MpWpfApp.MpSidebarView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpClipTrayViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpClipTrayViewModel,
                                                      IsDesignTimeCreatable=False}">
    <Grid Loaded="Grid_Loaded"
          Background="{Binding .,
                               Converter={StaticResource StringToThemeBrushConverter},
                               ConverterParameter=App_Mode_Grid_Background_Color}">
        <Grid.Resources>
            <Style x:Key="AppModeToggleButtonStyle"
                   TargetType="ToggleButton" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ToggleButton Grid.Row="0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center"
                      ToolTipService.InitialShowDelay="0"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      Padding="10"
                      IsChecked="{Binding IsAppPaused,
                                          Mode=TwoWay,
                                          UpdateSourceTrigger=PropertyChanged,
                                          NotifyOnSourceUpdated=True,
                                          NotifyOnTargetUpdated=True}">
            <Grid>
                <Image Source="{Binding Source={StaticResource PauseIcon},
                                        Converter={StaticResource StringResourceToImageSourceConverter}}"
                       Visibility="{Binding IsAppPaused,
                                            Converter={StaticResource BoolToVisibilityFlipConverter}}"
                       ToolTip="Pause Clipboard Listener"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
                <Image Source="{Binding Source={StaticResource PlayIcon},
                                        Converter={StaticResource StringResourceToImageSourceConverter}}"
                       Visibility="{Binding IsAppPaused,
                                            Converter={StaticResource BoolToVisibilityConverter}}"
                       ToolTip="Resume Clipboard Listener"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Grid>
        </ToggleButton>
        <ToggleButton x:Name="TagTreeToggleButton"
                      Grid.Row="1"
                      ToolTipService.InitialShowDelay="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="Collection Tree"
                      IsChecked="{Binding IsSidebarVisible,
                                          Source={x:Static local:MpTagTrayViewModel.Instance}}"
                      Padding="10">
            <Image Source="{Binding Source={StaticResource PinToCollectionIcon},
                                    Converter={StaticResource StringResourceToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
        <ToggleButton x:Name="AnalyzerToggleButton"
                      Grid.Row="2"
                      ToolTipService.InitialShowDelay="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="Analyze"
                      IsEnabled="True"
                      IsChecked="{Binding IsSidebarVisible,
                                          Source={x:Static local:MpAnalyticItemCollectionViewModel.Instance}}"
                      Padding="10">
            <Image Source="{Binding Source={StaticResource BrainIcon},
                                    Converter={StaticResource StringResourceToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
        <ToggleButton x:Name="ActionsToggleButton"
                      Grid.Row="3"
                      ToolTipService.InitialShowDelay="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="Analyze"
                      IsEnabled="True"
                      IsChecked="{Binding IsSidebarVisible,
                                          Source={x:Static local:MpActionCollectionViewModel.Instance}}"
                      Padding="10">
            <Image Source="{Binding Source={StaticResource BoltIcon},
                                    Converter={StaticResource StringResourceToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
        <ToggleButton x:Name="AppModeToggleButton"
                      Loaded="AppModeToggleButton_Loaded"
                      Grid.Row="4"
                      Padding="10"
                      ToolTipService.InitialShowDelay="0"
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="Append to Clipboard"
                      IsEnabled="{Binding IsAppPaused,
                                          Converter={StaticResource BoolFlipConverter}}"
                      PreviewMouseLeftButtonDown="ToggleButton_PreviewMouseLeftButtonDown">
            <ToggleButton.Resources>
                <StackPanel x:Key="AppModeToggleButtonStackPanel"
                            Orientation="Horizontal">
                    <ToggleButton x:Name="AppendModeToggleButton"
                                  Grid.Row="4"
                                  Padding="10"
                                  ToolTipService.InitialShowDelay="0"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Center"
                                  Template="{StaticResource AppModeToggleButtonControlTemplate}"
                                  ToolTip="Append to Clipboard"
                                  IsEnabled="{Binding IsAppPaused,
                                                      Converter={StaticResource BoolFlipConverter}}"
                                  PreviewMouseLeftButtonDown="ToggleButton_PreviewMouseLeftButtonDown">
                        <Grid>
                            <Popup IsOpen="False">
                                <StackPanel Orientation="Vertical">
                                    <ToggleButton Width="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  Height="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  ToolTipService.InitialShowDelay="0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Template="{StaticResource AppModeToggleButtonControlTemplate}"
                                                  IsChecked="{Binding IsAppendMode,
                                                                      Mode=TwoWay,
                                                                      UpdateSourceTrigger=PropertyChanged,
                                                                      NotifyOnSourceUpdated=True,
                                                                      NotifyOnTargetUpdated=True}"
                                                  Padding="10">
                                        <ToggleButton.ToolTip>
                                            <TextBlock>
                                                <Run Text="Append Cut/Copy " />
                                                <Run Text="{Binding .,
                                                                    Converter={StaticResource ShorcutIdToKeyStringConverter},
                                                                    ConverterParameter=3}" />
                                            </TextBlock>
                                        </ToggleButton.ToolTip>
                                        <Image Source="{Binding Source={StaticResource AppendRunIcon},
                                                                Converter={StaticResource StringResourceToImageSourceConverter}}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                    </ToggleButton>
                                    <ToggleButton Width="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  Height="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  ToolTipService.InitialShowDelay="0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Template="{StaticResource AppModeToggleButtonControlTemplate}"
                                                  IsChecked="{Binding IsAppendLineMode,
                                                                      Mode=TwoWay,
                                                                      UpdateSourceTrigger=PropertyChanged,
                                                                      NotifyOnSourceUpdated=True,
                                                                      NotifyOnTargetUpdated=True}"
                                                  Padding="10">
                                        <ToggleButton.ToolTip>
                                            <TextBlock>
                                                <Run Text="Append Line Cut/Copy " />
                                                <Run Text="{Binding .,
                                                                    Converter={StaticResource ShorcutIdToKeyStringConverter},
                                                                    ConverterParameter=25}" />
                                            </TextBlock>
                                        </ToggleButton.ToolTip>
                                        <Image Source="{Binding Source={StaticResource AppendLineIcon},
                                                                Converter={StaticResource StringResourceToImageSourceConverter}}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                    </ToggleButton>
                                </StackPanel>
                            </Popup>
                            <Image Source="{Binding Source={StaticResource AppendIcon},
                                                    Converter={StaticResource StringResourceToImageSourceConverter}}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                        </Grid>
                    </ToggleButton>
                    <ToggleButton x:Name="MouseModeToggleButton"
                                  Grid.Row="3"
                                  ToolTipService.InitialShowDelay="0"
                                  ToolTip="Mouse Modes"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Template="{StaticResource AppModeToggleButtonControlTemplate}"
                                  IsEnabled="{Binding IsAppPaused,
                                                      Converter={StaticResource BoolFlipConverter}}"
                                  PreviewMouseLeftButtonDown="ToggleButton_PreviewMouseLeftButtonDown"
                                  Padding="10">
                        <Grid>
                            <Popup IsOpen="False">
                                <StackPanel Orientation="Vertical">
                                    <ToggleButton Width="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  Height="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  ToolTipService.InitialShowDelay="0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Template="{StaticResource AppModeToggleButtonControlTemplate}"
                                                  IsEnabled="{Binding IsAppPaused,
                                                                      Converter={StaticResource BoolFlipConverter}}"
                                                  IsChecked="{Binding IsAutoCopyMode}"
                                                  Padding="10">
                                        <ToggleButton.ToolTip>
                                            <TextBlock>
                                                <Run Text="Auto-Copy Selection " />
                                                <Run Text="{Binding .,
                                                                    Converter={StaticResource ShorcutIdToKeyStringConverter},
                                                                    ConverterParameter=4}" />
                                            </TextBlock>
                                        </ToggleButton.ToolTip>
                                        <Image Source="{Binding Source={StaticResource LeftClickIcon},
                                                                Converter={StaticResource StringResourceToImageSourceConverter}}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                    </ToggleButton>
                                    <ToggleButton Width="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  Height="{local:MpMeasurementsBinding AppStateButtonPanelWidth}"
                                                  ToolTipService.InitialShowDelay="0"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Template="{StaticResource AppModeToggleButtonControlTemplate}"
                                                  IsEnabled="{Binding IsAppPaused,
                                                                      Converter={StaticResource BoolFlipConverter}}"
                                                  IsChecked="{Binding IsRightClickPasteMode}"
                                                  Padding="10">
                                        <ToggleButton.ToolTip>
                                            <TextBlock>
                                                <Run Text="Right-Click Paste " />
                                                <Run Text="{Binding .,
                                                                    Converter={StaticResource ShorcutIdToKeyStringConverter},
                                                                    ConverterParameter=5}" />
                                            </TextBlock>
                                        </ToggleButton.ToolTip>
                                        <Image Source="{Binding Source={StaticResource RightClickIcon},
                                                                Converter={StaticResource StringResourceToImageSourceConverter}}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                    </ToggleButton>
                                </StackPanel>
                            </Popup>
                            <Image Source="{Binding MouseModeImageSourcePath,
                                                    Converter={StaticResource StringResourceToImageSourceConverter}}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                        </Grid>
                    </ToggleButton>
                </StackPanel>
            </ToggleButton.Resources>
            <ToggleButton.ContextMenu>
                <ContextMenu>
                    <ContextMenu.Template>
                        <ControlTemplate>
                            <ContentControl Content="{StaticResource AppModeToggleButtonStackPanel}" />
                        </ControlTemplate>
                    </ContextMenu.Template>
                </ContextMenu>
            </ToggleButton.ContextMenu>
            <Image Source="{Binding Source={StaticResource BullsEyeIcon},
                                    Converter={StaticResource StringResourceToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
    </Grid>
</local:MpUserControl>
