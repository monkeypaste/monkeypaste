<local:MpUserControl x:Class="MpWpfApp.MpEditableListBoxParameterView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                     x:TypeArguments="local:MpEnumerableParameterViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpEnumerableParameterViewModel,
                                                      IsDesignTimeCreatable=False}">
    <Border BorderThickness="0"
            CornerRadius="2"
            ToolTipService.InitialShowDelay="2"
            BorderBrush="{Binding ParameterBorderBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>
            <ListBox x:Name="EditableList"
                     Grid.Row="0"
                     Background="Transparent"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     ItemsSource="{Binding Items}"
                     SelectionMode="Single"
                     Margin="10,0"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     MaxWidth="{Binding ActualWidth,
                                        RelativeSource={RelativeSource AncestorType={x:Type Border}}}"
                     MinWidth="80">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="IsSelected"
                                Value="{Binding IsSelected,
                                                Mode=TwoWay,
                                                NotifyOnTargetUpdated=True,
                                                NotifyOnSourceUpdated=True,
                                                UpdateSourceTrigger=PropertyChanged}" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Left" />
                        <Setter Property="VerticalAlignment"
                                Value="Stretch" />
                        <Setter Property="VerticalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:MpContentQueryTextBoxView Background="Transparent"
                                                         DataContext="{Binding}"
                                                         BorderBrush="{Binding BorderBrush}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Grid.Row="1"
                    Width="75"
                    BorderThickness="0"
                    Background="Beige"
                    Style="{StaticResource RoundedButton}"
                    Margin="10,5,10,0"
                    HorizontalAlignment="Right"
                    Command="{Binding AddValueCommand}">
                <DockPanel>
                    <Image Source="{Binding .,
                                            Converter={StaticResource StringResourceToImageSourceConverter},
                                            Source={StaticResource AddIcon}}"
                           DockPanel.Dock="Left"
                           Width="15"
                           Height="15" />
                    <Label DockPanel.Dock="Right"
                           Content="Add" />
                </DockPanel>
            </Button>
        </Grid>
    </Border>
</local:MpUserControl>
