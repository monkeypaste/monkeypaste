<local:MpUserControl x:Class="MpWpfApp.MpAnalyticItemParameterView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                     x:TypeArguments="local:MpAnalyticItemParameterViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpAnalyticItemParameterViewModel,
                                                      IsDesignTimeCreatable=False}">
    <Grid x:Name="ParamGrid"
          ShowGridLines="True"
          Background="DarkViolet">
        <Grid.Resources>
            <Style x:Key="AnalyzerTextBlockStyle"
                   TargetType="TextBlock">
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="VerticalAlignment"
                        Value="Top" />
                <Setter Property="FontSize"
                        Value="13" />
                <Setter Property="FontWeight"
                        Value="SemiBold" />
                <Setter Property="Foreground"
                        Value="White" />
                <Setter Property="Margin"
                        Value="5,5,7,0" />
                <Setter Property="DockPanel.Dock"
                        Value="Left" />
            </Style>
            <!--  ListBox Parameter  -->

            <DataTemplate x:Key="ListBoxParameterTemplate"
                          DataType="local:MpListBoxParameterViewModel">
                <local:MpListBoxParameterView DataContext="{Binding}" />
            </DataTemplate>

            <!--  ComboBox Parameter  -->

            <DataTemplate x:Key="ComboBoxParameterTemplate"
                          DataType="local:MpComboBoxParameterViewModel">
                <local:MpComboBoxParameterView DataContext="{Binding}" />
            </DataTemplate>

            <!--  TextBox Parameter  -->

            <DataTemplate x:Key="TextBoxParameterTemplate"
                          DataType="local:MpTextBoxParameterViewModel">
                <local:MpTextBoxParameterView DataContext="{Binding}" />
            </DataTemplate>

            <!--  CheckBox Parameter  -->

            <DataTemplate x:Key="CheckBoxParameterTemplate"
                          DataType="local:MpCheckBoxParameterViewModel">
                <local:MpCheckBoxParameterView DataContext="{Binding}" />
            </DataTemplate>

            <!--  Slider Parameter  -->

            <DataTemplate x:Key="SliderParameterTemplate"
                          DataType="local:MpSliderParameterViewModel">
                <local:MpSliderParameterView Margin="10,0"
                                             DataContext="{Binding}" />
            </DataTemplate>

            <!--  File or Directory Chooser Parameter  -->

            <DataTemplate x:Key="FileChooserParameterTemplate"
                          DataType="local:MpFileChooserParameterViewModel">
                <local:MpFileChooserParameterView DataContext="{Binding}" />
            </DataTemplate>

            <local:MpParameterViewSelector x:Key="ParameterViewSelector" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0"
                   LastChildFill="False"
                   DockPanel.Dock="Left">
            <TextBlock Style="{StaticResource AnalyzerTextBlockStyle}"
                       TextWrapping="Wrap"
                       MaxWidth="110"
                       Text="{Binding Label}" />
            <local:MpTooltipInfoView DockPanel.Dock="Right" 
                                     DataContext="{Binding}" />
        </DockPanel>
        <ContentControl Grid.Column="1"
                        Content="{Binding}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Margin="5"
                        ContentTemplateSelector="{StaticResource ParameterViewSelector}" />
    </Grid>
</local:MpUserControl>
