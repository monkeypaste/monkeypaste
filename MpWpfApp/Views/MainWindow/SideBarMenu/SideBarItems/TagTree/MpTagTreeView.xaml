<local:MpUserControl x:Class="MpWpfApp.MpTagTreeView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
                     xmlns:pcl="clr-namespace:MonkeyPaste"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpTagTrayViewModel"
                     mc:Ignorable="d"
                     d:DataContext="{d:DesignInstance Type=local:MpTagTrayViewModel,
                                                      IsDesignTimeCreatable=False}"
                     d:DesignHeight="450"
                     d:DesignWidth="800">
    <Grid>
        <TreeView x:Name="TagTray"
                  Loaded="TagTray_Loaded"
                  Background="Transparent"
                  dd:DragDrop.IsDragSource="True"
                  dd:DragDrop.IsDropTarget="True"
                  BorderThickness="0"
                  ItemsSource="{Binding AllTagViewModel,
                                        Converter={StaticResource ItemToItemsSourceConverter}}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:MpTagTileViewModel}"
                                          ItemsSource="{Binding Children}">
                    <local:MpTagTileTreeView IsTagTreeTile="True"
                                             Background="Transparent"
                                             DataContext="{Binding}" />
                </HierarchicalDataTemplate>
            </TreeView.Resources>
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Style.Resources>
                        <SolidColorBrush Color="Transparent"
                                         x:Key="{x:Static SystemColors.HighlightBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                         Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                         Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                         Color="Transparent" />
                    </Style.Resources>
                    <Setter Property="IsSelected" Value="{Binding IsSelected}" />
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded}" />
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
    </Grid>
</local:MpUserControl>
