<local:MpUserControl x:Class="MpWpfApp.MpAppModeButtonGridView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpAppModeViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800">
    <Grid Loaded="Grid_Loaded"
          Background="{local:MpThemeColorsBinding Key=App_Mode_Grid_Background_Color}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ToggleButton Grid.Column="0"
                      Width="{Binding AppModeButtonGridWidth}"
                      Height="{Binding AppModeButtonGridWidth}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      ToolTipService.InitialShowDelay="0"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="{Binding IsAppPausedTooltip}"
                      Padding="10"
                      IsChecked="{Binding IsAppPaused}">
            <Image Source="{Binding PauseOrPlayIconSource,
                                    Converter={StaticResource StringToImageSourceConverter},
                                    Source={StaticResource SystemTrayViewModel}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
        <ToggleButton Grid.Column="1"
                      ToolTipService.InitialShowDelay="0"
                      ToolTip="{Binding IsAutoCopyModeTooltip}"
                      Width="{Binding AppModeButtonGridWidth}"
                      Height="{Binding AppModeButtonGridWidth}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      IsEnabled="{Binding IsAutoCopyModeEnabled}"
                      IsChecked="{Binding IsAutoCopyMode}"
                      Padding="10">
            <Image Source="{Binding Source={StaticResource LeftClickIcon},
                                    Converter={StaticResource StringToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
        <ToggleButton Grid.Column="2"
                      ToolTipService.InitialShowDelay="0"
                      Width="{Binding AppModeButtonGridWidth}"
                      Height="{Binding AppModeButtonGridWidth}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="{Binding IsRighClickPasteModeTooltip}"
                      IsEnabled="{Binding IsRighClickPasteModeEnabled}"
                      IsChecked="{Binding IsRightClickPasteMode}"
                      Padding="10">
            <Image Source="{Binding Source={StaticResource RightClickIcon},
                                    Converter={StaticResource StringToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
        <ToggleButton Grid.Column="3"
                      Padding="10"
                      ToolTipService.InitialShowDelay="0"
                      Width="{Binding AppModeButtonGridWidth}"
                      Height="{Binding AppModeButtonGridWidth}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="{Binding IsAppendModeTooltip}"
                      IsEnabled="{Binding IsAppendModeEnabled}"
                      IsChecked="{Binding IsInAppendMode}">
            <Image Source="{Binding Source={StaticResource AppendIcon},
                                    Converter={StaticResource StringToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
        <ToggleButton Grid.Column="4"
                      ToolTipService.InitialShowDelay="0"
                      Width="{Binding AppModeButtonGridWidth}"
                      Height="{Binding AppModeButtonGridWidth}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Template="{StaticResource AppModeToggleButtonControlTemplate}"
                      ToolTip="{Binding IsAutoAnalysisModeTooltip}"
                      IsEnabled="{Binding IsAutoAnalysisModeEnabled}"
                      IsChecked="{Binding IsInAutoAnalyzeMode}"
                      Padding="10">
            <Image Source="{Binding Source={StaticResource BrainIcon},
                                    Converter={StaticResource StringToImageSourceConverter}}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </ToggleButton>
    </Grid>
</local:MpUserControl>
