<UserControl x:Class="MpWpfApp.MpAddTemplateToolbarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MpWpfApp"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="AddTemplateContextMenu">
    <Button x:Name="AddButton"
            ToolTip="Add Template"
            Template="{StaticResource FlatButtonControlTemplate}">
        <Button.ContextMenu>
            <ContextMenu Opened="AddTemplateContextMenu_Opened"
                         ItemsSource="{Binding Templates}">
                <ContextMenu.ItemContainerStyle>
                    <Style TargetType="{x:Type MenuItem}">
                        <Setter Property="Icon"
                                Value="{Binding TemplateBrush, Converter={StaticResource BrushToImageConverter}}" />
                        <Setter Property="Header"
                                Value="{Binding TemplateName}" />
                    </Style>
                </ContextMenu.ItemContainerStyle>
            </ContextMenu>
        </Button.ContextMenu>
        <Image Source="/Resources/Images/MpRichTextBox/templateadd.png"
               Stretch="None"
               SnapsToDevicePixels="True" />
    </Button>
</UserControl>
