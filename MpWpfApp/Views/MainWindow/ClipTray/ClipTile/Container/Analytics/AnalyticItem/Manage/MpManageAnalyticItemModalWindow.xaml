<Window x:Class="MpWpfApp.MpManageAnalyticItemModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MpWpfApp"
        mc:Ignorable="d"
        Title="Analyzer Management"
        Icon="{Binding .,
                       Source={StaticResource CogIcon},
                       Converter={StaticResource StringToIconConverter}}"
        d:DesignWidth="600"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource AnalyticItemCollectionViewModel}"
        d:DataContext="{d:DesignInstance Type=local:MpAnalyticItemCollectionViewModel,
                                         IsDesignTimeCreatable=False}">
    <local:MpManageAnalyticItemsContainerView IsWindowed="True"
                                              DataContext="{Binding}" />
</Window>
