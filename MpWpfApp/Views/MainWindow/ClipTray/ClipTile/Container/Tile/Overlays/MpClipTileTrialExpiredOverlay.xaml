<UserControl x:Class="MpWpfApp.MpClipTileTrialExpiredOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:MpWpfApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:spinners="clr-namespace:xamlSpinnersWPF"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid x:Name="TrialExpiredOverlayGrid"
          Background="Gray"
          Opacity="0.5"
          Visibility="{Binding TrialOverlayVisibility}">
        <Viewbox Width="{Binding LoadingSpinnerSize}"
                 Height="{Binding LoadingSpinnerSize}"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
            <Image HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/Resources/Images/lock.png" />
        </Viewbox>
    </Grid>
</UserControl>
