<local:MpUserControl x:Class="MpWpfApp.MpClipTileDetailView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpClipTileViewModel"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     d:DataContext="{d:DesignInstance Type=local:MpClipTileViewModel,
                                                      IsDesignTimeCreatable=False}"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     mc:Ignorable="d">
    <Border Grid.Row="2"
            Padding="0"
            Background="Transparent"
            BorderBrush="LightGray"
            BorderThickness="0,0,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button x:Name="ClipTileHotkeyButton"
                    Grid.Column="0"
                    Width="16"
                    Height="16"
                    Margin="0"
                    HorizontalAlignment="Left"
                    Command="{Binding ShowAssignShortcutDialogCommand,
                                      Source={x:Static local:MpShortcutCollectionViewModel.Instance}}"
                    CommandParameter="{Binding}"
                    Template="{StaticResource SearchButtonControlTemplate}"
                    ToolTip="{Binding .,
                                      Converter={StaticResource ShortcutCommandViewModelToTooltipConverter}}"
                    ToolTipService.InitialShowDelay="0">
                <!--<Button.ToolTip>
                    <TextBlock>
                        <TextBlock.Text>
                            <Run Text="Assign Shorcut " />
                            <Run Text="{Binding Short}"
                        </TextBlock.Text>
                    </TextBlock>
                </Button.ToolTip>-->
                <Image Source="{Binding .,
                                        Converter={StaticResource ShortcutCommandViewModelToImageSourceConverter}}" />
            </Button>
            <TextBlock x:Name="ClipTileDetailTextBlock"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       ToolTipService.InitialShowDelay="0"
                       Background="Transparent"
                       MinWidth="50"
                       FontSize="10"
                       Foreground="{Binding DetailTextColor}"
                       MouseEnter="ClipTileDetailTextBlock_MouseEnter"
                       MouseLeave="ClipTileDetailTextBlock_MouseLeave"
                       Text="{Binding DetailText}" />
            <ToggleButton x:Name="ClipTileToggleEditButton"
                          Grid.Column="2"
                          Width="16"
                          Height="16"
                          HorizontalAlignment="Right"
                          IsChecked="{Binding IsContentReadOnly,
                                              Converter={StaticResource BoolFlipConverter}}"
                          local:MpHoverableExtension.IsEnabled="True"
                          local:MpHoverableExtension.HoverCursor="Hand"
                          Visibility="{Binding IsTextItem,
                                               Converter={StaticResource BoolToVisibilityConverter}}"
                          Template="{StaticResource LockToggleButtonControlTemplate}">
                <Image Source="/Resources/Images/edit.png" />
            </ToggleButton>
            <!--<local:MpContentReportView Grid.Column="2"
                                       HorizontalAlignment="Right"
                                       DataContext="{Binding CopyItemId,
                                                             Converter={StaticResource CopyItemIdToReportCollectionConverter}}" />-->

        </Grid>
    </Border>
</local:MpUserControl>
