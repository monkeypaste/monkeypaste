<local:MpUserControl x:Class="MpWpfApp.MpClipTileDetailView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpContentItemViewModel"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:spinners="clr-namespace:xamlSpinnersWPF"
                     d:DataContext="{d:DesignInstance local:MpContentItemViewModel, IsDesignTimeCreatable=True}"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     mc:Ignorable="d">
    <Border Grid.Row="2"
            Padding="0"
            Background="Transparent"
            BorderBrush="LightGray"
            BorderThickness="0,0,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button x:Name="ClipTileHotkeyButton"
                    Grid.Column="0"
                    Width="16"
                    Height="16"
                    Margin="0"
                    HorizontalAlignment="Left"
                    PreviewMouseLeftButtonDown="ClipTileHotkeyButton_PreviewMouseLeftButtonDown"
                    Command="{Binding AssignHotkeyCommand}"
                    Template="{StaticResource SearchButtonControlTemplate}"
                    ToolTip="{Binding HotkeyIconTooltip}"
                    ToolTipService.InitialShowDelay="0">
                <Image Source="{Binding HotkeyIconSource, Converter={StaticResource Base64StringToBitmapSourceConverter}}" />
            </Button>
            <TextBlock x:Name="ClipTileDetailTextBlock"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       ToolTipService.InitialShowDelay="0"
                       Background="Transparent"
                       FontSize="10"
                       Foreground="{Binding DetailTextColor}"
                       MouseEnter="ClipTileDetailTextBlock_MouseEnter"
                       MouseLeave="ClipTileDetailTextBlock_MouseLeave"
                       Text="{Binding DetailText}" />
            <ToggleButton x:Name="ClipTileToggleEditButton"
                          Grid.Column="2"
                          Width="16"
                          Height="16"
                          HorizontalAlignment="Right"
                          PreviewMouseLeftButtonDown="ClipTileToggleEditButton_PreviewMouseLeftButtonDown"
                          IsChecked="{Binding Parent.IsExpanded}"
                          Visibility="{Binding Parent.IsTextItem, Converter={StaticResource BoolToVisibilityConverter}}"
                          Template="{StaticResource LockToggleButtonControlTemplate}">
                <Image Source="/Resources/Images/edit.png" />
            </ToggleButton>
        </Grid>
    </Border>
</local:MpUserControl>
