<local:MpUserControl x:Class="MpWpfApp.MpFindReplaceToolbarView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local1="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpClipTileViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type=local:MpClipTileViewModel,
                                                      IsDesignTimeCreatable=False}">
    <Border Height="50"
            HorizontalAlignment="Stretch"
            Background="LightBlue"
            BorderThickness="0"
            CornerRadius="5">
        <Grid x:Name="FindAndReplaceToolbarGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1.3*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.3*" />
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0"
                      Margin="5,0,0,0"
                      VerticalAlignment="Center"
                      Content="Replace"
                      IsChecked="{Binding IsReplaceMode,
                                          Mode=TwoWay}" />
            <local:MpClipBorder x:Name="FindTextBoxBorder"
                                Grid.Column="1"
                                Margin="0,12,0,12"
                                HorizontalAlignment="Center"
                                Background="White"
                                BorderThickness="1"
                                BorderBrush="{Binding IsFindValid,
                                                      Converter={StaticResource BoolToBrushConverter},
                                                      ConverterParameter=Transparent|Red}"
                                CornerRadius="5">
                <DockPanel LastChildFill="True">
                    <Button x:Name="ClearFindTextButton"
                            DockPanel.Dock="Right"
                            Width="15"
                            Height="15"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ClearFindTextButton_Click"
                            Visibility="{Binding FindText,
                                                 Converter={StaticResource IsNotNullToVisibilityFlipConverter}}">
                        <Image Source="/Resources/Images/close1.png" />
                    </Button>
                    <ComboBox x:Name="FindComboBox"
                              BorderThickness="0"
                              IsVisibleChanged="FindComboBox_IsVisibleChanged"
                              VerticalContentAlignment="Center"
                              Background="Transparent"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              StaysOpenOnEdit="True"
                              PreviewKeyUp="ComboBox_PreviewKeyUp"
                              IsTextSearchCaseSensitive="{Binding MatchCase}"
                              ItemsSource="{Binding RecentFindTexts}"
                              Width="100"
                              GotFocus="ComboBox_GotFocus"
                              LostFocus="ComboBox_LostFocus"
                              HorizontalAlignment="Left"
                              SelectedItem="{Binding FindText}"
                              Text="{Binding FindText,
                                             Mode=TwoWay}">

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </DockPanel>
            </local:MpClipBorder>
            <local:MpClipBorder x:Name="ReplaceTextBoxBorder"
                                Grid.Column="2"
                                Visibility="{Binding IsReplaceMode,
                                                     Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,12,0,12"
                                HorizontalAlignment="Center"
                                Background="White"
                                BorderThickness="1"
                                BorderBrush="Transparent"
                                CornerRadius="5">
                <DockPanel LastChildFill="True">
                    <Button x:Name="ClearReplaceTextButton"
                            DockPanel.Dock="Right"
                            Width="15"
                            Height="15"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ClearReplaceTextButton_Click"
                            Visibility="{Binding ReplaceText,
                                                 Converter={StaticResource IsNotNullToVisibilityFlipConverter}}">
                        <Image Source="/Resources/Images/close1.png" />
                    </Button>
                    <ComboBox x:Name="ReplaceComboBox"
                              Width="100"
                              BorderThickness="0"
                              Background="Transparent"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              IsEditable="True"
                              IsTextSearchEnabled="True"
                              StaysOpenOnEdit="True"
                              PreviewKeyUp="ComboBox_PreviewKeyUp"
                              ItemsSource="{Binding RecentReplaceTexts}"
                              GotFocus="ComboBox_GotFocus"
                              LostFocus="ComboBox_LostFocus"
                              Text="{Binding ReplaceText,
                                             Mode=TwoWay}">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </DockPanel>
            </local:MpClipBorder>
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        Grid.Column="3">
                <CheckBox Grid.Column="3"
                          VerticalAlignment="Center"
                          Content="Case Sensitive"
                          Command="{Binding PerformInitialFindAndOrReplaceCommand}"
                          IsChecked="{Binding MatchCase,
                                              Mode=TwoWay}" />
                <CheckBox Grid.Column="4"
                          VerticalAlignment="Center"
                          Content="Match Whole Word"
                          Command="{Binding PerformInitialFindAndOrReplaceCommand}"
                          IsChecked="{Binding MatchWholeWord,
                                              Mode=TwoWay}" />
                <CheckBox Grid.Column="5"
                          VerticalAlignment="Center"
                          Content="RegEx"
                          Command="{Binding PerformInitialFindAndOrReplaceCommand}"
                          IsChecked="{Binding UseRegEx,
                                              Mode=TwoWay}" />
            </StackPanel>

            <Grid Grid.Column="6"
                  Margin="0,-3,0,-3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                    <Button Width="25"
                            Height="15"
                            Command="{Binding FindPreviousCommand}">
                        <Image Margin="1"
                               Stretch="Uniform"
                               Source="/Resources/Images/back_black.png" />
                    </Button>
                    <Label HorizontalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           Width="51"
                           Content="Find" />
                    <Button Width="25"
                            Height="15"
                            Command="{Binding FindNextCommand}">
                        <Image Margin="1"
                               Stretch="Uniform"
                               Source="/Resources/Images/forward_black.png" />
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Visibility="{Binding IsReplaceMode,
                                                 Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Width="25"
                            Height="15"
                            Command="{Binding ReplacePreviousCommand}">
                        <Image Margin="1"
                               Stretch="Uniform"
                               Source="/Resources/Images/back_black.png" />
                    </Button>
                    <Label HorizontalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           Content="Replace" />
                    <Button Width="25"
                            Height="15"
                            Command="{Binding ReplaceNextCommand}">
                        <Image Margin="1"
                               Stretch="Uniform"
                               Source="/Resources/Images/forward_black.png" />
                    </Button>
                </StackPanel>
            </Grid>
            <Button x:Name="ReplaceAllButton"
                    Grid.Column="7"
                    Margin="10"
                    Command="{Binding ReplaceAllCommand}"
                    Visibility="{Binding IsReplaceMode,
                                         Converter={StaticResource BoolToVisibilityConverter}}">
                REPLACE ALL
            </Button>
            <ToggleButton Grid.Column="8"
                          Background="Transparent"
                          BorderThickness="0"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Command="{Binding ToggleFindAndReplaceVisibleCommand}"
                          FontSize="10">
                <Image Width="10"
                       Height="10"
                       Source="{Binding .,
                                        Source={StaticResource CloseIcon},
                                        Converter={StaticResource StringResourceToImageSourceConverter}}" />
            </ToggleButton>
        </Grid>
    </Border>
</local:MpUserControl>
