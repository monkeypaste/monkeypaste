<Hyperlink x:Class="MpWpfApp.MpTextHyperlink"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
           xmlns:local="clr-namespace:MpWpfApp"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           d:DataContext="{d:DesignInstance Type=local:MpContentItemViewModel,
                                            IsDesignTimeCreatable=False}"
           Background="Transparent"
           IsEnabled="{Binding IsReadOnly, Converter={StaticResource BoolFlipConverter}}"
           MouseEnter="Hyperlink_MouseEnter"
           MouseLeave="Hyperlink_MouseLeave"
           PreviewMouseLeftButtonDown="Hyperlink_PreviewMouseLeftButtonDown"
           mc:Ignorable="d">
    <Hyperlink.ContextMenu>
        <ContextMenu>
            <MenuItem Click="ConvertToQr_Click"
                      Header="Convert to QR Code" />
        </ContextMenu>
    </Hyperlink.ContextMenu>
    <ContentPresenter />
</Hyperlink>
