<local:MpUserControl x:Class="MpWpfApp.MpEditTemplateToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpTemplateCollectionViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:MpTemplateCollectionViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="50"
             d:DesignWidth="700"
             mc:Ignorable="d">
    <Border x:Name="ClipTileEditTemplateToolbar"
            Width="{Binding HostClipTileViewModel.TileBorderWidth}"
            Height="40"
            HorizontalAlignment="Stretch"
            Background="LightBlue"
            BorderThickness="0"
            CornerRadius="10,0,0,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="TemplateColorButton"
                    Grid.Column="0"
                    Width="20"
                    Height="20"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Background="{Binding SelectedTemplate.TemplateBrush, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Command="{Binding SelectedTemplate.ChangeTemplateColorCommand}"
                    CommandParameter="{x:Reference TemplateColorButton}" />
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                <TextBox x:Name="TemplateNameEditorTextBox"
                         Height="25"
                         MinWidth="200"
                         Margin="0,0,0,0"
                         Padding="0,0,0,0"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Top"
                         BorderBrush="{Binding SelectedTemplate.TemplateNameTextBoxBorderBrush}"
                         BorderThickness="2"
                         FontSize="14"
                         Foreground="Black"
                         IsReadOnly="False"
                         PreviewKeyDown="TemplateNameEditorTextBox_PreviewKeyDown"
                         Text="{Binding SelectedTemplate.TemplateName, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" />
                <Border Background="LightYellow"
                        BorderBrush="Yellow"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="10,5"
                        Padding="5"
                        Visibility="{Binding SelectedTemplate.IsValid, Converter={StaticResource BoolToVisibilityFlipConverter}}">
                    <DockPanel>
                        <Image Source="/Resources/Images/warning.png"
                               Stretch="Fill"
                               DockPanel.Dock="Left" />
                        <TextBlock x:Name="TemplateNameValidationTextBlock"
                                   DockPanel.Dock="Right"
                                   Margin="5,0"
                                   Padding="5,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontStyle="Oblique"
                                   Foreground="Red"
                                   Text="{Binding SelectedTemplate.ValidationText}" />
                    </DockPanel>
                </Border>
            </StackPanel>
            <StackPanel Grid.Column="2"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button x:Name="CancelButton"
                        Margin="10,7,10,7"
                        Padding="5,0,5,0"
                        HorizontalAlignment="Stretch"
                        Click="CancelButton_Click"
                        Content="CANCEL"
                        FontSize="14"
                        IsCancel="True" />
                <Button x:Name="OkButton"
                        Margin="0,7,10,7"
                        Padding="5,0,5,0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding SelectedTemplate.OkCommand}"
                        Content="DONE"
                        FontSize="14"
                        IsDefault="True" />
            </StackPanel>
        </Grid>
    </Border>
</local:MpUserControl>
