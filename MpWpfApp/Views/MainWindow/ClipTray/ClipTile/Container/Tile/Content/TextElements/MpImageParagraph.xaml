<Paragraph x:Class="MpWpfApp.MpImageParagraph"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:local="clr-namespace:MpWpfApp"
           LineStackingStrategy="MaxHeight"
           mc:Ignorable="d"
           d:DataContext="{d:DesignInstance Type=local:MpClipTileViewModel,
                                            IsDesignTimeCreatable=False}">
    <Image x:Name="ContentImage"
           Loaded="ContentImage_Loaded"
           Source="{Binding CopyItemData,
                            Converter={StaticResource Base64StringToBitmapSourceConverter}}"
           Width="{Binding ClipTileContentDefaultWidth,
                           Source={x:Static local:MpMeasurements.Instance}}"
           Height="{Binding ClipTileContentDefaultHeight,
                            Source={x:Static local:MpMeasurements.Instance}}"
           Stretch="Uniform" />
</Paragraph>
