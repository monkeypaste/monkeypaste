<Paragraph
    x:Class="MpWpfApp.MpFileItemParagraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MpWpfApp"
    mc:Ignorable="d"
    TextAlignment="Left"
    Padding="3"
    Background="{Binding ItemBackgroundHexColor, Converter={StaticResource StringHexToBrushConverter}}"
    BorderBrush="{Binding ItemBorderBrushHexColor, Converter={StaticResource StringHexToBrushConverter}}"
    BorderThickness="{Binding ItemBorderBrushThickness}"
    local:MpHoverableExtension.IsEnabled="True"
    local:MpHoverableExtension.IsHovering="{Binding IsHovering, Mode=TwoWay}"
    FontSize="{Binding ClipTileFileListItemIconSize,
                       Source={x:Static local:MpMeasurements.Instance}}"
    FontFamily="{local:MpSettingBinding Path=DefaultFontFamily}"
    d:DataContext="{d:DesignInstance Type=local:MpContentItemViewModel,
                                     IsDesignTimeCreatable=False}">
    <InlineUIContainer BaselineAlignment="Bottom">
        <Image
            Stretch="Fill"
            Source="{Binding .,
                             Converter={StaticResource FileContentItemViewModelToImageSourceConverter}}"
            Width="{Binding ClipTileFileListItemIconSize,
                            Source={x:Static local:MpMeasurements.Instance}}"
            Height="{Binding ClipTileFileListItemIconSize,
                             Source={x:Static local:MpMeasurements.Instance}}" />
    </InlineUIContainer>
    <Run Text=" " />
    <Hyperlink
        IsEnabled="True"
        local:MpHoverableExtension.IsEnabled="True"
        local:MpHoverableExtension.HoverCursor="Hand"
        
        NavigateUri="{Binding CopyItemData}">
        <Run Text="{Binding CopyItemData, Converter={StaticResource StringPathToFileOrFolderNameConverter}}" />
    </Hyperlink>
</Paragraph>
