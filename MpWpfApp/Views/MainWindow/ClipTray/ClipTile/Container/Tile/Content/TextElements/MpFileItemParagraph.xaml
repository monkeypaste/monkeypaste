<Paragraph x:Class="MpWpfApp.MpFileItemParagraph"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:local="clr-namespace:MpWpfApp"
           mc:Ignorable="d"
           TextAlignment="Left"
           ToolTipService.InitialShowDelay="300"
           ToolTip="{Binding Path}"
           Padding="3"
           MouseLeftButtonUp="Paragraph_MouseLeftButtonUp"
           Background="{Binding FileItemBackgroundHexColor,
                                Converter={StaticResource StringHexToBrushConverter}}"
           BorderBrush="{Binding FileItemBorderHexColor,
                                 Converter={StaticResource StringHexToBrushConverter}}"
           BorderThickness="1"
           local:MpHoverableExtension.IsEnabled="True"
           local:MpHoverableExtension.IsHovering="{Binding IsHovering,
                                                           Mode=TwoWay}"
           local:MpHoverableExtension.HoverCursor="Hand"
           FontSize="{Binding ClipTileFileListItemIconSize,
                              Source={x:Static local:MpMeasurements.Instance}}"
           FontFamily="{local:MpSettingBinding Path=DefaultFontFamily}"
           d:DataContext="{d:DesignInstance Type=local:MpFileItemViewModel,
                                            IsDesignTimeCreatable=False}">
    <InlineUIContainer BaselineAlignment="Bottom">
        <Image Stretch="Fill"
               Source="{Binding Path,
                                Converter={StaticResource FilePathStringToImageSourceConverter}}"
               Width="{Binding ClipTileFileListItemIconSize,
                               Source={x:Static local:MpMeasurements.Instance}}"
               Height="{Binding ClipTileFileListItemIconSize,
                                Source={x:Static local:MpMeasurements.Instance}}" />
    </InlineUIContainer>
    <Run Text=" " />
    <Hyperlink IsEnabled="True"
               NavigateUri="{Binding Path,
                                     Converter={StaticResource FilePathToFolderPathConverter}}">
        <Run Text="{Binding Path,
                            Converter={StaticResource StringPathToFileOrFolderNameConverter}}" />
    </Hyperlink>
</Paragraph>
