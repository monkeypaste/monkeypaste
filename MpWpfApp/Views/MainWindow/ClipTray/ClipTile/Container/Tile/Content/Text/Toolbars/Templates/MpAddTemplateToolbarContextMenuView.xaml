<local:MpUserControl x:Class="MpWpfApp.MpAddTemplateToolbarButton"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     x:TypeArguments="local:MpTemplateCollectionViewModel"
                     x:Name="AddTemplateContextMenu"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     mc:Ignorable="d"
                     d:DataContext="{d:DesignInstance Type=local:MpTemplateCollectionViewModel,
                                                      IsDesignTimeCreatable=False}">
    <Button x:Name="AddButton"
            Click="AddButton_Click"
            IsEnabledChanged="AddButton_IsEnabledChanged"
            Template="{StaticResource FlatButtonControlTemplate}"
            ToolTip="Add Template">
        <!--<Button.ContextMenu>
            <ContextMenu Opened="AddTemplateContextMenu_Opened" />
        </Button.ContextMenu>-->
        <Image x:Name="AddButtonImage"
               SnapsToDevicePixels="True"
               Source="/Resources/Images/MpRichTextBox/templateadd.png"
               Stretch="None" />
    </Button>
</local:MpUserControl>
