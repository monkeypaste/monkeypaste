<Hyperlink x:Class="MpWpfApp.MpTemplateHyperlink"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
           xmlns:local="clr-namespace:MpWpfApp"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           d:DataContext="{d:DesignInstance Type=local:MpTemplateViewModel,
                                            IsDesignTimeCreatable=False}"
           IsEnabled="{Binding Parent.Parent.Parent.IsContentReadOnly,
                               Converter={StaticResource BoolFlipConverter}}"
           MouseEnter="Hyperlink_MouseEnter"
           MouseLeave="Hyperlink_MouseLeave"
           local:MpHoverableExtension.IsEnabled="True"
           local:MpHoverableExtension.IsHovering="{Binding IsHovering,
                                                           Mode=TwoWay}"
           PreviewMouseLeftButtonDown="Hyperlink_PreviewMouseLeftButtonDown"
           Background="{Binding TemplateBackgroundBrush}"
           Tag="{StaticResource TemplateHyperlinkTag}"
           TextDecorations="{x:Null}"
           mc:Ignorable="d">
    <Hyperlink.ContextMenu>
        <ContextMenu>
            <MenuItem Click="DeleteAll_Click"
                      Header="Delete All" />
        </ContextMenu>
    </Hyperlink.ContextMenu>
    <!--<Border CornerRadius="3"
            BorderThickness="1.5"
            Margin="0"
            Background="{Binding TemplateBackgroundBrush}"
            BorderBrush="{Binding TemplateBorderBrush}">
        <Border.RenderTransform>
            <TranslateTransform X="0"
                                Y="3" />
        </Border.RenderTransform>
        <TextBlock x:Name="TemplateTextBlock"
                   Text="{Binding TemplateDisplayValue}"
                   Foreground="{Binding TemplateForegroundBrush}"
                   Background="{Binding TemplateBackgroundBrush}" />
    </Border>-->
    <Hyperlink.Inlines>
        <Run Text="{Binding TemplateDisplayValue}"
             Foreground="{Binding TemplateForegroundBrush}" />
    </Hyperlink.Inlines>
</Hyperlink>
