<Hyperlink x:Class="MpWpfApp.MpTemplateHyperlink"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
           xmlns:local="clr-namespace:MpWpfApp"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           d:DataContext="{d:DesignInstance local:MpTemplateViewModel, IsDesignTimeCreatable=True}"
           Background="{Binding TemplateBackgroundBrush}"
           Cursor="Arrow"
           Foreground="{Binding TemplateForegroundBrush}"
           IsEnabled="True"
           Loaded="Hyperlink_Loaded"
           Unloaded="Hyperlink_Unloaded"           
           MouseEnter="Hyperlink_MouseEnter"
           MouseLeave="Hyperlink_MouseLeave"
           TextInput="Hyperlink_TextInput"
           PreviewMouseLeftButtonDown="Hyperlink_PreviewMouseLeftButtonDown"
           Tag="{Binding TemplateTokenTag}"
           TextDecorations="{x:Null}"
           mc:Ignorable="d">
    <Hyperlink.ContextMenu>
        <ContextMenu>
            <MenuItem Command="{Binding EditTemplateCommand}"
                      Header="Edit" />
            <MenuItem x:Name="ClipTileColorContextMenuItem"
                      Style="{StaticResource ColorPalleteMenuItemStyle}" />
            <MenuItem Click="DeleteAll_Click"
                      Header="Delete All" />
        </ContextMenu>
    </Hyperlink.ContextMenu>
    <Run Text="{Binding Path=TemplateDisplayValue}" />
</Hyperlink>
