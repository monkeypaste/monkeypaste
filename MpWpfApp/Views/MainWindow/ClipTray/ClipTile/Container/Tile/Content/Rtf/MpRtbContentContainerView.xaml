<local:MpUserControl x:Class="MpWpfApp.MpRtbContentContainerView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     x:TypeArguments="local:MpClipTileViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type={x:Type local:MpClipTileViewModel},
                                                      IsDesignTimeCreatable=False}">
    <Grid>
        <DockPanel x:Name="ContentListDockPanel"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
            <!--<Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>-->
            <local:MpRtbEditToolbarView x:Name="EditToolbarView"
                                        DockPanel.Dock="Top"
                                        Grid.Row="0"
                                        Visibility="{Binding IsContentReadOnly,
                                                             Converter={StaticResource BoolToVisibilityFlipConverter},
                                                             TargetNullValue=Collapsed,
                                                             FallbackValue=Collapsed}"
                                        DataContext="{Binding}" />
            <StackPanel Grid.Row="2"
                        DockPanel.Dock="Bottom">
                <local:MpFindReplaceToolbarView x:Name="FindAndReplaceView"
                                                Visibility="{Binding IsFindAndReplaceVisible,
                                                                     Converter={StaticResource BoolToVisibilityConverter}}"
                                                DataContext="{Binding}" />
                <local:MpEditTemplateToolbarView x:Name="EditTemplateView"
                                                 VerticalAlignment="Stretch"
                                                 Visibility="{Binding IsEditingTemplate,
                                                                      Converter={StaticResource BoolToVisibilityConverter},
                                                                      TargetNullValue=Collapsed,
                                                                      FallbackValue=Collapsed}"
                                                 DataContext="{Binding TemplateCollection.SelectedItem}" />
                <local:MpPasteTemplateToolbarView x:Name="PasteTemplateView"
                                                  Visibility="{Binding Parent.IsPastingTemplate,
                                                                       Converter={StaticResource BoolToVisibilityConverter},
                                                                       TargetNullValue=Collapsed,
                                                                       FallbackValue=Collapsed}"
                                                  DataContext="{Binding TemplateCollection}" />
            </StackPanel>
            <!--<GridSplitter DockPanel.Dock="Top"
                          Grid.Row="2" VerticalAlignment="Top"
                          HorizontalAlignment="Stretch"
                          local:MpHoverableExtension.IsEnabled="True"
                          local:MpHoverableExtension.HoverCursor="ResizeNS"
                          Background="Pink"
                          Height="3" />-->
            <local:MpRtbContentView x:Name="ContentView"
                                    Grid.Row="1"
                                    DataContext="{Binding}" />
        </DockPanel>
    </Grid>
</local:MpUserControl>
