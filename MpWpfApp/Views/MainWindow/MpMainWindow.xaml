<Window x:Class="MpWpfApp.MpMainWindow"
        x:Name="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:MpWpfApp"
        Title="MpMainWindow"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Top="0"
        Left="0"
        Visibility="Visible"
        Loaded="MainWindow_Loaded"
        Deactivated="MainWindow_Deactivated"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        WindowState="Normal"
        MouseLeftButtonDown="MainWindowCanvas_MouseLeftButtonDown"
        Height="{local:MpMeasurementsBinding WorkAreaBottom}"
        Width="{Binding MainWindowWidth}"
        d:DataContext="{d:DesignInstance Type=local:MpMainWindowViewModel,
                                         IsDesignTimeCreatable=False}">
    <Canvas x:Name="MainWindowCanvas"
            Height="{local:MpMeasurementsBinding ScreenHeight}"
            Width="{Binding MainWindowWidth}">
        <Grid x:Name="MainWindowGrid"
              Height="{Binding MainWindowHeight}"
              Width="{Binding MainWindowWidth}"
              Canvas.Top="{Binding MainWindowTop}"
              Canvas.Left="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="{local:MpMeasurementsBinding TitleMenuHeight}" />
                <RowDefinition Height="{local:MpMeasurementsBinding FilterMenuHeight}" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  System Tray  -->
            <local:MpSystemTrayView DataContext="{StaticResource SystemTrayViewModel}" />

            <!--  Title Menu  -->
            <local:MpTitleBarView x:Name="TitleBarView"
                                  Grid.Row="0"
                                  Background="{local:MpThemeColorsBinding Key=Title_Menu_Background_Color}"
                                  DataContext="{Binding}" />

            <!--  FilterMenu  -->
            <Grid Grid.Row="1"
                  Background="{local:MpThemeColorsBinding Key=Filter_Menu_Background_Color}">
                <!--<Grid.Background>
                    <SolidColorBrush Color="DarkViolet" Opacity="0.4"/>
                </Grid.Background>-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="1.15*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="1.8*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0">
                    <!--  Settings Button  -->
                    <Button x:Name="SettingsWindowButton"
                            Width="35"
                            Height="35"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Command="{Binding ShowSettingsWindowCommand,
                                              Source={StaticResource SystemTrayViewModel}}"
                            Template="{StaticResource SearchButtonControlTemplate}">
                        <Image Source="/Resources/Images/cog.png"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    </Button>
                    <!--  Lock Button  -->
                    <ToggleButton x:Name="ToggleMainWindowLockButton"
                                  Width="35"
                                  Height="35"
                                  Margin="5,0,0,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  IsChecked="{Binding IsMainWindowLocked}"
                                  Command="{Binding ToggleMainWindowLockCommand}"
                                  CommandParameter="{StaticResource True}"
                                  Template="{StaticResource LockToggleButtonControlTemplate}">
                        <Image Source="{Binding Source={StaticResource LockIcon},
                                                Converter={StaticResource StringToImageSourceConverter}}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    </ToggleButton>
                </StackPanel>
                <!--  Sort Combobox  -->
                <local:MpItemSortView x:Name="ItemSortView"
                                      Grid.Column="1"
                                      Visibility="{Binding ClipTrayViewModel.IsAnyTileExpanded,
                                                           Source={StaticResource MainWindowViewModel},
                                                           Converter={StaticResource BoolToVisibilityFlipConverter}}"
                                      DataContext="{Binding ClipTileSortViewModel}" />
                <!--  Tag Tray  -->
                <local:MpTagTrayView x:Name="TagTrayView"
                                     Grid.Column="2"
                                 Visibility="{Binding IsAnyTileExpanded,
                                                      Converter={StaticResource BoolToVisibilityFlipConverter},
                                                      Source={StaticResource ClipTrayViewModel}}"
                                 DataContext="{Binding TagTrayViewModel,
                                                       IsAsync=True}" />
                <!--  Search  -->
                <local:MpSearchBoxView x:Name="SearchView"
                                       Grid.Column="3"
                                       DataContext="{Binding SearchBoxViewModel}" />
            </Grid>

            <!--  3rd row row for tray  -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <local:MpSearchCriteriaListView x:Name="SearchDetailView"
                                                Grid.Row="0"
                                                Grid.ColumnSpan="2"
                                                DataContext="{Binding SearchBoxViewModel}" />
                <!--  Side bar AppState Buttons  -->
                <!--<local:MpAppModeButtonGridView Grid.Row="1"
                                               Grid.Column="0"
                                               Visibility="{Binding IsAnyTileExpanded,
                                                                    Source={StaticResource ClipTrayViewModel},
                                                                    Converter={StaticResource BoolToVisibilityFlipConverter}}"
                                               DataContext="{Binding AppModeViewModel}" />-->
                <local:MpSidebarMenuView x:Name="SidebarMenuView"
                                         Grid.Row="1"
                                         Grid.Column="0"
                                         HorizontalAlignment="Left"
                                         Height="{Binding ClipTrayHeight, Source={StaticResource ClipTrayViewModel}}"
                                         Background="{local:MpThemeColorsBinding Key=Tag_Tree_Background_Color}" />
                <!--<GridSplitter Background="Black"
                              Grid.Row="1"
                              Grid.Column="0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Stretch"
                              Width="3"
                              MouseEnter="GridSplitter_MouseEnter"
                              MouseLeave="GridSplitter_MouseLeave" />-->
                <local:MpClipTrayContainerView x:Name="ClipTrayView"
                                               Grid.Row="1"
                                               Grid.Column="1"
                                               DataContext="{Binding ClipTrayViewModel}" />
                <Grid Background="DarkGray"
                      Opacity="0.3"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Grid.Row="0"
                      Grid.Column="1"
                      Visibility="{Binding ProcessingVisibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <Label x:Name="LoadingLabel"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="30"
                           Content="Processing" />
                    <Viewbox Grid.Row="1"
                             Margin="20">
                        <local:MpSpinnerCogs />
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
    </Canvas>
</Window>
