<Window x:Class="MpWpfApp.MpMainWindow"
        x:Name="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:MpWpfApp"
        Title="MpMainWindow"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Top="0"
        Left="0"
        Visibility="Visible"
        Loaded="MainWindow_Loaded"
        Deactivated="MainWindow_Deactivated"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        WindowState="Normal"
        MouseLeftButtonDown="MainWindowCanvas_MouseLeftButtonDown"
        DataContext="{x:Static local:MpMainWindowViewModel.Instance}"
        Height="{local:MpMeasurementsBinding WorkAreaBottom}"
        Width="{Binding MainWindowWidth}"
        d:DataContext="{d:DesignInstance Type=local:MpMainWindowViewModel,
                                         IsDesignTimeCreatable=False}">
    <Canvas x:Name="MainWindowCanvas"
            Height="{local:MpMeasurementsBinding ScreenHeight}"
            Width="{Binding MainWindowWidth}">

        <i:Interaction.Behaviors>
            <local:MpExternalDropBehavior x:Name="ExternalDropBehavior" />
        </i:Interaction.Behaviors>
        <!--<AdornerDecorator>-->
        <Grid x:Name="MainWindowGrid"
              Height="{Binding MainWindowHeight,
                               Mode=TwoWay,
                               UpdateSourceTrigger=PropertyChanged,
                               NotifyOnSourceUpdated=True,
                               NotifyOnTargetUpdated=True}"
              Width="{Binding MainWindowWidth}"
              Canvas.Top="{Binding MainWindowTop}"
              Canvas.Left="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="{local:MpMeasurementsBinding TitleMenuHeight}" />
                <RowDefinition Height="{local:MpMeasurementsBinding FilterMenuHeight}" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  System Tray  -->
            <local:MpSystemTrayView DataContext="{x:Static local:MpSystemTrayViewModel.Instance}" />

            <!--  Title Menu  -->
            <Grid x:Name="TitleBarDockPanel"
                  Grid.Row="0"
                  local:MpHoverableExtension.IsEnabled="True"
                  local:MpHoverableExtension.HoverCursor="ResizeNS"
                  Background="{Binding .,
                                       Converter={StaticResource StringToThemeBrushConverter},
                                       ConverterParameter=Title_Menu_Background_Color}">

                <i:Interaction.Behaviors>
                    <local:MpResizeBehavior x:Name="MainWindowResizeBehvior"
                                            AffectsContent="True"
                                            BoundElement="{Binding ElementName=MainWindowGrid}"
                                            DoubleClickFrameworkElement="{Binding ElementName=FrameGripButton}"
                                            IsResizing="{Binding IsResizing,
                                                                 Mode=TwoWay,
                                                                 UpdateSourceTrigger=PropertyChanged,
                                                                 NotifyOnSourceUpdated=True,
                                                                 NotifyOnTargetUpdated=True}"
                                            CanResize="{Binding CanResize,
                                                                Mode=TwoWay,
                                                                UpdateSourceTrigger=PropertyChanged,
                                                                NotifyOnSourceUpdated=True,
                                                                NotifyOnTargetUpdated=True}"
                                            ResizableEdge1="Top"
                                            BoundHeight="{Binding MainWindowHeight,
                                                                  Mode=TwoWay,
                                                                  UpdateSourceTrigger=PropertyChanged,
                                                                  NotifyOnSourceUpdated=True,
                                                                  NotifyOnTargetUpdated=True}"
                                            DefaultHeight="{Binding MainWindowDefaultHeight,
                                                                    Source={x:Static local:MpMeasurements.Instance}}"
                                            MinHeight="{Binding MainWindowMinHeight,
                                                                Source={x:Static local:MpMeasurements.Instance}}"
                                            MaxHeight="{Binding MainWindowMaxHeight,
                                                                Source={x:Static local:MpMeasurements.Instance}}" />

                </i:Interaction.Behaviors>
                <TextBlock DockPanel.Dock="Left"
                           Text="{Binding LogText}" />
                <Button x:Name="FrameGripButton"
                        Style="{StaticResource FrameGripButton}">
                    <!--<Grid HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch" Background="Pink">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.25*" />
                                        <RowDefinition Height="0.5*" />
                                        <RowDefinition Height="0.25*" />
                                    </Grid.RowDefinitions>
                                    <Border x:Name="FrameGripTop" Background="Orange"
                                            Grid.Row="0" />
                                    <Border x:Name="FrameGripMiddle"
                                            Grid.Row="1">
                                        <Border.Background>

                                        </Border.Background>
                                    </Border>
                                    <Border x:Name="FrameGripBottom"
                                            Grid.Row="2" />
                                </Grid>-->
                </Button>
            </Grid>

            <!--  FilterMenu  -->
            <Grid Grid.Row="1"
                  Background="{Binding .,
                                       Converter={StaticResource StringToThemeBrushConverter},
                                       ConverterParameter=Filter_Menu_Background_Color}">
                <!--<Grid.Background>
                    <SolidColorBrush Color="DarkViolet" Opacity="0.4"/>
                </Grid.Background>-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="1.15*" />
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0">
                    <!--  Settings Button  -->
                    <Button x:Name="SettingsWindowButton"
                            Width="35"
                            Height="35"
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Command="{Binding ShowSettingsWindowCommand,
                                              Source={x:Static local:MpSystemTrayViewModel.Instance}}"
                            Template="{StaticResource SearchButtonControlTemplate}">
                        <Image Source="{Binding .,
                                                Source={StaticResource CogIcon},
                                                Converter={StaticResource StringResourceToImageSourceConverter}}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    </Button>
                    <!--  Lock Button  -->
                    <ToggleButton x:Name="ToggleMainWindowLockButton"
                                  Width="35"
                                  Height="35"
                                  Margin="5,0,0,0"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  IsChecked="{Binding IsMainWindowLocked}"
                                  Command="{Binding ToggleMainWindowLockCommand}"
                                  CommandParameter="{StaticResource True}"
                                  Template="{StaticResource LockToggleButtonControlTemplate}">
                        <Image Source="{Binding Source={StaticResource LockIcon},
                                                Converter={StaticResource StringResourceToImageSourceConverter}}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    </ToggleButton>
                </StackPanel>
                <!--  Sort Combobox  -->
                <local:MpItemSortView x:Name="ItemSortView"
                                      Grid.Column="1"
                                      DataContext="{x:Static local:MpClipTileSortViewModel.Instance}" />
                <!--  Tag Tray  -->
                <local:MpTagTrayView x:Name="TagTrayView"
                                     Grid.Column="2"
                                     DataContext="{x:Static local:MpTagTrayViewModel.Instance}" />
                <!--  Search  -->
                <local:MpSearchBoxView x:Name="SearchView"
                                       Grid.Column="3"
                                       DataContext="{x:Static local:MpSearchBoxViewModel.Instance}" />
            </Grid>

            <!--  3rd row row for tray  -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="{Binding Path=SearchCriteriaListBoxHeight,
                                                    Source={x:Static local:MpSearchBoxViewModel.Instance}}" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding TotalSidebarWidth,
                                                      Source={x:Static local:MpSidebarViewModel.Instance}}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <local:MpSearchCriteriaListBoxView x:Name="SearchDetailView"
                                                   Grid.Row="0"
                                                   Grid.ColumnSpan="2"
                                                   VerticalAlignment="Stretch"
                                                   VerticalContentAlignment="Stretch"
                                                   DataContext="{x:Static local:MpSearchBoxViewModel.Instance}" />
                <!--  Side bar AppState Buttons  -->

                <local:MpSidebarContainerView x:Name="SidebarMenuView"
                                              Grid.Row="1"
                                              Grid.Column="0"
                                              VerticalAlignment="Stretch"
                                              Height="{Binding ClipTrayHeight,
                                                               Source={x:Static local:MpClipTrayViewModel.Instance}}"
                                              DataContext="{x:Static local:MpSidebarViewModel.Instance}"
                                              HorizontalAlignment="Stretch"
                                              Background="{Binding .,
                                                                   Converter={StaticResource StringToThemeBrushConverter},
                                                                   ConverterParameter=Tag_Tree_Background_Color}" />
                <GridSplitter x:Name="SidebarGridSplitter"
                              DataContext="{x:Static local:MpSidebarViewModel.Instance}"
                              Background="Black"
                              Grid.Row="1"
                              Grid.Column="0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Stretch"
                              Width="5"
                              local:MpHoverableExtension.IsEnabled="True"
                              local:MpHoverableExtension.HoverCursor="ResizeWE"
                              IsEnabled="{Binding IsAnySidebarOpen}"
                              DragStarted="SidebarGridSplitter_DragStarted">
                    <i:Interaction.Behaviors>
                        <local:MpResizeBehavior x:Name="SidebarResizeBehvior"
                                                DoubleClickFrameworkElement="{Binding ElementName=SidebarGridSplitter}"
                                                IsResizing="{Binding IsResizing,
                                                                     Mode=TwoWay,
                                                                     UpdateSourceTrigger=PropertyChanged,
                                                                     NotifyOnSourceUpdated=True,
                                                                     NotifyOnTargetUpdated=True}"
                                                CanResize="{Binding CanResize,
                                                                    Mode=TwoWay,
                                                                    UpdateSourceTrigger=PropertyChanged,
                                                                    NotifyOnSourceUpdated=True,
                                                                    NotifyOnTargetUpdated=True}"
                                                ResizableEdge1="Right"
                                                BoundWidth="{Binding SidebarWidth,
                                                                     Mode=TwoWay,
                                                                     UpdateSourceTrigger=PropertyChanged,
                                                                     NotifyOnSourceUpdated=True,
                                                                     NotifyOnTargetUpdated=True}"
                                                DefaultWidth="{Binding VisibleSidebar.DefaultWidth}"
                                                MinWidth="{Binding MinSidebarWidth,
                                                                   Source={x:Static local:MpMeasurements.Instance}}" />

                    </i:Interaction.Behaviors>
                </GridSplitter>
                <local:MpClipTrayContainerView x:Name="ClipTrayView"
                                               Grid.Row="1"
                                               Grid.Column="1"
                                               DataContext="{x:Static local:MpClipTrayViewModel.Instance}" />
                <Grid Background="DarkGray"
                      Opacity="0.3"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Grid.Row="0"
                      Grid.Column="1"
                      Visibility="{Binding ProcessingVisibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <Label x:Name="LoadingLabel"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="30"
                           Content="Processing" />
                    <Viewbox Grid.Row="1"
                             Margin="20">
                        <local:MpSpinnerCogs />
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
        <!--</AdornerDecorator>-->
    </Canvas>
</Window>
