<UserControl x:Class="MpWpfApp.MpTemplateHyperlink"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:local="clr-namespace:MpWpfApp"
           mc:Ignorable="d">
    <TextBlock x:Name="TemplateTextBlock"
               Background="Transparent"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Cursor="{Binding TemplateTextBlockCursor}"
               Foreground="{Binding TemplateForegroundBrush}"
               Text="{Binding TemplateDisplayValue}">
            <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:CallMethodAction TargetObject="{Binding}"
                                    MethodName="TemplateHyperLink_Loaded" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
    </TextBlock>
</UserControl>
