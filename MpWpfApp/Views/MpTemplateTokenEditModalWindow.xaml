<Window x:Class="MpWpfApp.MpTemplateTokenEditModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MpWpfApp"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="300"
        Width="450"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:CallMethodAction MethodName="TemplateTokenModalWindow_Loaded"
                                TargetObject="{Binding}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Center"
               Content="Select Template" />
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="1">
            <Button x:Name="TemplateColorButton"
                    Background="{Binding SelectedTokenBrush, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                    Width="30"
                    Height="30"
                    VerticalAlignment="Top"
                    Margin="0,0,10,0"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Command="{Binding ChangeTemplateColorCommand}" />
            <StackPanel Orientation="Vertical">
                <TextBox x:Name="TemplateNameEditorTextBox"
                         Foreground="Black"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         BorderBrush="{Binding TemplateNameTextBoxBorderBrush}"
                         BorderThickness="{Binding TemplateNameTextBoxBorderBrushThickness}"
                         Text="{Binding SelectedTokenName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                         FontSize="18"
                         MinWidth="275"
                         IsReadOnly="False"
                         Padding="5,0,0,0"
                         Height="32" />
                <Label x:Name="TemplateNameValidationLabel"
                       Content="{Binding ValidationText}"
                       Visibility="{Binding ValidationVisibility}"
                       Foreground="Red"
                       FontStyle="Oblique"
                       VerticalContentAlignment="Top"
                       HorizontalContentAlignment="Stretch"
                       Padding="0,0,0,10"
                       Margin="15,0,0,0"
                       FontSize="12"
                       Width="300"
                       Height="24" />
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Margin="10,10,10,10"
                    Grid.Column="0"
                    FontSize="18"
                    Content="Cancel"
                    IsCancel="True"
                    HorizontalAlignment="Stretch"
                    Command="{Binding CancelCommand}" />
            <Button Margin="10,10,10,10.5"
                    Grid.Column="3"
                    FontSize="18"
                    Content="Ok"
                    HorizontalAlignment="Stretch"
                    Command="{Binding OkCommand}"
                    IsDefault="True" />
        </Grid>
    </Grid>
</Window>
