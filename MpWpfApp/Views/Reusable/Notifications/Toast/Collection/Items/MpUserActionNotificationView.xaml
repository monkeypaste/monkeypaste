<local:MpUserControl x:Class="MpWpfApp.MpUserActionNotificationView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:MpWpfApp"
                     xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                     x:TypeArguments="pcl:MpUserActionNotificationViewModel"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="800"
                     d:DataContext="{d:DesignInstance Type={x:Type pcl:MpUserActionNotificationViewModel},
                                                      IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="3"
                   Margin="10,0"
                   FontSize="16"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Text="{Binding Title}" />
        <Border Grid.Row="0"
                Grid.ColumnSpan="3"
                Margin="5,0,5,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                BorderThickness="0"
                Background="White"
                Height="1" />
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Left"
                   Margin="10,5,10,0"
                   TextWrapping="Wrap"
                   FontSize="12"
                   FontWeight="SemiBold"
                   Background="Transparent"
                   Focusable="True"
                   Foreground="{Binding NotificationTextForegroundColor,
                                        Converter={StaticResource StringHexToBrushConverter}}"
                   Text="{Binding Body}" />
        <local:MpSpinnerSwirl Grid.Row="2"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              Width="30"
                              Height="30"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Visibility="{Binding HasUserOptions,
                                                   Converter={StaticResource BoolToVisibilityFlipConverter}}" />
        <Button Grid.Row="2"
                Grid.Column="0"
                TabIndex="0"
                Margin="5"
                Visibility="{Binding ShowIgnoreButton,
                                     Converter={StaticResource BoolToVisibilityConverter}}"
                Command="{Binding IgnoreCommand}">
            <TextBlock FontWeight="SemiBold"
                       Text="IGNORE"
                       Padding="10,5" />
        </Button>
        <Button Grid.Row="2"
                Grid.Column="1"
                TabIndex="1"
                Visibility="{Binding ShowRetryButton,
                                     Converter={StaticResource BoolToVisibilityConverter}}"
                Margin="5"
                Command="{Binding RetryCommand}">
            <TextBlock FontWeight="SemiBold"
                       Text="RETRY"
                       Padding="10,5" />
        </Button>
        <Button Grid.Row="2"
                Grid.Column="2"
                TabIndex="2"
                Visibility="{Binding ShowShutdownButton,
                                     Converter={StaticResource BoolToVisibilityConverter}}"
                Margin="5"
                Command="{Binding ShutdownCommand}">
            <TextBlock FontWeight="SemiBold"
                       Text="EXIT"
                       Padding="10,5" />
        </Button>

    </Grid>
</local:MpUserControl>
