<Window x:Class="MpWpfApp.MpTextBoxMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MpWpfApp"
        mc:Ignorable="d"
        Height="450"
        Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        WindowState="Minimized"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        d:DataContext="{d:DesignInstance Type=local:MpMessageBoxViewModel,
                                         IsDesignTimeCreatable=True}">
    <Window.DataContext>
        <local:MpMessageBoxViewModel />
    </Window.DataContext>
    <Grid x:Name="grdMessageBox"
          Background="#33000B4B">
        <Border BorderBrush="MediumVioletRed"
                BorderThickness="10"
                HorizontalAlignment="Center"
                Height="250"
                Margin="0"
                VerticalAlignment="Center"
                Width="600"
                Background="White"
                CornerRadius="5">
            <Grid>

                <Button x:Name="btn1"
                        FontWeight="SemiBold"
                        Content="Save"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,161.429,28.714"
                        Width="91"
                        Height="30"
                        Background="#FFCFC9FF"
                        Foreground="#FF6F5DF5"
                        IsDefault="True"
                        Click="btn_Click" />
                <Button x:Name="btn2"
                        FontWeight="SemiBold"
                        Content="Cancel"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,30.429,27.714"
                        MinWidth="60"
                        Height="30"
                        IsCancel="True"
                        Click="btn_Click" Width="95" />
                <TextBlock x:Name="tbMessageBoxCaption"
                           FontWeight="SemiBold"
                           Margin="30,23,10,0"
                           TextWrapping="Wrap"
                           Text="{Binding Title}"
                           VerticalAlignment="Top"
                           FontFamily="Poppins"
                           FontSize="28" />
                <TextBox x:Name="MsgBoxTextBox"
                         Margin="30,80,175,0"
                         TextWrapping="Wrap"
                         Width="300"
                         BorderThickness="1"
                         BorderBrush="Black"
                         Text="{Binding Result,
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged,
                                        NotifyOnSourceUpdated=True,
                                        NotifyOnTargetUpdated=True}"
                         VerticalAlignment="Top"
                         FontFamily="Poppins"
                         FontSize="22" />
                <Image x:Name="imgMessageBoxCancel"
                       HorizontalAlignment="Right"
                       Height="103"
                       Margin="0,19,30,0"
                       VerticalAlignment="Top"
                       Stretch="Fill"
                       Width="100"
                       Source="{Binding ., Source={StaticResource SaveIcon},
                                        Converter={StaticResource StringToImageSourceConverter}}" />
                <Button x:Name="btnMessageBoxClose"
                        FontWeight="SemiBold"
                        Content="Fermer"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,0,30"
                        Visibility="Collapsed"
                        Click="btn_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>