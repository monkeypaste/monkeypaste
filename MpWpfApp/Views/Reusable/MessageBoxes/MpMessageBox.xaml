<Window x:Class="MpWpfApp.MpMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MpWpfApp"        
        mc:Ignorable="d"
        Height="450"
        Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        WindowState="Minimized"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Background="Transparent"
        d:DataContext="{d:DesignInstance Type=local:MpMessageBoxViewModel,
                                         IsDesignTimeCreatable=True}">
    <Window.DataContext>
        <local:MpMessageBoxViewModel/>
    </Window.DataContext>
    <Grid x:Name="grdMessageBox"
          Background="#33000B4B"
          Loaded="grdMessageBox_Loaded">
        <Border BorderBrush="MediumVioletRed"
                BorderThickness="10"
                HorizontalAlignment="Center"
                Height="250"
                Margin="0"
                VerticalAlignment="Center"
                Width="600"
                Background="White"
                CornerRadius="5">
            <Grid>
                <Button x:Name="btn1"
                        FontWeight="SemiBold"
                        Content="{Binding Button1}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,30,30"
                        MinWidth="60"
                        Height="30"
                        Click="btn_Click" />
                <Button x:Name="btn2"
                        FontWeight="SemiBold"
                        Content="{Binding Button2}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,100,30"
                        MinWidth="60"
                        Height="30"
                        Click="btn_Click" />
                <Button x:Name="btn3"
                        FontWeight="SemiBold"
                        Content="{Binding Button3}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,170,30"
                        Width="60"
                        Height="30"
                        Background="#FFCFC9FF"
                        Foreground="#FF6F5DF5"
                        Click="btn_Click" />
                <TextBlock x:Name="tbMessageBoxCaption"
                           FontWeight="SemiBold"
                           Margin="30,23,10,0"
                           TextWrapping="Wrap"
                           Text="{Binding Title}"
                           VerticalAlignment="Top"
                           FontFamily="Poppins"
                           FontSize="28" />
                <TextBlock x:Name="tbMessageBoxMessage"
                           Margin="30,80,175,0"
                           TextWrapping="Wrap"
                           Text="{Binding Caption}"
                           VerticalAlignment="Top"
                           FontFamily="Poppins"
                           FontSize="18"/>
                <Image x:Name="imgMessageBoxCancel"
                       HorizontalAlignment="Right"
                       Height="103"
                       Margin="0,19,30,0"
                       VerticalAlignment="Top"
                       Width="100"
                       Source="{Binding IconPath, Converter={StaticResource StringToImageSourceConverter}}"/>
                <Button x:Name="btnMessageBoxClose"
                        FontWeight="SemiBold"
                        Content="Fermer"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,0,30"
                        Visibility="Collapsed"
                        Click="btn_Click" />
            </Grid>
        </Border>
    </Grid>
</Window>