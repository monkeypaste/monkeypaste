<UserControl x:Class="MpWpfApp.MpTemplateTokenClipBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MpWpfApp"
             mc:Ignorable="d" >
    <local:MpClipBorder CornerRadius="3"
                        Margin="0"
                        Padding="1"
                        Focusable="True"
                        IsEnabled="True"
                        VerticalAlignment="Bottom"
                        Background="{Binding TemplateBorderBackgroundBrush}"
                        BorderBrush="Black"
                        BorderThickness="1">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:CallMethodAction TargetObject="{Binding}"
                                    MethodName="TemplateTextTokenEditableButton_Loaded" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Border.ContextMenu>
            <ContextMenu>
                <!--<MenuItem Header="Rename"
                          Command="{Binding RenameTagCommand}" />
                <MenuItem Header="Change Color"
                          Command="{Binding ChangeTagColorCommand}" />
                <MenuItem Header="Delete"
                          Command="{Binding TagTrayViewModel.DeleteTagCommand}" />-->
            </ContextMenu>
        </Border.ContextMenu>
        <Grid>
            <TextBlock x:Name="TemplateTextBlock"
                       Margin="0"
                       Padding="3"
                       Background="Transparent"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding TextBlockVisibility}"
                       FontWeight="SemiBold"
                       Foreground="{Binding TemplateTextColor}"
                       Text="{Binding TokenName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}">
            </TextBlock>
            <TextBox x:Name="TemplateTextBox"
                     Margin="0"
                     Background="White"
                     Foreground="Black"
                     IsReadOnly="False"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     local:MpTextBoxBehavior.SelectAllTextOnFocus="True"
                     Visibility="{Binding TextBoxVisibility}"
                     FontSize="12"
                     Text="{Binding TokenName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
        </Grid>
    </local:MpClipBorder>
</UserControl>
