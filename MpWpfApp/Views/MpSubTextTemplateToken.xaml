<UserControl x:Class="MpWpfApp.MpSubTextTemplateToken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MpWpfApp"
             mc:Ignorable="d" >
    <UserControl.DataContext>
        <local:MpSubTextTemplateTokenViewModel />
    </UserControl.DataContext>
    <local:MpClipBorder x:Name="TokenBorder"
                        CornerRadius="3"
                        Margin="5,0,5,0"
                        Padding="7,5,7,5"
                        Focusable="True"
                        VerticalAlignment="Center"
                        local:MpFocusExtension.IsFocused="{Binding IsFocused, Mode=TwoWay, NotifyOnSourceUpdated=True,UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding TokenBorderBackgroundBrush}"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Height="32">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:CallMethodAction TargetObject="{Binding}"
                                    MethodName="TemplateTextTokenEditableButton_Loaded" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <local:MpClipBorder.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Rename"
                          Command="{Binding RenameTagCommand}" />
                <MenuItem Header="Assign Hotkey"
                          InputGestureText="{Binding ShortcutKeyList}"
                          Command="{Binding AssignHotkeyCommand}" />
                <MenuItem Header="Change Color"
                          Command="{Binding ChangeTagColorCommand}" />
                <MenuItem Header="Delete"
                          Command="{Binding TagTrayViewModel.DeleteTagCommand}" />
            </ContextMenu>
        </local:MpClipBorder.ContextMenu>
        <Grid>
            <TextBlock x:Name="TemplateTextBlock"
                       Margin="5,0,0,0"
                       Background="Transparent"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{Binding TextBlockVisibility}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="{Binding TemplateTextColor}"
                       Text="{Binding TokenText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}">
            </TextBlock>
            <TextBox x:Name="TagTextBox"
                     Margin="5,0,0,0"
                     Background="White"
                     Foreground="Black"
                     IsReadOnly="False"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     local:MpFocusExtension.IsFocused="{Binding IsFocused}"
                     local:MpTextBoxBehavior.SelectAllTextOnFocus="True"
                     Visibility="{Binding TextBoxVisibility}"
                     FontSize="12"
                     Text="{Binding TokenText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" />
        </Grid>
    </local:MpClipBorder>
</UserControl>
