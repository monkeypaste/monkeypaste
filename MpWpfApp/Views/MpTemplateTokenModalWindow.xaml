<Window x:Class="MpWpfApp.MpTemplateTokenModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MpWpfApp"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="300"
        Width="450"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MpTemplateTokenModalWindowViewModel />
    </Window.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:CallMethodAction MethodName="TemplateTokenModalWindow_Loaded"
                                TargetObject="{Binding}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Stretch"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Center"
               Content="Select Template" />
        <Grid HorizontalAlignment="Center"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <ComboBox x:Name="TemplateSelectorComboBox"
                      Grid.Row="0"
                      MinWidth="100"
                      Margin="0,0,0,15"
                      FontSize="16"
                      HorizontalContentAlignment="Right"
                      SelectedItem="{Binding SelectedTokenHyperlink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                      ItemsSource="{Binding TemplateTokenHyperlinks}" />
            <StackPanel Orientation="Horizontal"
                        Grid.Row="1">
                <Button x:Name="TemplateColorButton"
                        Background="{Binding SelectedTokenBrush}"
                        Width="50"
                        Height="50"
                        Margin="0,0,10,0"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Command="{Binding ChangeTemplateColorCommand}" />
                <TextBox x:Name="TemplateNameEditorTextBox"
                         Foreground="Black"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         BorderBrush="Black"
                         BorderThickness="1"
                         Text="{Binding SelectedTokenName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                         FontSize="18"
                         MinWidth="275"
                         IsReadOnly="False"
                         Padding="5,0,0,0"
                         Height="40" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="37*" />
                <ColumnDefinition Width="29*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="37*" />
            </Grid.ColumnDefinitions>
            <Button Margin="10,10,10,10.5"
                    Grid.Column="0"
                    FontSize="18"
                    Content="Cancel"
                    IsCancel="True"
                    HorizontalAlignment="Stretch"
                    Command="{Binding CancelCommand}" />
            <Button Margin="10,10,10,10.5"
                    Grid.Column="1"
                    FontSize="18"
                    Content="Clear"
                    HorizontalAlignment="Stretch"
                    Command="{Binding ClearCommand}"
                    Grid.ColumnSpan="2" />
            <Button Margin="10,10,10,10.5"
                    Grid.Column="3"
                    FontSize="18"
                    Content="Ok"
                    HorizontalAlignment="Stretch"
                    Command="{Binding OkCommand}"
                    IsDefault="True" />
        </Grid>
    </Grid>
</Window>
