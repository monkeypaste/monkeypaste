<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:pcl="clr-namespace:MonkeyPaste;assembly=MonkeyPaste"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:s="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:MpWpfApp">
    <Style x:Key="{x:Type ToolTip}"
           TargetType="{x:Type ToolTip}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Visibility" Value="{TemplateBinding ToolTip, Converter={StaticResource IsNotNullToVisibilityConverter}}" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="HasDropShadow" Value="True" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="MaxWidth" Value="300" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="VerticalOffset" Value="0" />
        <Setter Property="Padding" Value="8" />


        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <StackPanel Margin="7,1">
                        <Border BorderBrush="DarkKhaki"
                                BorderThickness="1.5"
                                Padding="5"
                                CornerRadius="1"
                                Background="Khaki">
                            <!--<TextBlock Margin="1"
                                       Foreground="Black"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       TextWrapping="WrapWithOverflow"
                                       Text="{TemplateBinding ToolTip}" />-->

                            <ContentPresenter Margin="1"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top">
                                <ContentPresenter.Content>
                                    <TextBlock Margin="1"
                                               Foreground="Black"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               TextWrapping="WrapWithOverflow"
                                               Text="{Binding Tooltip}" />
                                </ContentPresenter.Content>
                            </ContentPresenter>
                        </Border>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>