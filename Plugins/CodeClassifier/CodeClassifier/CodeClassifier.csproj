<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Highlightjs\classifier.html" />
    <None Remove="Highlightjs\detector.js" />
    <None Remove="Highlightjs\detectorStyle.css" />
    <None Remove="Highlightjs\detector_old.js" />
    <None Remove="Highlightjs\highlightjs_packed.js" />
    <None Remove="manifest.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Highlightjs\classifier.html" />
    <EmbeddedResource Include="Highlightjs\detector.js" />
    <EmbeddedResource Include="Highlightjs\detector_old.js" />
    <EmbeddedResource Include="Highlightjs\detectorStyle.css" />
    <EmbeddedResource Include="Highlightjs\highlightjs_packed.js" />
    <EmbeddedResource Include="manifest.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Jint" Version="2.11.58" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\MonkeyPaste.Plugin\MonkeyPaste.Plugin.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if not exist &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot; md &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot;&#xD;&#xA;copy &quot;$(TargetPath)&quot; &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot;&#xD;&#xA;copy &quot;$(ProjectDir)manifest.json&quot; &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot;" />
  </Target>

</Project>
