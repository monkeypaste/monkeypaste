            "isDefault": true
          },
          {
            "label": "CSS",
            "value": "css",
            "isDefault": true
          },
          {
            "label": "HTML",
            "value": "html",
            "isDefault": true
          },
          {
            "label": "JavaScript",
            "value": "javascript",
            "isDefault": true
          },
          {
            "label": "Python",
            "value": "python",
            "isDefault": true
          },
          {
            "label": "Ruby",
            "value": "ruby",
            "isDefault": true
          }
