<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="web.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\MonkeyPaste.Plugin\MonkeyPaste.Plugin.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="web.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if not exist &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot; md &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot;&#xD;&#xA;xcopy /s /D /Y &quot;$(TargetDir)\*&quot; &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot;&#xD;&#xA;copy &quot;$(ProjectDir)*&quot; &quot;$(SolutionDir)MpWpfApp\bin\Debug\Plugins\$(ProjectName)&quot;&#xD;&#xA;" />
  </Target>

</Project>
